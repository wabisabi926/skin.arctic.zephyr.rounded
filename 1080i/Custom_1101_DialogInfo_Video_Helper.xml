<?xml version="1.0" encoding="UTF-8"?>
<window id="1101" type="dialog">
    <visible>[System.IdleTime(3) + !Skin.HasSetting(filter.video.only.local)] | [System.IdleTime(1) + Skin.HasSetting(filter.video.only.local)]</visible>

    <visible>Window.IsVisible(DialogVideoInfo.xml) + String.IsEmpty(Window(Home).Property(Init_Value_TMDb)) + !Window.IsVisible(DialogSelect.xml)</visible>

    <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.Property(tmdb_type),person)</visible>

    <visible>!$EXP[IsAnPlugin] | $EXP[IsTMDbHelper] | $EXP[IsPluginShortlist]</visible>

    <onload>ClearProperty(Set_Movie_TvShow_TMDb_id,Home)</onload>

    <onload condition="Skin.HasSetting(filter.video.only.local)">AlarmClock(Dialog_Info_Init_Value_TMDb,SetProperty(Init_Value_TMDb,1,Home),00:00,silent)</onload>

    <onload condition="!Skin.HasSetting(filter.video.only.local)">AlarmClock(Dialog_Info_Init_Value_TMDb,SetProperty(Init_Value_TMDb,1,Home),00:03,silent)</onload>

    <!-- ============ -->
    <!-- TMDB ON LINE -->
    <!-- ============ -->

    <!-- SEASONS / INFO / RECOMMENDED / SIMILAR / CREW -->

    <onload condition="String.IsEmpty(Window(Home).Property(Set_Movie_TvShow_TMDb_id))">SetProperty(Set_Movie_TvShow_TMDb_id,$VAR[Def_TMDb_ID],Home)</onload>

    <!-- ============ -->
    <!--  LOCAL ONLY  -->
    <!-- ============ -->

    <!-- DIRECTOR -->

    <onload condition="Skin.HasSetting(show.button.video.director) + Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + !String.IsEmpty(ListItem.Director) + String.Contains(ListItem.Director, / ) + String.IsEmpty(Window(Home).Property(SetDirectorSelected))">SetProperty(SetDirectorSelected,$VAR[Path_Director_Name],Home)</onload>

    <onload condition="Skin.HasSetting(show.button.video.director) + Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + !String.IsEmpty(ListItem.Director) + !String.Contains(ListItem.Director, / ) + String.IsEmpty(Window(Home).Property(SetDirectorSelected))">SetProperty(SetDirectorSelected,$INFO[ListItem.Director],Home)</onload>

    <!-- DIRECTOR - PERSON -->

    <onload condition="Skin.HasSetting(filter.video.only.local) + String.IsEqual(ListItem.Property(tmdb_type),person) + !String.IsEmpty(ListItem.Label) + String.IsEmpty(Window(Home).Property(SetDirectorSelected))">SetProperty(SetDirectorSelected,$INFO[ListItem.Label],Home)</onload>

    <!-- WRITER -->

    <onload condition="Skin.HasSetting(show.button.video.writer) + Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + !String.IsEmpty(ListItem.Writer) + String.Contains(ListItem.Writer, / ) + String.IsEmpty(Window(Home).Property(SetWriterSelected))">SetProperty(SetWriterSelected,$VAR[Path_Writer_Name],Home)</onload>

    <onload condition="Skin.HasSetting(show.button.video.writer) + Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + !String.IsEmpty(ListItem.Writer) + !String.Contains(ListItem.Writer, / ) + String.IsEmpty(Window(Home).Property(SetWriterSelected))">SetProperty(SetWriterSelected,$INFO[ListItem.Writer],Home)</onload>

    <!-- STUDIO -->

    <onload condition="!Skin.HasSetting(hide.button.video.studio) + Skin.HasSetting(filter.video.only.local) + !String.IsEmpty(ListItem.Studio) + String.Contains(ListItem.Studio, / ) + String.IsEmpty(Window(Home).Property(SetStudioSelected))">SetProperty(SetStudioSelected,$VAR[Path_Studio_Name],Home)</onload>

    <onload condition="!Skin.HasSetting(hide.button.video.studio) + Skin.HasSetting(filter.video.only.local) + !String.IsEmpty(ListItem.Studio) + !String.Contains(ListItem.Studio, / ) + String.IsEmpty(Window(Home).Property(SetStudioSelected))">SetProperty(SetStudioSelected,$INFO[ListItem.Studio],Home)</onload>

    <!-- ENCODE LABEL STUDIO -->

    <onload condition="!Skin.HasSetting(hide.button.video.studio) + Skin.HasSetting(filter.video.only.local)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.ListItem.Studio&amp;&amp;$INFO[Window(Home).Property(SetStudioSelected)]")</onload>

    <!-- SET -->

    <!-- ENCODE LABEL SET - FROM LOCAL -->

    <onload condition="Skin.HasSetting(show.button.video.set) + Skin.HasSetting(filter.video.only.local) + !String.IsEmpty(ListItem.DBID) + String.IsEqual(ListItem.DBType,movie) + !String.IsEmpty(ListItem.Set)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.ListItem.Set&amp;&amp;$INFO[ListItem.Set]")</onload>

    <!-- ENCODE LABEL SET - FROM TMDB HELPER -->

    <onload condition="Skin.HasSetting(show.button.video.set) + Skin.HasSetting(filter.video.only.local) + String.IsEmpty(ListItem.DBID) + String.IsEqual(ListItem.DBType,movie) + !String.IsEmpty(Window(Home).Property(TMDbHelper.ListItem.Set))">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.ListItem.Set&amp;&amp;$INFO[Window(Home).Property(TMDbHelper.ListItem.Set)]")</onload>

    <!-- ============ -->
    <!-- TMDB ON LINE -->
    <!-- ============ -->

    <!-- DIRECTOR -->

    <onload condition="Skin.HasSetting(show.button.video.director) + [!Skin.HasSetting(filter.video.only.local) | String.IsEmpty(ListItem.DBID)] + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + String.IsEmpty(Window(Home).Property(SetDirectorSelected))">SetProperty(SetDirectorSelected,$VAR[Path_Director_Name],Home)</onload>

    <onload condition="Skin.HasSetting(show.button.video.director) + [!Skin.HasSetting(filter.video.only.local) | String.IsEmpty(ListItem.DBID)] + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + String.IsEmpty(Window(Home).Property(Director_Query))">SetProperty(Director_Query,$VAR[Path_Director_TMDb_ID],Home)</onload>

    <!-- DIRECTOR - PERSON -->

    <onload condition="[!Skin.HasSetting(filter.video.only.local) | String.IsEmpty(ListItem.DBID)] + String.IsEqual(ListItem.Property(tmdb_type),person) + String.IsEmpty(Window(Home).Property(Director_Person_Query))">SetProperty(Director_Person_Query,$VAR[Path_Director_Person_TMDb_ID],Home)</onload>

    <!-- WRITER -->

    <onload condition="Skin.HasSetting(show.button.video.writer) + [!Skin.HasSetting(filter.video.only.local) | String.IsEmpty(ListItem.DBID)] + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + String.IsEmpty(Window(Home).Property(SetWriterSelected))">SetProperty(SetWriterSelected,$VAR[Path_Writer_Name],Home)</onload>

    <onload condition="Skin.HasSetting(show.button.video.writer) + [!Skin.HasSetting(filter.video.only.local) | String.IsEmpty(ListItem.DBID)] + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode)] + String.IsEmpty(Window(Home).Property(Writer_Query))">SetProperty(Writer_Query,$VAR[Path_Writer_TMDb_ID],Home)</onload>

    <!-- CREATOR -->

    <onload condition="!Skin.HasSetting(hide.button.tvshow.creator) + !Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season)] + String.IsEmpty(Window(Home).Property(SetCreatorSelected))">SetProperty(SetCreatorSelected,$VAR[Path_Creator_Name],Home)</onload>

    <onload condition="!Skin.HasSetting(hide.button.tvshow.creator) + !Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season)] + String.IsEmpty(Window(Home).Property(Creator_Query))">SetProperty(Creator_Query,$VAR[Path_Creator_TMDb_ID],Home)</onload>

    <!-- STUDIO (MOVIE) -->

    <onload condition="!Skin.HasSetting(hide.button.video.studio) + !Skin.HasSetting(filter.video.only.local) + !String.IsEmpty(ListItem.Studio) + String.IsEmpty(Window(Home).Property(SetStudioSelected))">SetProperty(SetStudioSelected,$VAR[Path_Studio_Name],Home)</onload>

    <onload condition="!Skin.HasSetting(hide.button.video.studio) + !Skin.HasSetting(filter.video.only.local) + String.IsEqual(ListItem.DBType,movie) + String.IsEmpty(Window(Home).Property(Studio_Query))">SetProperty(Studio_Query,$VAR[Path_Studio_TMDb_ID],Home)</onload>

    <!-- SET (MOVIE) -->

    <onload condition="Skin.HasSetting(show.button.video.set) + !Skin.HasSetting(filter.video.only.local) + String.IsEqual(ListItem.DBType,movie) + String.IsEmpty(Window(Home).Property(Set_Query))">SetProperty(Set_Query,$VAR[Path_Set_TMDb_ID],Home)</onload>

    <!-- NETWORK (TVSHOW) -->

    <onload condition="!Skin.HasSetting(hide.button.video.studio) + !Skin.HasSetting(filter.video.only.local) + [String.IsEqual(ListItem.DBType,tvshow) | String.IsEqual(ListItem.DBType,season) | String.IsEqual(ListItem.DBType,episode)] + String.IsEmpty(Window(Home).Property(Network_Query))">SetProperty(Network_Query,$VAR[Path_Network_TMDb_ID],Home)</onload>


<?xml version="1.0" encoding="UTF-8"?>
<window id="1122" type="dialog">

    <!-- Delay -->
    <visible>[!String.IsEmpty(Window(Home).Property(OSDVideoShow_AT_START_INFO)) + [[System.IdleTime(3) + Integer.IsEqual(Skin.String(Value_OSD_Auto_Hide_Timeout),3)] | [System.IdleTime(5) + Integer.IsEqual(Skin.String(Value_OSD_Auto_Hide_Timeout),5)] | [System.IdleTime(7) + Integer.IsEqual(Skin.String(Value_OSD_Auto_Hide_Timeout),7)] | [System.IdleTime(10) + Integer.IsEqual(Skin.String(Value_OSD_Auto_Hide_Timeout),10)]] + !Window.IsVisible(VideoOSD.xml) + !Player.Paused] + Integer.IsGreater(Player.Time(ss),3)</visible>

    <!-- Close Info -->
    <onload>Dialog.Close(DialogSeekBar)</onload>
    <onload>ClearProperty(OSDVideoShow_AT_START_INFO,Home)</onload>
    <controls/>
</window>

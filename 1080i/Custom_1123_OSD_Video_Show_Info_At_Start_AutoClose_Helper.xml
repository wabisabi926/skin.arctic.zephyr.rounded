<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1123">

    <!-- DELAY -->

    <visible>[!String.IsEmpty(Window(Home).Property(OSDVideo_Show_AT_START_INFO)) + [[System.IdleTime(3) + Integer.IsEqual(Skin.String(Value_Show_OSD_At_Start_Timeout),3)] | [System.IdleTime(5) + Integer.IsEqual(Skin.String(Value_Show_OSD_At_Start_Timeout),5)] | [System.IdleTime(7) + Integer.IsEqual(Skin.String(Value_Show_OSD_At_Start_Timeout),7)] | [System.IdleTime(10) + Integer.IsEqual(Skin.String(Value_Show_OSD_At_Start_Timeout),10)]] + !Window.IsVisible(VideoOSD.xml) + !Player.Paused] + Integer.IsGreater(Player.Time(ss),3)</visible>

    <!-- CLOSE INFO -->

    <onload>Dialog.Close(DialogSeekBar)</onload>
    <onload>ClearProperty(OSDVideo_Show_AT_START_INFO,Home)</onload>

    <controls/>
</window>

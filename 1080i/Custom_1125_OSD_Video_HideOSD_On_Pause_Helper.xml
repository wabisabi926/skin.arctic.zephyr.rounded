<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1125">

    <!-- OSDVIDEO_SHOW_AT_START_INFO HELPER -->

    <visible>Window.IsActive(fullscreenvideo) + Skin.HasSetting(hide.osd.video.on.pause) + Player.Paused  + !Window.IsVisible(videoosd) + String.IsEmpty(Window(Home).Property(OSDVideo_Show_AT_START_INFO)) + !Window.IsVisible(DialogFullScreenInfo.xml)</visible>

    <onload>SetProperty(OSDVideo_Hide_OSD_ON_PAUSE,1,Home)</onload>
    <onunload>AlarmClock(delayhideosd,ClearProperty(OSDVideo_Hide_OSD_ON_PAUSE,Home),00:01,silent)</onunload>
    <controls/>
</window>

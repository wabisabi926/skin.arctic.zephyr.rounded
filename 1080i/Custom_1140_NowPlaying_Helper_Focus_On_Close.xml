<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1140">
    <visible>$EXP[Extended_Now_Playing_Helper_AutoClose] | $EXP[Extended_Now_Playing_Helper_AutoShow]</visible>

    <!-- CLOSE NOW PLAYING -->

    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoClose]">Dialog.Close(all,true)</onload>
    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoClose] + !$EXP[Has_Home_Menu_Auto_Slide_Out_Animation]">SetFocus(300)</onload>
    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoClose] + $EXP[Has_Home_Menu_Auto_Slide_Out_Animation]">SetFocus(2011)</onload>
    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoClose]">ClearProperty(controlsvisible,Home)</onload>

    <!-- SHOW NOW PLAYING + CONTROLS HIDDEN -->

    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoShow] + !$EXP[Has_Home_Menu_Auto_Slide_Out_Animation] + Skin.HasSetting(hide.home.nowplaying.extended.osd.control.button)">SetFocus(300)</onload>
    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoShow] + $EXP[Has_Home_Menu_Auto_Slide_Out_Animation] + Skin.HasSetting(hide.home.nowplaying.extended.osd.control.button)">SetFocus(2011)</onload>

    <!-- SHOW NOW PLAYING + CONTROLS VISIBLE -->

    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoShow] + !Skin.HasSetting(hide.home.nowplaying.extended.osd.control.button)">SetFocus(777)</onload>

    <!-- CLEAR NOW PLAYING PROPERTY -->

    <onload condition="$EXP[Extended_Now_Playing_Helper_AutoShow]">ClearProperty(nowplaying.auto.show.timer,Home)</onload>

    <!-- SHOW NOW PLAYING -->

    <!-- <onload condition="$EXP[Extended_Now_Playing_Helper_AutoShow]">SetFocus(773)</onload> -->

    <controls />
</window>

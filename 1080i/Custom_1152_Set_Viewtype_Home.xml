<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1152">
    <defaultcontrol>11</defaultcontrol>

    <onload>SetProperty(SetViewHomeSelected,$VAR[View_Home_Selected],Home)</onload>
    <onunload>ClearProperty(SetViewHomeSelected,Home)</onunload>

    <controls>
        <include>Background_Overlay</include>

        <control type="group">

            <include content="Def_Dialog_Background"><param name="height" value="882" /><param name="width" value="1722" /></include>

            <include content="Def_Dialog_Header">
                <param name="label" value="31181" />
                <param name="icon" value="skinsettings" />
            </include>

            <control type="list" id="11">
                <include>Animation_Scrolltime_Views_List</include>

                <top>112</top>
                <left>16</left>
                <width>418</width>
                <height>700</height>

                <onup>11</onup>
                <ondown>11</ondown>

                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>0</itemgap>

                <itemlayout width="418" height="70">
                    <control type="label">
                        <left>30</left>
                        <width>310</width>
                        <height>70</height>
                        <font>Small</font>
                        <textcolor>PanelWhite100</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>!String.IsEqual(Window(Home).property(SetViewHomeSelected),ListItem.Label)</visible>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <width>310</width>
                        <height>70</height>
                        <font>Small</font>
                        <textcolor>$VAR[Color_List_Item_Selected]</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>String.IsEqual(Window(Home).property(SetViewHomeSelected),ListItem.Label)</visible>
                    </control>
                    <include content="Def_Button_Radio">
                        <param name="colordiffuse_off">Black70</param>
                        <param name="colordiffuse_on">$VAR[Color_List_Item_Selected]</param>
                        <param name="visible">String.IsEqual(Window(Home).property(SetViewHomeSelected),ListItem.Label)</param>
                    </include>
                </itemlayout>
                <focusedlayout width="418" height="70">

                    <!-- Item Focus Gradient -->

                    <include>Def_Focus_Item_Gradient</include>

                    <control type="label">
                        <left>30</left>
                        <width>310</width>
                        <height>70</height>
                        <font>Small</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <include content="Def_Button_Radio">
                        <param name="colordiffuse_off">Selected</param>
                        <param name="colordiffuse_on">Selected</param>
                        <param name="visible">String.IsEqual(Window(Home).property(SetViewHomeSelected),ListItem.Label)</param>
                    </include>
                </focusedlayout>

                <!-- VERTICAL MULTI WIDGETS FLIX -->

                <content>
                    <item id="1">
                        <label>$LOCALIZE[31182] $LOCALIZE[31004]</label>

                        <include>Def_Reset_View_types</include>
                        <onclick>Skin.SetBool(home.vertical)</onclick>
                        <onclick>Skin.SetBool(home.vertical.widgets)</onclick>
                        <onclick>Skin.SetBool(home.style.flix)</onclick>
                        <onclick>Skin.SetBool(hide.home.menu)</onclick>
                        <onclick>Skin.SetBool(hide.only.if.widgetcontainer.gets.focus)</onclick>

                        <onclick>Skin.SetBool(enable.blur.on.home)</onclick>

                        <onclick>Skin.SetBool(enable.blur.effect)</onclick>
                        <onclick>Skin.SetBool(enable.blur.effect.fake)</onclick>

                        <!-- <onclick>Skin.Reset(home.show.menu.icons)</onclick> -->
                        <onclick>Close</onclick>
                    </item>

                    <!-- VERTICAL MULTI WIDGETS -->

                    <item id="2">
                        <label>$LOCALIZE[31182]</label>

                        <include>Def_Reset_View_types</include>
                        <onclick>Skin.SetBool(home.vertical)</onclick>
                        <onclick>Skin.SetBool(home.vertical.widgets)</onclick>
                        <onclick>Skin.SetBool(hide.home.menu)</onclick>
                        <onclick>Skin.SetBool(hide.only.if.widgetcontainer.gets.focus)</onclick>

                        <onclick>Skin.Reset(enable.blur.on.home)</onclick>

                        <onclick>Skin.SetBool(enable.blur.effect)</onclick>
                        <onclick>Skin.SetBool(enable.blur.effect.fake)</onclick>

                        <!-- <onclick>Skin.Reset(home.show.menu.icons)</onclick> -->
                        <onclick>Close</onclick>
                    </item>

                    <!-- HORIZONTAL MULTI WIDGETS FLIX -->

                    <item id="3">
                        <label>$LOCALIZE[31212] $LOCALIZE[31004]</label>

                        <include>Def_Reset_View_types</include>
                        <onclick>Skin.SetBool(home.horizontal)</onclick>
                        <onclick>Skin.SetBool(home.vertical.widgets)</onclick>
                        <onclick>Skin.SetBool(home.style.flix)</onclick>
                        <onclick>Skin.Reset(hide.home.menu)</onclick>
                        <onclick>Skin.SetBool(hide.only.if.widgetcontainer.gets.focus)</onclick>

                        <onclick>Skin.SetBool(enable.blur.on.home)</onclick>

                        <onclick>Skin.SetBool(enable.blur.effect)</onclick>
                        <onclick>Skin.SetBool(enable.blur.effect.fake)</onclick>

                        <!-- <onclick>Skin.Reset(home.show.menu.icons)</onclick> -->
                        <onclick>Close</onclick>
                    </item>

                    <!-- HORIZONTAL MULTI WIDGETS -->

                    <item id="4">
                        <label>$LOCALIZE[31212]</label>

                        <include>Def_Reset_View_types</include>
                        <onclick>Skin.SetBool(home.horizontal)</onclick>
                        <onclick>Skin.SetBool(home.vertical.widgets)</onclick>
                        <onclick>Skin.Reset(hide.home.menu)</onclick>
                        <onclick>Skin.SetBool(hide.only.if.widgetcontainer.gets.focus)</onclick>

                        <onclick>Skin.Reset(enable.blur.on.home)</onclick>

                        <onclick>Skin.SetBool(enable.blur.effect)</onclick>
                        <onclick>Skin.SetBool(enable.blur.effect.fake)</onclick>

                        <!-- <onclick>Skin.Reset(home.show.menu.icons)</onclick> -->
                        <onclick>Close</onclick>
                    </item>

                    <!-- HORIZONTAL MINIMAL AND CLEAN -->

                    <item id="5">
                        <label>$LOCALIZE[31398]</label>

                        <include>Def_Reset_View_types</include>
                        <onclick>Skin.SetBool(home.horizontal)</onclick>
                        <onclick>Skin.SetBool(home.vertical.widgets)</onclick>
                        <onclick>Skin.SetBool(home.style.flix)</onclick>
                        <onclick>Skin.SetBool(home.style.horizontal.clean)</onclick>
                        <onclick>Skin.SetBool(no.homemenu.clear)</onclick>
                        <onclick>Skin.Reset(hide.home.menu)</onclick>
                        <onclick>Skin.SetBool(hide.only.if.widgetcontainer.gets.focus)</onclick>

                        <onclick>Skin.Reset(enable.blur.on.home)</onclick>

                        <onclick>Skin.SetBool(enable.blur.effect)</onclick>
                        <onclick>Skin.SetBool(enable.blur.effect.fake)</onclick>

                        <onclick>Close</onclick>
                    </item>
                </content>
            </control>

            <!-- LINE VERTICAL -->

            <include content="Def_Dialog_Line_Vertical"><param name="right" value="1272" /></include>

            <!-- VIEW TYPE ON RIGHT -->

            <include content="Def_Dialog_View_Type">
                <param name="texture" value="special://skin/extras/homemenu/$VAR[Def_Image_Home_Menu_View_type].jpg" />
            </include>

            <!-- NUM ITEMS -->

            <include>Def_Dialog_Select_label_Num_Item</include>

        </control>
    </controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1154">
    <defaultcontrol>11</defaultcontrol>

    <onload>SetProperty(view_types_pvr_channel_selected,$VAR[View_Types_PVR_Channel_Selected],Home)</onload>
    <onunload>ClearProperty(view_types_pvr_channel_selected,Home)</onunload>

    <controls>
        <include>Background_Overlay</include>

        <control type="group">
            <include content="Def_Dialog_Background"><param name="height" value="882" /><param name="width" value="1722" /></include>

            <include content="Def_Dialog_Header">
                <param name="label" value="$LOCALIZE[582]: $LOCALIZE[19023]" />
                <param name="icon" value="skinsettings" />
            </include>

            <control type="list" id="11">
                <include>Animation_Scrolltime_Views_List</include>

                <top>112</top>
                <left>16</left>
                <width>418</width>
                <height>700</height>

                <onup>11</onup>
                <ondown>11</ondown>

                <usecontrolcoords>true</usecontrolcoords>
                <itemgap>0</itemgap>

                <itemlayout width="418" height="70">
                    <control type="label">
                        <left>30</left>
                        <width>310</width>
                        <height>70</height>
                        <font>Small</font>
                        <textcolor>PanelWhite100</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>!String.IsEqual(Window(Home).property(view_types_pvr_channel_selected),ListItem.Label)</visible>
                    </control>
                    <control type="label">
                        <left>30</left>
                        <width>310</width>
                        <height>70</height>
                        <font>Small</font>
                        <textcolor>$VAR[Color_List_Item_Selected]</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>String.IsEqual(Window(Home).property(view_types_pvr_channel_selected),ListItem.Label)</visible>
                    </control>
                    <include content="Def_Button_Radio">
                        <param name="colordiffuse_off">Black70</param>
                        <param name="colordiffuse_on">$VAR[Color_List_Item_Selected]</param>
                        <param name="visible">String.IsEqual(Window(Home).property(view_types_pvr_channel_selected),ListItem.Label)</param>
                    </include>
                </itemlayout>
                <focusedlayout width="418" height="70">

                    <!-- Item Focus Gradient -->

                    <include>Def_Focus_Item_Gradient</include>

                    <control type="label">
                        <left>30</left>
                        <width>310</width>
                        <height>70</height>
                        <font>Small</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                    <include content="Def_Button_Radio">
                        <param name="colordiffuse_off">Selected</param>
                        <param name="colordiffuse_on">Selected</param>
                        <param name="visible">String.IsEqual(Window(Home).property(view_types_pvr_channel_selected),ListItem.Label)</param>
                    </include>
                </focusedlayout>

                <!-- VERTICAL MULTI WIDGETS FLIX -->

                <content>
                    <item id="1">
                        <label>535</label>
                        <onclick>Container.SetViewMode(50)</onclick>
                        <onclick>Close</onclick>
                    </item>

                    <!-- VERTICAL MULTI WIDGETS -->

                    <item id="2">
                        <label>31147</label>
                        <onclick>Container.SetViewMode(51)</onclick>
                        <onclick>Close</onclick>
                    </item>

                    <!-- HORIZONTAL MULTI WIDGETS FLIX -->

                    <item id="3">
                        <label>536</label>
                        <onclick>Container.SetViewMode(52)</onclick>
                        <onclick>Close</onclick>
                    </item>

                    <!-- HORIZONTAL MULTI WIDGETS -->

                    <item id="4">
                        <label>31217</label>
                        <onclick>Container.SetViewMode(54)</onclick>
                        <onclick>Close</onclick>
                    </item>

                    <!-- HORIZONTAL MINIMAL AND CLEAN -->

                    <item id="5">
                        <label>31316</label>
                        <onclick>Container.SetViewMode(55)</onclick>
                        <onclick>Close</onclick>
                    </item>

                    <item id="6">
                        <label>List Flix</label>
                        <onclick>Container.SetViewMode(526)</onclick>
                        <onclick>Close</onclick>
                    </item>
                </content>
            </control>

            <!-- LINE VERTICAL -->

            <include content="Def_Dialog_Line_Vertical"><param name="right" value="1272" /></include>

            <!-- VIEW TYPE ON RIGHT -->

            <include content="Def_Dialog_View_Type">
                <param name="texture" value="special://skin/extras/viewtypes_pvr_channel/$VAR[Def_Image_PVR_Channel_View_Type].png" />
            </include>

            <!-- NUM ITEMS -->

            <include>Def_Dialog_Select_label_Num_Item</include>

        </control>
    </controls>
</window>

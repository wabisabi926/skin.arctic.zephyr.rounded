<?xml version="1.0" encoding="UTF-8"?>
<window id="1157" type="dialog">
    <!-- Delay -->
    <visible>[System.IdleTime(1) + Integer.IsEqual(Window(Home).Property(wikipedia),2)] + Integer.IsGreater(Player.Time(ss),3) + !Window.IsVisible(script-wikipedia.xml)</visible>

    <!-- Play -->
    <!-- <onload>Dialog.Close(all)</onload> -->
    <onload>ClearProperty(wikipedia,Home)</onload>
    <onload condition="Skin.HasSetting(osd.open.auto.pause) + Skin.HasSetting(osd.open.auto.pause) + Player.Paused">PlayerControl(Play)</onload>
    <controls/>
</window>

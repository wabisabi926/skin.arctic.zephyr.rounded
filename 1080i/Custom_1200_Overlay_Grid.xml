<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1200">
    <zorder>10</zorder>
    <visible>!Window.IsVisible(startup) + Skin.HasSetting(DebugInfoGrid)</visible>
    <controls>

        <!-- GRID UNIVERSAL  -->

        <include content="Object_Control" condition="Skin.HasSetting(DebugInfoGrid)">
            <param name="control" value="group" />

            <!-- VERTICAL 40 PX LINES -->

            <control type="grouplist">
                <itemgap>grid_x04</itemgap>
                <orientation>vertical</orientation>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line</include>
                <include>Vert_Red_Line</include>
            </control>

            <!-- HORIZONTAL 40 PX LINES -->

            <control type="grouplist">
                <itemgap>grid_x04</itemgap>
                <orientation>horizontal</orientation>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
            </control>

            <!-- SCREEN PADDING LINES -->

            <control type="image">
                <top>grid_x08</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>grid_x08</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <left>grid_x08</left>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <right>grid_x08</right>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- OUTER BORDER LINES -->

            <control type="image">
                <top>grid_x12</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>grid_x12</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- INNER BORDER LINES -->

            <control type="image">
                <top>View_List_Top</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>View_List_Top</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- VIEW BORDER LINES -->

            <control type="image">
                <top>grid_x52</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>grid_x52</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- TROUGH LINES -->

            <control type="group">
                <height>View_List_Top</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>view_bar</height>
                    <control type="image">
                        <top>-grid_x01</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-grid_x01</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>
            <control type="group">
                <bottom>0</bottom>
                <height>View_List_Top</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>view_bar</height>
                    <control type="image">
                        <top>-grid_x01</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-grid_x01</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>

            <!-- CENTER LINES -->

            <control type="image">
                <centertop>50%</centertop>
                <height>1</height>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>
            <control type="image">
                <centerleft>50%</centerleft>
                <width>1</width>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>

        </include>

        <!-- GRID AZR -->

        <control type="group">
            <visible>Skin.HasSetting(DebugInfo.extended.grid)</visible>

            <control type="image">
                <left>View_List_Side</left>
                <width>1</width>
                <texture colordiffuse="magenta">common/white.png</texture>
            </control>
            <control type="image">
                <right>View_List_Side</right>
                <width>1</width>
                <texture colordiffuse="magenta">common/white.png</texture>
            </control>
            <control type="image">
                <top>View_List_Top</top>
                <height>1</height>
                <texture colordiffuse="magenta">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>View_List_Top</bottom>
                <height>1</height>
                <texture colordiffuse="magenta">common/white.png</texture>
            </control>

            <control type="group">
                <control type="image">
                    <bottom>255</bottom>
                    <height>1</height>
                    <width>1270</width>
                    <left>570</left>
                    <texture colordiffuse="magenta">common/white.png</texture>
                </control>
                <control type="image">
                    <left>570</left>
                    <width>1</width>
                    <texture colordiffuse="magenta">common/white.png</texture>
                </control>
                <control type="image">
                    <left>508</left>
                    <width>1</width>
                    <texture colordiffuse="magenta">common/white.png</texture>
                </control>
                <control type="image">
                    <left>782</left>
                    <width>1</width>
                    <texture colordiffuse="magenta">common/white.png</texture>
                </control>
                <control type="image">
                    <top>View_List_Side</top>
                    <height>1</height>
                    <texture colordiffuse="magenta">common/white.png</texture>
                </control>
                <control type="image">
                    <bottom>View_List_Side</bottom>
                    <height>1</height>
                    <texture colordiffuse="magenta">common/white.png</texture>
                </control>
            </control>
        </control>
    </controls>
</window>

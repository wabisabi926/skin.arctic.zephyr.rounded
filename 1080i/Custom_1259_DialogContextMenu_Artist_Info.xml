<?xml version="1.0" encoding="UTF-8"?>
<window id="1259" type="dialog">
    <visible>!String.IsEmpty(Window(Home).Property(Encoded.ListItem.artist)) + !String.IsEmpty(Window(Home).Property(ShowArtistInfo))</visible>

    <onload condition="!Container(998).IsUpdating + Integer.IsGreater(Container(998).NumItems,0)">SetFocus(998)</onload>
    <onload condition="!Container(998).IsUpdating + Integer.IsGreater(Container(998).NumItems,0)">Action(info)</onload>
    <onload condition="!Container(998).IsUpdating + Integer.IsGreater(Container(998).NumItems,0) + !Window.IsVisible(Home)">SetFocus(50)</onload>
    <onload condition="!Container(998).IsUpdating + Integer.IsGreater(Container(998).NumItems,0) + Window.IsVisible(Home)">SetFocus(300)</onload>

    <onunload>ClearProperty(ShowArtistInfo,Home)</onunload>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1261">
    <visible>Player.HasVideo</visible>
    <visible>!String.IsEmpty(Window(Home).Property(TrailerFullscreenIsPlaying)) | !String.IsEmpty(Window(Home).Property(VideoYoutubeIsPlaying))</visible>

    <onunload condition="Window.IsVisible(DialogVideoInfo.xml) + !String.IsEmpty(Window(Home).Property(TrailerFullscreenIsPlaying))">AlarmClock(Set_Delay_Focus,SetFocus(1224),00:00,silent)</onunload>
    <onunload condition="Window.IsVisible(DialogVideoInfo.xml) + !String.IsEmpty(Window(Home).Property(VideoYoutubeIsPlaying))">AlarmClock(Set_Delay_Focus,SetFocus(9004),00:00,silent)</onunload>
    <onunload condition="Window.IsVisible(DialogMusicInfo.xml)">AlarmClock(Set_Delay_Focus,SetFocus(9005),00:00,silent)</onunload>

    <onunload condition="!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + !Window.IsVisible(Home)">SetFocus(50)</onunload>
    <onunload condition="!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + Window.IsVisible(Home)">SetFocus(399)</onunload>

    <onunload>ClearProperty(TrailerFullscreenIsLaunched,Home)</onunload>
    <onunload>ClearProperty(TrailerFullscreenIsPlaying,Home)</onunload>
    <onunload>ClearProperty(VideoYoutubeIsPlaying,Home)</onunload>
    <onunload>ClearProperty(show_mini_osd,Home)</onunload>
    <controls/>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window id="1262" type="dialog">
    <visible>System.IdleTime(10) + !Player.HasVideo + String.IsEmpty(Window(Home).Property(Video_Youtube_Is_Ok)) + String.IsEmpty(Window(Home).Property(TMDbHelper.IsUpdating))</visible>
    <visible>!String.IsEmpty(Window(Home).Property(TrailerFullscreenIsPlaying)) | !String.IsEmpty(Window(Home).Property(VideoYoutubeIsPlaying))</visible>

    <onload condition="Window.IsVisible(DialogVideoInfo.xml) + !String.IsEmpty(Window(Home).Property(TrailerFullscreenIsPlaying))">AlarmClock(Set_Delay_Focus,SetFocus(1224),00:00,silent)</onload>
    <onload condition="Window.IsVisible(DialogVideoInfo.xml) + !String.IsEmpty(Window(Home).Property(VideoYoutubeIsPlaying))">AlarmClock(Set_Delay_Focus,SetFocus(9004),00:00,silent)</onload>
    <onload condition="Window.IsVisible(DialogMusicInfo.xml)">AlarmClock(Set_Delay_Focus,SetFocus(9005),00:00,silent)</onload>

    <onload condition="!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + !Window.IsVisible(Home)">SetFocus(50)</onload>
    <onload condition="!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + Window.IsVisible(Home)">SetFocus(399)</onload>

    <onload>ClearProperty(TrailerFullscreenIsPlaying,Home)</onload>
    <onload>ClearProperty(VideoYoutubeIsPlaying,Home)</onload>
    <onload>ClearProperty(show_mini_osd,Home)</onload>
    <controls/>
</window>

                </control>

                <!--  BLUR FAKE  -->

                <control type="radiobutton" id="97122">
                    <include>Def_Custom_Settings_Button_Gradient_Select_Left_Side</include>
                    <align>left</align>
                    <label>Enable Fake Blur</label>
                    <selected>Skin.HasSetting(enable.blur.effect.fake)</selected>
                    <onclick>Skin.ToggleSetting(enable.blur.effect.fake)</onclick>
                    <onclick condition="!Skin.HasSetting(enable.blur.effect.fake) + Skin.HasSetting(enabled.tmdb.helper.blur)">Skin.ToggleSetting(enabled.tmdb.helper.blur)</onclick>
                    <onclick condition="Skin.HasSetting(enable.blur.effect.fake) + !Skin.HasSetting(enabled.tmdb.helper.blur)">Skin.ToggleSetting(enabled.tmdb.helper.blur)</onclick>
                </control>

                <!--  BLUR TMDb Helper -->

                <control type="radiobutton" id="9444" description="Reset Skin to Defaults">
                    <include>Def_Custom_Settings_Button_Gradient_Select_Left_Side</include>
                    <label>Enable TMDb Blur</label>
                    <selected>Skin.HasSetting(enabled.tmdb.helper.blur)</selected>
                    <onclick>Skin.ToggleSetting(enabled.tmdb.helper.blur)</onclick>
                    <onclick condition="!Skin.HasSetting(enabled.tmdb.helper.blur) + Skin.HasSetting(enable.blur.effect.fake)">Skin.ToggleSetting(enable.blur.effect.fake)</onclick>
                    <onclick condition="Skin.HasSetting(enabled.tmdb.helper.blur) + !Skin.HasSetting(enable.blur.effect.fake)">Skin.ToggleSetting(enable.blur.effect.fake)</onclick>
                    <!-- <onclick>ReloadSkin()</onclick> -->

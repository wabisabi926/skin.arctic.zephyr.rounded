                    <label>Settings - best performance</label>
                    <onclick>ActivateWindow(1252)</onclick>
                </control>

                <!-- MODE PERF  -->

                <control type="radiobutton" id="9443" description="Reset Skin to Defaults">
                    <include>Def_Custom_Settings_Button_Gradient_Select_Left_Side</include>
                    <label>Enable mode perf</label>
                    <selected>Skin.HasSetting(set.skin.config.perf)</selected>
                    <onclick>Skin.ToggleSetting(set.skin.config.perf)</onclick>
                    <onclick condition="Skin.HasSetting(set.skin.config.perf)">Skin.SetBool(enabled.tmdb.helper.service)</onclick>
                    <onclick condition="Skin.HasSetting(set.skin.config.perf)">Skin.SetBool(enabled.tmdb.helper.crop)</onclick>
                    <!-- <onclick condition="Skin.HasSetting(set.skin.config.perf)">Skin.SetBool(enabled.tmdb.helper.blur)</onclick> -->
                    <!-- <onclick condition="Skin.HasSetting(set.skin.config.perf)">Skin.Reset(TMDbHelper.DisableArtwork)</onclick> -->
                    <onclick condition="Skin.HasSetting(set.skin.config.perf)">Skin.Reset(disable.all.hidden.list)</onclick>

                    <onclick condition="!Skin.HasSetting(set.skin.config.perf)">Skin.Reset(enabled.tmdb.helper.service)</onclick>
                    <onclick condition="!Skin.HasSetting(set.skin.config.perf)">Skin.Reset(enabled.tmdb.helper.crop)</onclick>
                    <!-- <onclick condition="!Skin.HasSetting(set.skin.config.perf)">Skin.Reset(enabled.tmdb.helper.blur)</onclick> -->
                    <!-- <onclick condition="!Skin.HasSetting(set.skin.config.perf)">Skin.SetBool(TMDbHelper.DisableArtwork)</onclick> -->
                    <onclick condition="!Skin.HasSetting(set.skin.config.perf)">Skin.SetBool(disable.all.hidden.list)</onclick>
                </control>

                <!-- DISABLE HIDDEN LIST -->

                <control type="radiobutton" id="94421" description="Settings best performance">
                    <include>Def_Custom_Settings_Button_Gradient_Select_Left_Side</include>
                    <label>Disable - all hidden list</label>
                    <selected>Skin.HasSetting(disable.all.hidden.list)</selected>
                    <onclick>Skin.ToggleSetting(disable.all.hidden.list)</onclick>

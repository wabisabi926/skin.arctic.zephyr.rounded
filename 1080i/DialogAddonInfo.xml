<?xml version="1.0" encoding="UTF-8"?>
<window id="146">
    <defaultcontrol always="true">9000</defaultcontrol>

	<onload condition="!ListItem.Property(addon.isinstalled) + Window.IsActive(addonbrowser)">SetFocus(6)</onload>

    <onload condition="Control.IsVisible(9)">AlarmClock(Set_Focus_9,SetFocus(9),00:00,silent)</onload>

    <onload condition="!Control.IsVisible(9) + Control.IsVisible(12)">AlarmClock(Set_Focus_12,SetFocus(12),00:00,silent)</onload>
    <!-- <onload condition="!Control.IsVisible(9) + Control.IsVisible(7)">AlarmClock(Set_Focus_7,SetFocus(7),00:00,silent)</onload> -->
    <!-- <onload condition="!Control.IsVisible(9) + !Control.IsVisible(7) + !Control.IsVisible(12)">AlarmClock(Set_Focus_14,SetFocus(14),00:00,silent)</onload> -->

    <!-- AUTOPLAY TRAILER -->

    <onload condition="Skin.HasSetting(home.views.flix.autoplay.trailer) + Skin.HasSetting(trailer.stop.on.dialogvideoinfo) + $EXP[Trailer_Is_Playing] + Player.Playing">Stop</onload>
    <onload condition="Skin.HasSetting(home.views.flix.autoplay.trailer) + Skin.HasSetting(trailer.pause.on.dialogvideoinfo) + $EXP[Trailer_Is_Playing] + Player.Playing">Pause</onload>

    <controls>
        <include>Background_Global</include>
        <include>Dialog_Addon_Info</include>
        <include condition="!Skin.HasSetting(hide.furniture.nowplaying.views)">Furniture_Header_NowPlaying</include>
        <include content="Def_Dialog_Info_Overlay">
            <param name="headerinfo" value="$INFO[ListItem.Label]" />
            <param name="plotinfo" value="$INFO[ListItem.AddonSummary,[B],[/B][CR][CR]]$INFO[ListItem.AddonDescription,,[CR][CR]]$INFO[ListItem.AddonNews]" />
        </include>
    </controls>
</window>

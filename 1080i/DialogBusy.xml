<?xml version="1.0" encoding="UTF-8"?>
<window id="136">
    <zorder>99</zorder>
    <onload>ClearProperty(down)</onload>
    <onunload>ClearProperty(down)</onunload>
    <allowoverlay>no</allowoverlay>
    <controls>
        <control type="group">
            <visible>!Window.IsVisible(Custom_1261_DialogInfo_Video_Trailer_Youtube_Fullscreen.xml)</visible>
            <visible>String.IsEmpty(Window(Home).Property(script.preshowexperience.running))</visible>
            <visible>String.IsEmpty(Window(Home).Property(Trailer_Fade_Background))</visible>
            <visible>!Skin.HasSetting(PlayTrailerWindowed) | [Skin.HasSetting(PlayTrailerWindowed) + !String.IsEqual(Window(Home).Property(moviecontent),6)]</visible>

            <animation effect="slide" start="0" end="0,-40" time="0" condition="Window.IsVisible(Home.xml) + !$EXP[View_Info_Dialog_Active]">Conditional</animation>

            <include>Animation_Fade_In</include>
            <include>Animation_Fade_Out</include>

            <include content="Furniture_Header_Busy">
                <param name="visible" value="Window.IsVisible(DialogBusy.xml) + ![[Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml) | Window.IsVisible(DialogAddonSettings.xml)] + !Window.IsVisible(script-wikipedia.xml)]" />
            </include>

            <include content="Furniture_Header_Busy">
                <param name="visible" value="Window.IsVisible(DialogBusy.xml) + Window.IsVisible(DialogAddonSettings.xml)" />
                <param name="top_spinner" value="30" />
                <param name="left_spinner" value="190" />
                <param name="top_label" value="70" />
                <param name="left_label" value="230" />
            </include>

            <include content="Furniture_Header_Busy">
                <param name="visible" value="Window.IsVisible(DialogBusy.xml) + [[Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml)] + !Window.IsVisible(script-wikipedia.xml)]" />
                <param name="colordiffuse_icon" value="B3dddddd" />
                <param name="colordiffuse_circle" value="FFdddddd" />
                <param name="color_label_main_header" value="$VAR[Color_OSD_Panel_White100]" />
                <param name="color_label_sub_header" value="$VAR[Color_OSD_Panel_White70]" />
            </include>
        </control>
    </controls>
</window>

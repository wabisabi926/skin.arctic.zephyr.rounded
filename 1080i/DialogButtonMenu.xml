                    </control>
                    <control type="label">
                        <left>84</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>74%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <font>Tiny</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>Control.HasFocus(3110)</visible>
                    </control>
                    <control type="image">
                        <top>8</top>
                        <left>16</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Dark2">$INFO[Container(300).ListItem.Icon]</texture>
                        <visible>!Control.HasFocus(3110)</visible>
                    </control>
                    <control type="label">
                        <left>84</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>74%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <font>Tiny</font>
                        <textcolor>Dark2</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>!Control.HasFocus(3110)</visible>
                    </control>
                </focusedlayout>

                <!-- SKINSHORTCUTS -->

                <content>
                    <include>skinshortcuts-group-powermenu</include>
                </content>
            </control>

            <!-- SCROLLBAR -->

            <include content="Object_Scrollbar_Dialog_Vertical">
                <param name="scrollid" value="1799" />
                <param name="onleft" value="3110" />
                <param name="onright" value="3110" />
                <param name="height" value="700" />
                <param name="centerright" value="4" />

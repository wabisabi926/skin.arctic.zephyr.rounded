                    <animation effect="slide" end="0,-350" time="0" condition="Integer.IsEqual(Container(3110).NumItems,3)">Conditional</animation>
                    <animation effect="slide" end="0,-420" time="0" condition="Integer.IsEqual(Container(3110).NumItems,2)">Conditional</animation>
                    <animation effect="slide" end="0,-490" time="0" condition="Integer.IsEqual(Container(3110).NumItems,1)">Conditional</animation>
                </control>
            </control>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">199</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,1)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">269</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,2)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">339</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,3)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">409</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,4)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">479</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,5)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">549</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,6)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">619</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,7)</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">689</param>
                <param name="visible">Integer.IsGreater(Container(3110).NumItems,7)</param>
            </include>

            <!-- HEADER -->

            <control type="group">
                <control type="label">
                    <include>Def_Dialog_Header_Title</include>
                    <label>31109</label>
                </control>

                <include>Def_Dialog_Header_Logo</include>
                <include>Def_Dialog_Header_Line</include>
            </control>

            <!-- LIST POWER MENU -->

            <control type="list" id="3110">
                <include>Animation_Scrolltime_Views_List</include>

                <top>112</top>
                <height min="100" max="560">auto</height>
                <bottom>17</bottom>
                <left>0</left>
                <right>0</right>

                <onup>3110</onup>
                <ondown>3110</ondown>
                <onleft>Close</onleft>
                <onright>1799</onright>
                <onback>300</onback>

                <orientation>vertical</orientation>
                <pagecontrol>1799</pagecontrol>

                <itemlayout width="566" height="70">
                    <control type="image">
                        <top>8</top>
                        <left>22</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Dark2">$INFO[Container(300).ListItem.Icon]</texture>
                    </control>
                    <control type="label">
                        <left>90</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>100%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <textcolor>Dark2</textcolor>
                        <include>Def_Button_Context</include>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="566" height="70">
                    <control type="image">
                        <left>16</left>
                        <right>16</right>
                        <height>100%</height>
                        <texture border="12">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/box_h.png</texture>

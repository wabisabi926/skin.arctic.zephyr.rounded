                <param name="visible" value="Integer.IsEqual(Container(3110).NumItems,9)" />
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height" value="829" />
                <param name="visible" value="Integer.IsGreater(Container(3110).NumItems,9)" />

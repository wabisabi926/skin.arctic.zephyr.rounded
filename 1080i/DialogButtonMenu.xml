            <include>Animation_Fade_Out</include>

            <top>200</top>
            <centerleft>50%</centerleft>
            <width>566</width>

            <!-- ARROWS -->

            <control type="group">
                <visible>Integer.IsGreater(Container(3110).NumItems,0)</visible>
                <control type="image">
                    <description>arrow image</description>
                    <centerleft>50%</centerleft>
                    <top>-24</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="White70" flipy="true">common/arrow-small.png</texture>
                </control>
                <control type="image">
                    <description>arrow image</description>
                    <centerleft>50%</centerleft>
                    <top>699</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="White70" flipy="false">common/arrow-small.png</texture>
                    <animation effect="slide" end="0,-70" time="0" condition="Integer.IsEqual(Container(3110).NumItems,7)">Conditional</animation>
                    <animation effect="slide" end="0,-140" time="0" condition="Integer.IsEqual(Container(3110).NumItems,6)">Conditional</animation>
                    <animation effect="slide" end="0,-210" time="0" condition="Integer.IsEqual(Container(3110).NumItems,5)">Conditional</animation>

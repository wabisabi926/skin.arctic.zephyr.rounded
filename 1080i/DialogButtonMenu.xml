<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">3110</defaultcontrol>
    <!-- <zorder>10</zorder> -->

    <onload condition="$EXP[Has_Home_Menu_Auto_Slide_Out_Animation]">CancelAlarm(slide_out,true)</onload>
    <onunload condition="$EXP[Has_Home_Menu_Auto_Slide_Out_Animation] + Window.IsVisible(Home)">AlarmClock(slide_out,SetFocus(2011),00:05,silent)</onunload>
    <onunload condition="!$EXP[Has_Home_Menu_Auto_Slide_Out_Animation] + Window.IsVisible(Home) + !$EXP[View_Info_Dialog] + !Window.IsVisible(DialogConfirm.xml)">SetFocus(399)</onunload>

    <controls>
        <include>Background_Overlay</include>

        <control type="group">
            <include>Animation_Dialog_Menu_Top_Side</include>

            <top>184</top>
            <centerleft>50%</centerleft>
            <width>566</width>

            <!-- ARROWS -->

            <include content="Object_Arrows_Dialog_Multi_Row"><param name="container_id">3110</param></include>

            <!-- BACKGROUND -->

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">199</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,1)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">269</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,2)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">339</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,3)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">409</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,4)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">479</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,5)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">549</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,6)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">619</param>
                <param name="visible">Integer.IsEqual(Container(3110).NumItems,7)</param>
            </include>

            <include content="Def_Dialog_Multi_Row_Background">
                <param name="height">689</param>
                <param name="visible">Integer.IsGreater(Container(3110).NumItems,7)</param>
            </include>

            <include content="Def_Dialog_Header">
                <param name="label" value="31109" />
                <param name="icon" value="power" />
            </include>

            <!-- LIST POWER MENU -->

            <control type="list" id="3110">
                <include>Animation_Scrolltime_Views_List</include>

                <top>112</top>
                <left>16</left>
                <height min="100" max="560">auto</height>
                <width>534</width>
                <bottom>17</bottom>


                <onup>3110</onup>
                <ondown>3110</ondown>
                <onleft>Close</onleft>
                <onright>1799</onright>
                <onback>300</onback>

                <pagecontrol>1799</pagecontrol>
                <orientation>vertical</orientation>

                <itemlayout width="534" height="70">
                    <control type="image">
                        <top>8</top>
                        <left>16</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Dark2">$INFO[Container(300).ListItem.Icon]</texture>
                    </control>
                    <control type="label">
                        <left>84</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>74%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <font>Tiny</font>
                        <textcolor>Dark2</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="534" height="70">

                    <!-- ITEM FOCUS GRADIENT -->

                    <include content="Def_Focus_Item_Gradient">
                        <param name="visible" value="Control.HasFocus(3110)" />
                    </include>

                    <control type="image">
                        <top>8</top>
                        <left>16</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Selected">$INFO[Container(300).ListItem.Icon]</texture>
                        <visible>Control.HasFocus(3110)</visible>
                    </control>
                    <control type="label">
                        <left>84</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>74%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <font>Tiny</font>
                        <textcolor>Selected</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>Control.HasFocus(3110)</visible>
                    </control>
                    <control type="image">
                        <top>8</top>
                        <left>16</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Dark2">$INFO[Container(300).ListItem.Icon]</texture>
                        <visible>!Control.HasFocus(3110)</visible>
                    </control>
                    <control type="label">
                        <left>84</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>74%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <font>Tiny</font>
                        <textcolor>Dark2</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>!Control.HasFocus(3110)</visible>
                    </control>
                </focusedlayout>

                <!-- SKINSHORTCUTS -->

                <content>
                    <include>skinshortcuts-group-powermenu</include>
                </content>
            </control>

            <!-- SCROLLBAR -->

            <include content="Object_Scrollbar_Dialog_Vertical">
                <param name="scrollid" value="1799" />
                <param name="onleft" value="3110" />
                <param name="onright" value="3110" />
                <param name="height" value="560" />
                <param name="centerright" value="4" />
            </include>
        </control>
    </controls>
</window>

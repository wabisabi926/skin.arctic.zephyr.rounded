            <!-- LIST POWER MENU -->

            <control type="list" id="3110">
                <include>Animation_Scrolltime_Views_List</include>

                <top>112</top>
                <left>16</left>
                <height min="100" max="700">auto</height>
                <width>534</width>
                <bottom>17</bottom>


                <onup>3110</onup>
                <ondown>3110</ondown>
                <onleft>Close</onleft>
                <onright>1799</onright>
                <onback>300</onback>

                <pagecontrol>1799</pagecontrol>
                <orientation>vertical</orientation>

                <itemlayout width="534" height="70">
                    <control type="image">
                        <top>8</top>
                        <left>16</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Dark2">$INFO[Container(300).ListItem.Icon]</texture>
                    </control>
                    <control type="label">
                        <left>84</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>74%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <font>Tiny</font>
                        <textcolor>Dark2</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout width="534" height="70">

                    <!-- ITEM FOCUS GRADIENT -->

                    <include content="Def_Focus_Item_Gradient">
                        <param name="visible" value="Control.HasFocus(3110)" />
                    </include>

                    <control type="image">
                        <top>8</top>
                        <left>16</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Selected">$INFO[Container(300).ListItem.Icon]</texture>

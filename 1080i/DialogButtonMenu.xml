                    <control type="image">
                        <top>8</top>
                        <left>22</left>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Dark2">$INFO[Container(300).ListItem.Icon]</texture>
                        <visible>!Control.HasFocus(3110)</visible>
                    </control>
                    <control type="label">
                        <left>90</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>100%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>

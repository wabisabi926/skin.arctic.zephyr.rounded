                    </control>
                    <control type="image">
                        <left>22</left>
                        <top>8</top>
                        <width>56</width>
                        <height>56</height>
                        <texture colordiffuse="Selected">$INFO[Container(300).ListItem.Icon]</texture>
                        <visible>Control.HasFocus(3110)</visible>
                    </control>
                    <control type="label">
                        <left>90</left>
                        <align>left</align>
                        <aligny>center</aligny>
                        <width>100%</width>
                        <height>100%</height>
                        <centertop>50%</centertop>
                        <textcolor>Selected</textcolor>
                        <include>Def_Button_Context</include>
                        <label>$INFO[ListItem.Label]</label>
                        <visible>Control.HasFocus(3110)</visible>

<?xml version="1.0" encoding="UTF-8"?>
<window id="106">
    <onload> ClearProperty(SlideHomeNowPlaying,Home)</onload>
    <onunload> ClearProperty(SlideHomeNowPlaying,Home)</onunload>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <origin x="0" y="0"/>
    </coordinates>
    <menucontrol>5050</menucontrol>
    <controls>
        <include condition="Skin.HasSetting(enabled.tmdb.helper.service)">Defs_TMDbHelper_Loader</include>
        <include>Background_Overlay</include>
        <control type="group">
            <include content="Animation_ZoomIn">
                <param name="windowopen_delay" value="400" />
            </include>

            <include content="Def_Dialog_Background"><param name="height" value="728" /><param name="width" value="1020" /></include>

            <!-- BACKGROUNG -->

            <control type="image">
                <width>1020</width>
                <height>728</height>
                <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/bigwiderolodex.png" fallback="DefaultAddonPicture.png">$VAR[Image_Fanart_Context_Menu]</texture>
                <animation effect="fade" end="10" start="100" time="100" condition="true" >Conditional</animation>
            </control>

            <!-- HEADER -->

            <control type="group">
                <right>0</right>
                <width>512</width>
                <top>0</top>
                <control type="label" id="2">
                    <include>Def_Dialog_Header_Title</include>
                    <label>$VAR[Label_Context_Menu_Header]</label>
                </control>
                <include>Def_Dialog_Header_Logo</include>
                <include>Def_Dialog_Header_Line</include>
            </control>

            <control type="button" id="5050">
                <include>Def_Hidden_Button</include>
                <onright>996</onright>
                <onleft>996</onleft>
                <onback>996</onback>
                <ondown>SetFocus(8601)</ondown>
                <ondown>Down</ondown>
                <ondown>SetFocus(5050)</ondown>
                <onup>SetFocus(8601)</onup>
                <onup>Up</onup>
                <onup>SetFocus(5050)</onup>
            </control>

            <!-- CONTEXT MENU LIST -->

            <control type="grouplist" id="996">
                <description>grouplist for context buttons</description>
                <animation condition="Control.HasFocus(5050)" effect="fade" end="0" start="100" time="250">Conditional</animation>
                <right>0</right>
                <width>510</width>
                <top>112</top>
                <onleft>5050</onleft>
                <onright>5050</onright>
                <height max="560">auto</height>
                <itemgap>0</itemgap>
                <include>Animation_Scrolltime_Views_List</include>
                <control type="button" id="1000">
                    <description>Buttons</description>
                    <width>510</width>
                    <!-- <font>SmallNavi</font> -->
                    <include>Def_Button_Gradient_Context</include>
                    <align>left</align>
                </control>
            </control>

            <!-- LINES VERTICAL -->

            <!-- <control type="image"> -->
                <!-- <right>510</right> -->
                <!-- <top>31</top> -->
                <!-- <bottom>31</bottom> -->
                <!-- <width>1</width> -->
                <!-- <texture colordiffuse="Black12">common/white.png</texture> -->
            <!-- </control> -->

             <!-- FOOTER TIPS -->

            <control type="group">
                <right>30</right>
                <width>452</width>
                <height>50</height>
                <bottom>15</bottom>
                <orientation>horizontal</orientation>
                <align>right</align>
                <itemgap>0</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <include>Animation_Furniture_Tip_Open</include>
                <control type="label">
                    <font>SymbolListMini</font>
                    <textcolor>Dark3</textcolor>
                    <label>&#62601;</label>
                </control>
                <control type="label">
                    <font>Mini</font>
                    <scroll>false</scroll>
                    <align>center</align>
                    <textcolor>Dark3</textcolor>
                    <label>$VAR[Label_Context_Menu_Footer_Tip]</label>
                </control>
                <control type="label">
                    <align>right</align>
                    <font>SymbolListMini</font>
                    <textcolor>Dark3</textcolor>
                    <label>&#62600;</label>
                </control>
            </control>

            <control type="group">
                <right>30</right>
                <width>452</width>
                <height>50</height>
                <bottom>15</bottom>
                <orientation>horizontal</orientation>
                <align>right</align>
                <itemgap>0</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <include>Animation_Furniture_Tip</include>
                <control type="label">
                    <font>SymbolListMini</font>
                    <textcolor>Dark3</textcolor>
                    <label>&#62601;</label>
                </control>
                <control type="label">
                    <font>Mini</font>
                    <scroll>false</scroll>
                    <align>center</align>
                    <textcolor>Dark3</textcolor>
                    <label>$VAR[Label_Context_Menu_Footer_Tip]</label>
                </control>
                <control type="label">
                    <align>right</align>
                    <font>SymbolListMini</font>
                    <textcolor>Dark3</textcolor>
                    <label>&#62600;</label>
                </control>
            </control>

             <!-- PLOT -->

            <control type="textbox" id="8600">
                <animation effect="fade" end="100" start="0" time="250" delay="300">Visible</animation>
                <visible>Control.HasFocus(5050)</visible>
                <top>112</top>
                <right>30</right>
                <width>448</width>
                <height>520</height>
                <font>SmallNavi</font>
                <textcolor>Dark2</textcolor>
                <align>left</align>
                <pagecontrol>8601</pagecontrol>
                <label fallback="19055">$VAR[Label_Overlay_Plot]</label>
            </control>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="8601">
                <width>1</width>
                <height>1</height>
                <visible allowhiddenfocus="true">false</visible>
            </control>

             <!-- ARROW -->

            <control type="group">
                <visible>Control.HasFocus(5050) + Container(8600).HasNext</visible>
                <animation effect="fade" end="100" start="0" time="250" delay="300">Visible</animation>
                <include>Animation_FadeIn</include>
                <left>756</left>
                <top>660</top>
                <control type="image">
                    <top>0</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="Dark2" flipy="false">common/arrow-small.png</texture>
                </control>
            </control>

            <!-- ART POSTER -->

            <control type="group" description="Poster">
                <visible>$EXP[Exp_ContextMenu_HasPoster]</visible>
                <left>41</left>
                <top>41</top>
                <control type="image">
                    <left>-23</left>
                    <top>-23</top>
                    <width>PosterShadowW</width>
                    <height>682</height>
                    <texture border="40" infill="false">common/$VAR[shadow40]</texture>
                    <animation condition="true" effect="fade" end="80" start="100" time="0">Conditional</animation>
                    <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                </control>
                <control type="image">
                    <width>PosterW</width>
                    <height>635</height>
                    <texture border="12" colordiffuse="Fallback">common/box.png</texture>
                </control>
                <control type="image">
                    <width>PosterW</width>
                    <height>635</height>
                    <fadetime>PosterFanartFadetime</fadetime>
                    <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                    <texture diffuse="diffuse/listposter2.png" background="true">$VAR[Image_Poster_Context_Menu]</texture>
                </control>
            </control>

            <!-- ART SQUARE -->

            <control type="group" description="Poster">
                <visible>!$EXP[Exp_ContextMenu_HasPoster]</visible>
                <left>41</left>
                <top>41</top>
                <control type="image">
                    <left>-23</left>
                    <top>-23</top>
                    <width>PosterShadowW</width>
                    <height>474</height>
                    <texture border="40" infill="false">common/$VAR[shadow40]</texture>
                    <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                </control>
                <control type="image">
                    <width>PosterW</width>
                    <height>PosterW</height>
                    <texture border="12" colordiffuse="Fallback">common/box.png</texture>
                </control>
                <control type="image">
                    <width>PosterW</width>
                    <height>PosterW</height>
                    <fadetime>PosterFanartFadetime</fadetime>
                    <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                    <texture diffuse="diffuse/sideposter_square.png"  background="true">$VAR[Image_Poster_Context_Menu]</texture>
                </control>
            </control>
        </control>
    </controls>
</window>

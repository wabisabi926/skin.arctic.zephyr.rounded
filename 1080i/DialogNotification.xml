<?xml version="1.0" encoding="UTF-8"?>
<window id="107">
    <controls>
        <control type="group">
            <visible>!Window.IsVisible(Custom_1101_Startup.xml)</visible>
            <visible>!Window.IsVisible(DialogVolumeBar.xml) | Player.Muted</visible>
            <visible>$EXP[OSD_Video_Music_Full_Screen_Visible] | !$EXP[OSD_Video_Music_Full_Screen_Visible]</visible>

            <include>Animation_Fade_In</include>
            <include>Animation_Fade_Out</include>
            <include>Animation_Slide_Home_Dialog</include>

            <top>40</top>
            <right>40</right>
            <height>160</height>
            <width>740</width>

            <include content="Def_Image_Background_Notification">
                <param name="colordiffuse" value="$VAR[Color_OSD_Panel]" />
                <param name="condition_fade" value="true" />
                <param name="visible" value="VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)" />
            </include>
            <include content="Def_Image_Background_Notification">
                <param name="colordiffuse" value="White70" />
                <param name="visible" value="![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
            </include>

            <control type="group">
                <top>40</top>
                <right>40</right>
                <height>40</height>
                <width>660</width>

                <!-- OSD - TOGGLE SUBTITLE -->

                <include content="Def_Image_Notification">
                    <param name="texture_diffuse" value="circle_72" />
                    <param name="color_diffuse" value="0" />
                    <param name="aspectratio" value="center" />
                    <param name="texture" value="$VAR[Image_OSD_Flag_Lang]" />
                    <param name="visible" value="[VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)] + String.StartsWith(Control.GetLabel(401),$LOCALIZE[459])" />
                </include>

                <!-- OSD - TOGGLE AUDIO -->

                <include content="Def_Image_Notification">
                    <param name="texture_diffuse" value="circle_72" />
                    <param name="color_diffuse" value="0" />
                    <param name="aspectratio" value="center" />
                    <param name="texture" value="$INFO[VideoPlayer.AudioLanguage,flags/lang/100x100/,.png]" />
                    <param name="visible" value="[VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)] + String.StartsWith(Control.GetLabel(401),$LOCALIZE[460])" />
                </include>

                <!-- KODI INFO -->

                <include content="Def_Image_Notification">
                    <param name="texture_diffuse" value="circle_72" />
                    <param name="color_diffuse" value="Dark2" />
                    <param name="texture" value="$INFO[Control.GetLabel(400)]" />
                    <param name="visible" value="String.StartsWith(Control.GetLabel(400),DefaultIconInfo) + ![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
                </include>

                <!-- KODI WARNING -->

                <include content="Def_Image_Notification">
                    <param name="texture_diffuse" value="circle_72" />
                    <param name="color_diffuse" value="FFFFD800" />
                    <param name="texture" value="$INFO[Control.GetLabel(400)]" />
                    <param name="visible" value="String.StartsWith(Control.GetLabel(400),DefaultIconWarning) + ![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
                </include>

                <!-- KODI ERROR -->

                <include content="Def_Image_Notification">
                    <param name="texture_diffuse" value="circle_72" />
                    <param name="color_diffuse" value="FFC50F0F" />
                    <param name="texture" value="$INFO[Control.GetLabel(400)]" />
                    <param name="visible" value="String.StartsWith(Control.GetLabel(400),DefaultIconError) + ![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
                </include>

                <!-- OTHERS -->

                <include content="Def_Image_Notification">
                    <param name="texture_diffuse" value="circle_72" />
                    <param name="color_diffuse" value="0" />
                    <param name="texture" value="$INFO[Control.GetLabel(400)]" />
                    <param name="visible" value="!String.StartsWith(Control.GetLabel(400),Default) + ![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
                </include>

                <control type="label" id="401">
                    <top>12</top>
                    <left>104</left>
                    <width>536</width>
                    <height>24</height>
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                    <scroll>true</scroll>
                    <scrollspeed>60</scrollspeed>
                </control>
                <control type="label" id="402">
                    <top>44</top>
                    <left>104</left>
                    <width>536</width>
                    <height>24</height>
                    <aligny>center</aligny>
                    <font>Small24</font>
                    <textcolor>$VAR[Color_Label_Dialog_Notification_Sub_Title]</textcolor>
                    <scroll>true</scroll>
                    <scrollspeed>60</scrollspeed>
                </control>
            </control>
        </control>
        <control type="image" id="400">
            <visible>true</visible>
            <height>1</height>
            <width>1</width>
        </control>
    </controls>
</window>

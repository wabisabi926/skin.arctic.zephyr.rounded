<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    <controls>
        <include content="Background_Overlay">
            <param name="colordiffuse" value="$VAR[Color_OSD_Background_Overlay]" />
            <param name="visible" value="true" />
        </include>

        <!-- CLOCK -->

        <!-- <include>Object_OSD_Clock</include> -->

        <control type="group">
            <include>Animation_Slide_Menu</include>

            <top>20</top>
            <left>20</left>

            <!-- BACKGROUND -->

            <control type="image">
                <width>668</width>
                <height>1040</height>
                <colordiffuse>$VAR[Color_OSD_Background_Dialog]</colordiffuse>
                <texture border="24">common/box24.png</texture>
                <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
            </control>

            <!-- HEADER -->

            <control type="image">
                <left>530</left>
                <top>-4</top>
                <width>128</width>
                <height>128</height>
                <texture>special://skin/extras/icons/livetv.png</texture>
                <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                <visible>String.IsEmpty(Player.Art(thumb))</visible>
            </control>
            <control type="image">
                <left>498</left>
                <top>28</top>
                <width>128</width>
                <height>64</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>$INFO[Player.Art(thumb)]</texture>
            </control>
            <control type="label">
                <left>33</left>
                <top>10</top>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[Color_OSD_Panel_White100]</textcolor>
                <font>Medium</font>
                <label>$INFO[VideoPlayer.ChannelName]</label>
            </control>
            <control type="label">
                <left>33</left>
                <top>44</top>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[Color_OSD_Panel_White70]</textcolor>
                <font>Tiny</font>
                <label>$INFO[System.Time] - $INFO[System.Date]</label>
            </control>
            <control type="image">
                <left>30</left>
                <top>120</top>
                <width>607</width>
                <height>1</height>
                <align>left</align>
                <colordiffuse>$VAR[Color_OSD_Dialog_Line]</colordiffuse>
                <texture>common/white.png</texture>
            </control>

            <!-- CHANNEL GUIDE LIST -->

            <control type="fixedlist" id="11">
                <include>Animation_Scrolltime_Views_List</include>

                <top>136</top>
                <left>16</left>
                <width>635</width>
                <height>892</height>

                <movement>6</movement>
                <focusposition>1</focusposition>
                <orientation>vertical</orientation>

                <itemlayout height="111.5" width="635">
                    <control type="image">
                        <include content="Def_Padding"><param name="pad">5</param></include>
                        <texture border="12">common/selected_rounded.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                        <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                    </control>

                    <control type="group">
                        <top>10</top>
                        <left>10</left>
                        <width>158</width>
                        <height>92</height>

                        <include content="Def_Art_Full_Background_b12">
                            <param name="pad_image" value="0" />
                            <param name="colordiffuse" value="Fallback" />
                            <param name="condition_fade" value="false" />
                            <param name="visible_shadow" value="false" />
                        </include>

                        <control type="image">
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/epg_w158_h92.png" background="false">$VAR[Image_Fanart_EPG]</texture>
                        </control>
                    </control>

                    <control type="label">
                        <top>5</top>
                        <left>190</left>
                        <right>22</right>
                        <align>left</align>
                        <textcolor>$VAR[Color_OSD_Panel_White70]</textcolor>
                        <selectedcolor>$VAR[Color_OSD_Panel_White70]</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <left>190</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>$VAR[Color_OSD_Panel_White30]</textcolor>
                        <selectedcolor>$VAR[Color_OSD_Panel_White30]</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                    <control type="image">
                        <width>128</width>
                        <height>128</height>
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout height="111.5" width="635">

                    <include>Def_Focus_Item_Gradient</include>

                    <control type="image">
                        <include content="Def_Padding"><param name="pad">5</param></include>
                        <texture border="12">common/selected_rounded.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>Selected</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>

                    <control type="group">
                        <top>10</top>
                        <left>10</left>
                        <width>158</width>
                        <height>92</height>

                        <include content="Def_Art_Full_Background_b12">
                            <param name="pad_image" value="0" />
                            <param name="colordiffuse" value="Fallback" />
                            <param name="condition_fade" value="false" />
                            <param name="visible_shadow" value="false" />
                        </include>

                        <control type="image">
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/epg_w158_h92.png" background="false">$VAR[Image_Fanart_EPG]</texture>
                        </control>
                    </control>

                    <control type="label">
                        <top>5</top>
                        <left>190</left>
                        <right>22</right>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <left>190</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>

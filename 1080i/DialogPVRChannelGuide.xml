<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    <controls>
        <control type="group">
            <include>Animation_Slide_Menu</include>
            <control type="image">
                <left>-1</left>
                <top>-1</top>
                <width>668</width>
                <height>1082</height>
                <colordiffuse>$VAR[Color_OSD_Panel]</colordiffuse>
                <texture>common/white.png</texture>
                <animation effect="fade" start="100" end="95" condition="true">Conditional</animation>
            </control>
            <control type="image">
                <left>530</left>
                <top>-4</top>
                <width>128</width>
                <height>128</height>
                <texture>special://skin/extras/icons/livetv.png</texture>
                <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                <visible>String.IsEmpty(Player.Art(thumb))</visible>
            </control>
            <control type="image">
                <left>498</left>
                <top>28</top>
                <width>128</width>
                <height>64</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>$INFO[Player.Art(thumb)]</texture>
            </control>
            <control type="label">
                <left>33</left>
                <top>10</top>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[Color_OSD_Panel_White100]</textcolor>
                <font>Medium</font>
                <label>$INFO[VideoPlayer.ChannelName]</label>
            </control>
            <control type="label">
                <left>33</left>
                <top>44</top>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[Color_OSD_Panel_White70]</textcolor>
                <font>Tiny</font>
                <label>$INFO[System.Time] - $INFO[System.Date]</label>
            </control>
            <control type="fixedlist" id="11">
                <left>0</left>
                <top>120</top>
                <height>980</height>
                <width>667</width>
                <focusposition>1</focusposition>
                <movement>6</movement>
                <orientation>vertical</orientation>

                <itemlayout height="120" width="667">
                    <control type="image">
                        <width>667</width>
                        <height>109</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="15" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                        <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                    </control>
                    <control type="label">
                        <left>33</left>
                        <right>22</right>
                        <top>5</top>
                        <align>left</align>
                        <textcolor>$VAR[Color_OSD_Panel_White70]</textcolor>
                        <selectedcolor>$VAR[Color_OSD_Panel_White70]</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <left>33</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>$VAR[Color_OSD_Panel_White30]</textcolor>
                        <selectedcolor>$VAR[Color_OSD_Panel_White30]</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout height="120" width="667">
                    <control type="image">
                        <width>667</width>
                        <height>120</height>
                        <texture>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texture>
                    </control>
                    <control type="image">
                        <width>667</width>
                        <height>120</height>
                        <texture>common/selected.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>Selected</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>33</left>
                        <right>22</right>
                        <top>10</top>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <top>45</top>
                        <left>33</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>

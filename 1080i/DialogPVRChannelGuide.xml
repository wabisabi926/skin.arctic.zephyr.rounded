<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    <controls>
        <control type="group">
            <include>Animation_Slide_Menu</include>

            <control type="image">
                <left>-1</left>
                <top>-1</top>
                <width>668</width>
                <height>1082</height>
                <colordiffuse>$VAR[Color_OSD_Background_Dialog]</colordiffuse>
                <texture>common/white.png</texture>
                <animation effect="fade" start="100" end="95" condition="true">Conditional</animation>
            </control>
            <control type="image">
                <left>530</left>
                <top>-4</top>
                <width>128</width>
                <height>128</height>
                <texture>special://skin/extras/icons/livetv.png</texture>
                <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                <visible>String.IsEmpty(Player.Art(thumb))</visible>
            </control>
            <control type="image">
                <left>498</left>
                <top>28</top>
                <width>128</width>
                <height>64</height>
                <aspectratio align="right">keep</aspectratio>
                <texture>$INFO[Player.Art(thumb)]</texture>
            </control>
            <control type="label">
                <left>33</left>
                <top>10</top>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[Color_OSD_Panel_White100]</textcolor>
                <font>Medium</font>
                <label>$INFO[VideoPlayer.ChannelName]</label>
            </control>
            <control type="label">
                <left>33</left>
                <top>44</top>
                <width>400</width>
                <align>left</align>
                <textcolor>$VAR[Color_OSD_Panel_White70]</textcolor>
                <font>Tiny</font>
                <label>$INFO[System.Time] - $INFO[System.Date]</label>
            </control>
            <control type="image">
                <left>30</left>
                <top>120</top>
                <width>607</width>
                <height>1</height>
                <align>left</align>
                <colordiffuse>$VAR[Color_OSD_Dialog_Line]</colordiffuse>
                <texture>common/white.png</texture>
            </control>

            <!-- CHANNEL GUIDE LIST -->

            <control type="fixedlist" id="11">
                <top>136</top>
                <left>16</left>
                <height>980</height>
                <width>635</width>
                <focusposition>1</focusposition>
                <movement>6</movement>
                <orientation>vertical</orientation>

                <itemlayout height="116" width="635">

                    <!-- Is Playing -->

                    <include>Def_View_List_Item_IsPlaying</include>

                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture border="12" colordiffuse="$VAR[Color_OSD_Panel_White100]">common/box12.png</texture>
                        <include>View_List_Scroll_Anim</include>
                        <visible>ListItem.IsPlaying</visible>
                        <visible>$PARAM[visible]</visible>
                    </control>
                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture border="12">common/selected_rounded.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                        <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                    </control>
                    <control type="label">
                        <left>33</left>
                        <right>22</right>
                        <top>5</top>
                        <align>left</align>
                        <textcolor>$VAR[Color_OSD_Panel_White70]</textcolor>
                        <selectedcolor>$VAR[Color_OSD_Panel_White70]</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <top>40</top>
                        <left>33</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>$VAR[Color_OSD_Panel_White30]</textcolor>
                        <selectedcolor>$VAR[Color_OSD_Panel_White30]</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>$VAR[Color_OSD_Panel_White100]</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout height="116" width="635">

                    <!-- Is Playing -->

                    <include>Def_View_List_Focus_IsPlaying</include>

                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <texture border="12">common/selected_rounded.png</texture>
                        <aspectratio aligny="top">center</aspectratio>
                        <animation effect="fade" start="100" end="30" condition="true">Conditional</animation>
                        <visible>String.IsEqual(VideoPlayer.Title,ListItem.Title) + String.IsEqual(VideoPlayer.EndTime,ListItem.EndTime)</visible>
                    </control>
                    <control type="image">
                        <centertop>58</centertop>
                        <centerright>64</centerright>
                        <width>128</width>
                        <height>128</height>
                        <texture>special://skin/extras/icons/timer.png</texture>
                        <colordiffuse>Selected</colordiffuse>
                        <visible>ListItem.HasTimer | ListItem.IsRecording</visible>
                        <aspectratio aligny="center" align="center">keep</aspectratio>
                    </control>
                    <control type="label">
                        <left>33</left>
                        <right>22</right>
                        <top>10</top>
                        <align>left</align>
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <font>Small</font>
                        <label>$INFO[ListItem.Title]</label>
                    </control>
                    <control type="label">
                        <top>45</top>
                        <left>33</left>
                        <right>22</right>
                        <align>left</align>
                        <font>SmallPVR</font>
                        <textcolor>Selected</textcolor>
                        <selectedcolor>Selected</selectedcolor>
                        <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>

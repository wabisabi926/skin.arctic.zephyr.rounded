<?xml version="1.0" encoding="UTF-8"?>
<window id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <allowoverlay>no</allowoverlay>

    <!-- <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(MusicVisualisation.xml)</visible> -->

    <visible>[VideoPlayer.IsFullscreen + [Window.IsVisible(videoosd) | Window.IsVisible(fullscreeninfo) | Player.Seeking | Player.HasPerformedSeek(3) | Player.Paused | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput) | Player.Forwarding | Player.Rewinding | !String.IsEmpty(Window(Home).Property(osdshowinfo)) | [Player.ShowInfo] + VideoPlayer.Content(livetv)]] | !String.IsEmpty(Window(Home).Property(osdinfo)) | Window.IsActive(MusicVisualisation.xml)</visible>

    <visible>!Window.IsVisible(DialogSlider.xml) + !Window.IsVisible(DialogSelect.xml) + !Window.IsVisible(DialogSettings.xml) + !Window.IsVisible(VideoOSDBookmarks.xml) + !Window.IsVisible(Custom_1121_OSD_Settings_Video.xml) + !Window.IsVisible(DialogSubtitles.xml)</visible>

    <visible>!Window.IsVisible(DialogPVRChannelsOSD.xml) + !Window.IsVisible(DialogPVRChannelGuide.xml)</visible>
    <visible>!Window.IsVisible(script-wikipedia.xml)</visible>

    <onload condition="Player.HasAudio + !String.IsEmpty(MusicPlayer.DBID) + !String.IsEmpty(MusicPlayer.Album)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.MusicPlayer.Album&amp;&amp;$INFO[MusicPlayer.Album]")</onload>

    <onload condition="[!String.IsEmpty(Window(Home).Property(dialogvideoinfo)) | !String.IsEmpty(Window(Home).Property(wikipedia))] + Skin.HasSetting(osd.open.auto.pause) + Player.Paused + VideoPlayer.IsFullscreen + !Window.IsVisible(DialogFullScreenInfo.xml)">ClearProperty(wikipedia,Home)</onload>

    <onload condition="[!String.IsEmpty(Window(Home).Property(dialogvideoinfo)) | !String.IsEmpty(Window(Home).Property(wikipedia))] + Skin.HasSetting(osd.open.auto.pause) + Player.Paused + VideoPlayer.IsFullscreen + !Window.IsVisible(DialogFullScreenInfo.xml) + !String.IsEmpty(VideoPlayer.DBID)">PlayerControl(Play)</onload>

    <onload condition="[!String.IsEmpty(Window(Home).Property(dialogvideoinfo)) | !String.IsEmpty(Window(Home).Property(wikipedia))] + Skin.HasSetting(osd.open.auto.pause) + Player.Paused + VideoPlayer.IsFullscreen + !Window.IsVisible(DialogFullScreenInfo.xml) + !String.IsEmpty(VideoPlayer.DBID)">AlarmClock(cleanup,ClearProperty(dialogvideoinfo,Home),00:01,silent)</onload>

    <zorder>0</zorder>

    <controls>

        <!-- BACKGROUND ON DISPLAY PLOT -->
        
        <include>Object_OSD_Plot_Background</include>

        <!-- SEEKBAR VIDEO -->
        
        <include condition="VideoPlayer.IsFullscreen">OSD_Video_SeekBar</include>

        <!-- SEEKBAR MUSIC -->

        <include condition="!VideoPlayer.IsFullscreen">OSD_Music_SeekBar</include>

        <!-- CHANNEL NUMBER PVR -->
        
        <include>Def_OSD_Channel_Number_Input</include>

        <!-- CLOCK -->
        
        <include>Object_OSD_Clock</include>

    </controls>
</window>

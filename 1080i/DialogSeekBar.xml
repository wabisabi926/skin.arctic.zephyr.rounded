<?xml version="1.0" encoding="UTF-8"?>
<window id="115">
    <defaultcontrol always="true">901</defaultcontrol>
    <allowoverlay>no</allowoverlay>

    <!-- <visible>Window.IsActive(fullscreenvideo) | Window.IsActive(MusicVisualisation.xml)</visible> -->

    <visible>[VideoPlayer.IsFullscreen + [Window.IsVisible(videoosd) | Window.IsVisible(fullscreeninfo) | Player.Seeking | Player.HasPerformedSeek(3) | Player.Paused | !String.IsEmpty(Player.SeekNumeric) | !String.IsEmpty(PVR.ChannelNumberInput) | Player.Forwarding | Player.Rewinding | !String.IsEmpty(Window(Home).Property(OSDVideo_Show_INFO)) | [Player.ShowInfo] + VideoPlayer.Content(livetv)]] | !String.IsEmpty(Window(Home).Property(OSDVideo_Show_AT_START_INFO)) | Window.IsActive(MusicVisualisation.xml)</visible>

    <visible>!Window.IsVisible(DialogSlider.xml) + !Window.IsVisible(DialogSelect.xml) + !Window.IsVisible(DialogSettings.xml) + !Window.IsVisible(VideoOSDBookmarks.xml) + !Window.IsVisible(Custom_1121_OSD_Settings_Video.xml) + !Window.IsVisible(DialogSubtitles.xml)</visible>

    <visible>!Window.IsVisible(DialogPVRChannelsOSD.xml) + !Window.IsVisible(DialogPVRChannelGuide.xml)</visible>

    <visible>!Window.IsVisible(script-wikipedia.xml)</visible>

    <onload condition="Player.HasAudio + !String.IsEmpty(MusicPlayer.DBID) + !String.IsEmpty(MusicPlayer.Album)">RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.MusicPlayer.Album&amp;&amp;$INFO[MusicPlayer.Album]")</onload>

    <onload condition="[!String.IsEmpty(Window(Home).Property(OSDVideo_DIALOG_VIDEO_INFO)) | !String.IsEmpty(Window(Home).Property(wikipedia))] + Skin.HasSetting(osd.open.auto.pause) + Player.Paused + VideoPlayer.IsFullscreen + !Window.IsVisible(DialogFullScreenInfo.xml)">ClearProperty(wikipedia,Home)</onload>

    <onload condition="[!String.IsEmpty(Window(Home).Property(OSDVideo_DIALOG_VIDEO_INFO)) | !String.IsEmpty(Window(Home).Property(wikipedia))] + Skin.HasSetting(osd.open.auto.pause) + Player.Paused + VideoPlayer.IsFullscreen + !Window.IsVisible(DialogFullScreenInfo.xml) + !String.IsEmpty(VideoPlayer.DBID)">PlayerControl(Play)</onload>

    <onload condition="[!String.IsEmpty(Window(Home).Property(OSDVideo_DIALOG_VIDEO_INFO)) | !String.IsEmpty(Window(Home).Property(wikipedia))] + Skin.HasSetting(osd.open.auto.pause) + Player.Paused + VideoPlayer.IsFullscreen + !Window.IsVisible(DialogFullScreenInfo.xml) + !String.IsEmpty(VideoPlayer.DBID)">AlarmClock(cleanup,ClearProperty(OSDVideo_DIALOG_VIDEO_INFO,Home),00:01,silent)</onload>

    <onunload>ClearProperty(OSDVideo_Show_INFO,Home)</onunload>
    <onunload>ClearProperty(OSDVideo_Show_PLOT,Home)</onunload>

    <zorder>0</zorder>

    <controls>

        <!-- BACKGROUND ON DISPLAY PLOT -->

        <include>Object_OSD_Plot_Background</include>

        <!-- SEEKBAR VIDEO -->

        <include condition="VideoPlayer.IsFullscreen">OSD_Video_SeekBar</include>

        <!-- SEEKBAR MUSIC -->

        <include condition="!VideoPlayer.IsFullscreen">OSD_Music_SeekBar</include>

        <!-- CHANNEL NUMBER PVR -->

        <include>Def_OSD_Channel_Number_Input</include>

        <!-- CLOCK -->

        <include>Object_OSD_Clock</include>

        <!-- PLOT -->

        <include content="Object_OSD_Player_Plot">
            <param name="visible" value="!String.IsEmpty(Window(Home).Property(OSDVideo_Show_PLOT)) + !Window.IsVisible(videoosd) + String.IsEmpty(Window(Home).Property(OSDVideo_DIALOG_FULL_SCREEN_INFO))" />
            <param name="onleft" value="SetFocus(555)" />
            <param name="onright" value="SetFocus(555)" />
            <param name="onback" value="SetFocus(555)" />
            <param name="scrollid" value="9804" />
        </include>
    </controls>
</window>

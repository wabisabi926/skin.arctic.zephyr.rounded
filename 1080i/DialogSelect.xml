<?xml version="1.0" encoding="UTF-8"?>
<window id="2000">
    <defaultcontrol always="true">3</defaultcontrol>

    <onload condition="!String.IsEmpty(Window(Home).Property(Set_User_Rating))">SetFocus(21)</onload>

    <onunload>ClearProperty(SetIcon,Home)</onunload>
    <onunload>ClearProperty(Set_User_Rating,Home)</onunload>
    <onunload>ClearProperty(SelectType,Home)</onunload>
    <onunload>ClearProperty(SelectPerson,Home)</onunload>

    <controls>
        <include content="Background_Overlay">
            <param name="colordiffuse" value="$VAR[Color_OSD_Background_Overlay]" />
            <param name="visible" value="[Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml)] + !Window.IsVisible(SliderDialog) + [!Window.IsVisible(GameOSD.xml) | [Window.IsVisible(GameOSD.xml) + Window.IsVisible(DialogGameControllers.xml)]]" />
        </include>

        <include content="Background_Overlay">
            <param name="visible" value="![Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml)]" />
        </include>

        <include condition="String.IsEmpty(Window(Home).Property(Set_User_Rating)) + String.IsEmpty(Window(Home).Property(SkinViewtypes.DialogIsActive)) + String.IsEmpty(Window(Home).Property(SetIcon)) + String.IsEmpty(Window(Home).Property(ListVideoForCast)) + !Window.IsActive(gamesaves) + !Window.IsActive(gamestretchmode) + !Window.IsActive(gamevideofilter) + !Window.IsActive(gamevideorotation) + !Window.IsActive(ingamesaves) + !Window.IsActive(dialogselectvideo) + !Window.IsActive(dialogselectaudio) + !Window.IsActive(dialogselectsubtitle) + String.IsEmpty(Window(Home).Property(SelectType)) + String.IsEmpty(Window(Home).Property(SelectPerson))">Def_Dialog_Select_Other</include>

        <include condition="!String.IsEmpty(Window(Home).Property(Set_User_Rating))">Def_Dialog_Select_User_Rating</include>
        <include condition="!String.IsEmpty(Window(Home).Property(SkinViewtypes.DialogIsActive))">Def_Dialog_Select_View_Type</include>
        <include condition="!String.IsEmpty(Window(Home).Property(SetIcon))">Def_Dialog_Select_Icon</include>
        <include condition="!String.IsEmpty(Window(Home).Property(ListVideoForCast))">Def_Dialog_Select_Cast_Video_Search</include>
        <include condition="!String.IsEmpty(Window(Home).Property(SelectType))">Def_Dialog_Select_Ressource_Images</include>
        <include condition="!String.IsEmpty(Window(Home).Property(SelectPerson))">Def_Dialog_Select_Person_Info</include>

        <!-- DIALOG - GAMES -->

        <include condition="Window.IsActive(gamesaves)">Def_Dialog_Select_Game_Save</include>
        <include condition="Window.IsActive(gamevideofilter)">Def_Dialog_Select_Game_Filter</include>
        <include condition="Window.IsActive(gamestretchmode)">Def_Dialog_Select_Game_View</include>
        <include condition="Window.IsActive(gamevideorotation)">Def_Dialog_Select_Game_View</include>
        <include condition="Window.IsActive(ingamesaves)">Def_Dialog_Select_Game_Save_In_Game</include>

        <!-- DIALOG - VIDEOS - STREAMS -->

		<include condition="Window.IsActive(dialogselectvideo)">Def_Dialog_Select_Streams_Video</include>
		<include condition="Window.IsActive(dialogselectaudio)">Def_Dialog_Select_Streams_Audio</include>
		<include condition="Window.IsActive(dialogselectsubtitle)">Def_Dialog_Select_Streams_Subtitle</include>
    </controls>
</window>

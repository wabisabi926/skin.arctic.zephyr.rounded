<?xml version="1.0" encoding="UTF-8"?>
<window>

    <onload condition="Skin.HasSetting(osd.open.auto.pause) + Player.HasMedia + Player.HasVideo + !Player.Paused + !String.IsEmpty(VideoPlayer.DBID)">PlayerControl(Play)</onload>
    <onunload condition="Skin.HasSetting(osd.open.auto.pause) + Player.HasMedia + Player.HasVideo + Player.Paused + !Window.IsVisible(VideoOSD.xml) + !Window.IsVisible(DialogSubtitles.xml)">AlarmClock(delay_dialog_settings,PlayerControl(Play),00:00,silent)</onunload>

    <onunload condition="Player.HasMedia + Player.HasVideo + !Player.PauseEnabled">setfocus(15)</onunload>
    <onunload condition="Player.HasMedia + Player.HasVideo + Player.PauseEnabled">setfocus(14)</onunload>

    <controls>
        <control type="group">
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml)">Conditional</animation>
            <include>Background_Overlay</include>
        </control>

        <include condition="![Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml)]">Def_Dialog_Settings_standard</include>
        <include condition="Window.IsVisible(VideoOSD.xml) | Window.IsVisible(VideoFullScreen.xml)">Def_Dialog_Settings_video_OSD</include>


        <!-- DEF CONTROL TYPE -->

        <control type="button" id="7">
            <description>Default Button</description>
            <align>left</align>
            <texturefocus>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texturefocus>
        </control>
        <control type="radiobutton" id="8">
            <description>Default RadioButton</description>
            <align>left</align>
            <radioposx>1040</radioposx>
            <texturefocus>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texturefocus>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default spincontrolex</description>
            <align>left</align>
            <reverse>yes</reverse>
            <texturefocus>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texturefocus>
        </control>
        <control type="image" id="11">
            <visible>false</visible>
        </control>
        <control type="edit" id="12">
            <description>Default Button</description>
            <align>left</align>
            <texturefocus>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texturefocus>
        </control>
        <control type="sliderex" id="13">
            <description>Default Slider</description>
            <texturefocus>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texturefocus>
        </control>
        <control type="label" id="14">
            <description>Default Button</description>
            <font>Button</font>
            <textoffsetx>30</textoffsetx>
            <textcolor>$VAR[Color_Highlight]</textcolor>
            <height>66</height>
        </control>
    </controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<window id="104">
    <controls>
        <control type="group">

            <visible>!Player.Muted</visible>
            <control type="group">
                <top>80</top>
                <right>66</right>
                <width>660</width>
                <height>100</height>
                <include>Animation_FadeIn</include>
                <include>Animation_FadeOut</include>
                <include>Animation_Mute</include>
                <control type="image">
                    <left>-9</left>
                    <top>-9</top>
                    <width>662</width>
                    <height>98</height>
                    <texture border="18" background="true" infill="false">common/$VAR[shadow18]</texture>
                    <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                </control>
                <control type="image">
                    <description>background image</description>
                    <width>644</width>
                    <height>80</height>
                    <animation effect="fade" start="100" end="80" condition="true">Conditional</animation>
                    <texture border="12" colordiffuse="Panel">common/box.png</texture>
                </control>

                <control type="group">
                    <width>660</width>
                    <height>100</height>
                    <visible>!player.passthrough</visible>

                    <!-- logo volume -->

                    <control type="image">
                        <left>12</left>
                        <top>7</top>
                        <width>64</width>
                        <height>64</height>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="Dark1">buttons/volume.png</texture>
                        <visible>!Player.Muted</visible>
                    </control>

                    <!-- logo mute -->

                    <control type="image">
                        <left>12</left>
                        <top>7</top>
                        <width>64</width>
                        <height>64</height>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="Dark1">buttons/mute.png</texture>
                        <visible>Player.Muted</visible>
                    </control>

                    <!-- label volume -->

                    <control type="label">
                        <left>84</left>
                        <top>16</top>
                        <height>24</height>
                        <aligny>center</aligny>
                        <font>InfoNetflix</font>
                        <label>$LOCALIZE[13376]$INFO[Control.GetLabel(1),  , %]</label>
                        <textcolor>Dark1</textcolor>
                    </control>

                    <!-- pourcentage volume -->

                    <control type="label">
                        <align>right</align>
                        <right>32</right>
                        <top>16</top>
                        <height>24</height>
                        <aligny>center</aligny>
                        <font>Small24</font>
                        <label>$INFO[Player.Volume]</label>
                        <label></label>
                        <textcolor>Dark1</textcolor>
                    </control>

                    <!-- volume bar -->

                    <control type="progress">
                        <description>progress control</description>
                        <left>84</left>
                        <right>32</right>
                        <bottom>34</bottom>
                        <height>8</height>
                        <info>Player.Volume</info>
                    </control>
                </control>

                <control type="group">
                    <visible>player.passthrough</visible>
                    <control type="label">
                        <description>Passthrough Label</description>
                        <left>38</left>
                        <centertop>50%</centertop>
                        <height>24</height>
                        <aligny>center</aligny>
                        <textcolor>Dark1</textcolor>
                        <font>InfoNetflix</font>
                        <label>29802</label>
                    </control>
                </control>
            </control>

            <control type="progress" id="1">
                <description>progress control</description>
                <left>94</left>
                <right>10</right>
                <bottom>34</bottom>
                <height>8</height>
                <texturebg colordiffuse="$VAR[Color_OSD_NowPlaying_Progress_Bar_Background]">osd/progress-bg.png</texturebg>
                <info>Player.Volume</info>
                <visible>false</visible>
            </control>
        </control>

        <!-- LOGO MUTE -->

        <control type="group">
            <visible>Player.Muted</visible>
            <control type="group">
                <top>80</top>
                <right>80</right>
                <width>80</width>
                <height>80</height>
                <include>Animation_FadeIn</include>
                <include>Animation_FadeOut</include>
                <include>Animation_Mute</include>
                <control type="image">
                    <left>-9</left>
                    <top>-9</top>
                    <width>98</width>
                    <height>98</height>
                    <texture border="18" background="true" infill="false">common/$VAR[shadow18]</texture>
                    <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                </control>
                <control type="image">
                    <description>background image</description>
                    <top>0</top>
                    <right>1</right>
                    <width>78</width>
                    <height>78</height>
                    <texture border="12">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/box_h.png</texture>
                    <!-- <animation effect="fade" start="100" end="80" condition="true">Conditional</animation> -->
                </control>
                <control type="image" id="901">
                    <left>8</left>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture colordiffuse="Selected">buttons/mute.png</texture>
                </control>
            </control>
        </control>
    </controls>
</window>

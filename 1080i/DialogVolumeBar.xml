<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="group">
            <visible>!Player.Muted</visible>

            <control type="group">
                <include>Animation_Common_Fade_In_Slide_Down_Bounce</include>
                <include>Animation_Common_Fade_Out</include>
                <include>Animation_Home_Dialog_Notification_Slide_Up</include>

                <include content="Def_Right" condition="VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)">
                    <param name="right" value="90" />
                </include>

                <top>40</top>
                <right>40</right>
                <height>160</height>
                <width>740</width>

                <include content="Def_Dialog_Notification_Background">
                    <param name="colordiffuse" value="$VAR[Color_OSD_Background_Dialog]" />
                    <param name="visible" value="VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)" />
                </include>
                <include content="Def_Dialog_Notification_Background">
                    <param name="visible" value="![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
                </include>

                <control type="group">
                    <top>40</top>
                    <right>40</right>
                    <height>40</height>
                    <width>660</width>

                    <visible>!player.passthrough</visible>

                    <!-- LOGO VOLUME -->

                    <control type="image">
                        <left>12</left>
                        <top>7</top>
                        <width>64</width>
                        <height>64</height>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="$VAR[Color_Label_Dialog_Notification_Title]">buttons/volume.png</texture>
                        <visible>!Player.Muted</visible>
                    </control>

                    <!-- LOGO MUTE -->

                    <control type="image">
                        <left>12</left>
                        <top>7</top>
                        <width>64</width>
                        <height>64</height>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="$VAR[Color_Label_Dialog_Notification_Title]">buttons/mute.png</texture>
                        <visible>Player.Muted</visible>
                    </control>

                    <!-- LABEL VOLUME -->

                    <control type="label">
                        <left>84</left>
                        <top>16</top>
                        <height>24</height>
                        <aligny>center</aligny>
                        <font>InfoNetflix</font>
                        <label>$LOCALIZE[13376]$INFO[Control.GetLabel(1),  , %]</label>
                        <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                    </control>

                    <!-- POURCENTAGE VOLUME -->

                    <control type="label">
                        <align>right</align>
                        <right>32</right>
                        <top>16</top>
                        <height>24</height>
                        <aligny>center</aligny>
                        <font>Small24</font>
                        <label>$INFO[Player.Volume]</label>
                        <label></label>
                        <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                    </control>

                    <!-- VOLUME BAR -->

                    <!-- <control type="progress"> -->
                        <!-- <top>58</top> -->
                        <!-- <left>84</left> -->
                        <!-- <right>32</right> -->
                        <!-- <height>8</height> -->
                        <!-- <info>Player.Volume</info> -->
                    <!-- </control> -->

                    <control type="group">
                        <top>58</top>
                        <left>84</left>
                        <right>32</right>
                        <height>8</height>
                        <control type="progress" id="22">
                            <description>Progressbar</description>
                            <info>Player.Volume</info>
                            <visible>!ControlGroup(9101).HasFocus(100) + !ControlGroup(9101).HasFocus(101)</visible>
                            <texturebg colordiffuse="Black12" border="8,0,8,0">progress/progress-nib.png</texturebg>
                        </control>
                        <control type="progress">
                            <info>Player.Volume</info>
                            <visible>!ControlGroup(9101).HasFocus(100) + !ControlGroup(9101).HasFocus(101)</visible>
                            <texturebg colordiffuse="Black12" border="8,0,8,0">progress/progress-bg.png</texturebg>
                            <midtexture colordiffuse="$VAR[Color_FocusGradient]" border="8,0,8,0" diffuse="progress/diffuse.png">progress/progress-bg.png</midtexture>
                            <include content="Defs_Progress_Colorfade">
                                <param name="id">22</param>
                            </include>
                        </control>
                    </control>
                </control>

                <control type="group">
                    <visible>player.passthrough</visible>
                    <control type="label">
                        <description>Passthrough Label</description>
                        <left>38</left>
                        <centertop>50%</centertop>
                        <height>24</height>
                        <aligny>center</aligny>
                        <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                        <font>InfoNetflix</font>
                        <label>29802</label>
                    </control>
                </control>
            </control>

            <control type="progress" id="1">
                <description>progress control</description>
                <top>58</top>
                <left>94</left>
                <right>10</right>
                <height>8</height>
                <texturebg colordiffuse="$VAR[Color_OSD_NowPlaying_Progress_Bar_Background]">progress/progress-bg.png</texturebg>
                <info>Player.Volume</info>
                <visible>false</visible>
            </control>
        </control>

        <!-- LOGO MUTE -->

        <control type="group">
            <visible>Player.Muted</visible>

            <control type="group">
                <include>Animation_Common_Fade_In_Slide_Down_Bounce</include>
                <include>Animation_Common_Fade_Out</include>
                <include>Animation_Home_Dialog_Notification_Slide_Up</include>

                <include content="Def_Right" condition="VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)">
                    <param name="right" value="90" />
                </include>

                <top>40</top>
                <right>40</right>
                <height>160</height>
                <width>160</width>

                <control type="image">
                    <width>160</width>
                    <height>160</height>
                    <texture colordiffuse="White70">$VAR[Image_Header_Background]</texture>
                </control>
                <control type="image">
                    <top>40</top>
                    <left>40</left>
                    <width>80</width>
                    <height>80</height>
                    <texture border="40">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/circle_h.png</texture>
                </control>
                <control type="image" id="901">
                    <left>48</left>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture colordiffuse="Selected">buttons/mute.png</texture>
                </control>
            </control>
        </control>
    </controls>
</window>

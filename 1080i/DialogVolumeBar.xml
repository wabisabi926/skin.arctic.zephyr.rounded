<?xml version="1.0" encoding="UTF-8"?>
<window id="104">
    <controls>
        <control type="group">
            <visible>!Player.Muted</visible>
            <control type="group">

                <include>Animation_Fade_In</include>
                <include>Animation_Fade_Out</include>
                <include>Animation_Slide_Home_Dialog</include>

                <top>40</top>
                <right>40</right>
                <height>160</height>
                <width>740</width>

                <include content="Def_Dialog_Background_Notification">
                    <param name="colordiffuse" value="$VAR[Color_OSD_Background_Dialog]" />
                    <param name="condition_fade" value="false" />
                    <param name="visible" value="VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)" />
                </include>
                <include content="Def_Dialog_Background_Notification">
                    <param name="colordiffuse" value="White100" />
                    <param name="visible" value="![VideoPlayer.IsFullscreen | Window.IsVisible(MusicVisualisation.xml)]" />
                </include>

                <control type="group">
                    <top>40</top>
                    <right>40</right>
                    <height>40</height>
                    <width>660</width>

                    <visible>!player.passthrough</visible>

                    <!-- logo volume -->

                    <control type="image">
                        <left>12</left>
                        <top>7</top>
                        <width>64</width>
                        <height>64</height>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="$VAR[Color_Label_Dialog_Notification_Title]">buttons/volume.png</texture>
                        <visible>!Player.Muted</visible>
                    </control>

                    <!-- logo mute -->

                    <control type="image">
                        <left>12</left>
                        <top>7</top>
                        <width>64</width>
                        <height>64</height>
                        <aspectratio>keep</aspectratio>
                        <texture colordiffuse="$VAR[Color_Label_Dialog_Notification_Title]">buttons/mute.png</texture>
                        <visible>Player.Muted</visible>
                    </control>

                    <!-- label volume -->

                    <control type="label">
                        <left>84</left>
                        <top>16</top>
                        <height>24</height>
                        <aligny>center</aligny>
                        <font>InfoNetflix</font>
                        <label>$LOCALIZE[13376]$INFO[Control.GetLabel(1),  , %]</label>
                        <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                    </control>

                    <!-- pourcentage volume -->

                    <control type="label">
                        <align>right</align>
                        <right>32</right>
                        <top>16</top>
                        <height>24</height>
                        <aligny>center</aligny>
                        <font>Small24</font>
                        <label>$INFO[Player.Volume]</label>
                        <label></label>
                        <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                    </control>

                    <!-- volume bar -->

                    <control type="progress">
                        <top>58</top>
                        <left>84</left>
                        <right>32</right>
                        <height>8</height>
                        <info>Player.Volume</info>
                    </control>
                </control>

                <control type="group">
                    <visible>player.passthrough</visible>
                    <control type="label">
                        <description>Passthrough Label</description>
                        <left>38</left>
                        <centertop>50%</centertop>
                        <height>24</height>
                        <aligny>center</aligny>
                        <textcolor>$VAR[Color_Label_Dialog_Notification_Title]</textcolor>
                        <font>InfoNetflix</font>
                        <label>29802</label>
                    </control>
                </control>
            </control>

            <control type="progress" id="1">
                <description>progress control</description>
                <top>58</top>
                <left>94</left>
                <right>10</right>
                <height>8</height>
                <texturebg colordiffuse="$VAR[Color_OSD_NowPlaying_Progress_Bar_Background]">osd/progress-bg.png</texturebg>
                <info>Player.Volume</info>
                <visible>false</visible>
            </control>
        </control>

        <!-- LOGO MUTE -->

        <control type="group">
            <visible>Player.Muted</visible>
            <control type="group">
                <include>Animation_Fade_In</include>
                <include>Animation_Fade_Out</include>
                <include>Animation_Slide_Home_Dialog</include>

                <top>40</top>
                <right>40</right>
                <height>160</height>
                <width>160</width>

                <control type="image">
                    <width>160</width>
                    <height>160</height>
                    <texture colordiffuse="Panel">common/circlebutton.png</texture>
                </control>
                <control type="image">
                    <top>40</top>
                    <left>40</left>
                    <width>80</width>
                    <height>80</height>
                    <texture border="40">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/circle_h.png</texture>
                </control>
                <control type="image" id="901">
                    <left>48</left>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <texture colordiffuse="Selected">buttons/mute.png</texture>
                </control>
            </control>
        </control>
    </controls>
</window>

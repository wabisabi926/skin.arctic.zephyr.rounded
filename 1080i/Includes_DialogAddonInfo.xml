<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="Dialog_Addon_Info">
        <control type="group">

            <!-- LEFT POSTER SQUARE -->

            <control type="group">
                <include>Animation_Dialog_Info_Left_Side_Delay_400</include>
                <include>Animation_Video_Info_Extended_Views_Fade_Out</include>

                <include content="View_50_Side_Square">
                    <param name="texture" value="$VAR[Image_Dialog_Info_Square_Poster]" />
                    <param name="condition_fadetime" value="false" />
                </include>
            </control>

            <!-- RIGHT INFORMATIONS -->

            <control type="group">
                <include>Animation_Dialog_Info_Right_Side_Delay_400</include>

                <!-- CONTROL BUTTONS -->

                <control type="group">
                    <bottom>-80</bottom>
                    <include>Animation_Video_Info_Extended_Views_Fade_Out</include>
                    <include>Def_Dialog_Info_Navigation_Addon</include>
                </control>

                <!-- LABEL HEADER -->

                <control type="group">
                    <include>Animation_Video_Info_Extended_Views_Fade_Out</include>

                    <top>70</top>
                    <left>785</left>
                    <width>1040</width>

                    <!-- ICON -->

                    <control type="image">
                        <top>-29</top>
                        <left>-40</left>
                        <width>160</width>
                        <height>160</height>
                        <texture colordiffuse="White70">common/circlebutton.png</texture>
                        <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
                    </control>
                    <control type="image">
                        <top>7</top>
                        <left>-4</left>
                        <width>88</width>
                        <height>88</height>
                        <texture colordiffuse="PanelWhite100" border="12">$VAR[Image_Header_Dialog_Info_Icon]</texture>
                    </control>

                    <!-- MAIN HEADER TITLE -->

                    <control type="label">
                        <left>104</left>
                        <width>990</width>
                        <font>LargeNew</font>
                        <description>Header Label</description>
                        <textcolor>Dark1</textcolor>
                        <label fallback="19055">$INFO[ListItem.AddonName]</label>
                        <visible>!Player.HasMedia | Skin.HasSetting(hide.furniture.nowplaying.views)</visible>
                    </control>
                    <control type="label">
                        <left>104</left>
                        <width>270</width>
                        <font>LargeNew</font>
                        <description>Header Label</description>
                        <textcolor>Dark1</textcolor>
                        <label fallback="19055">$INFO[ListItem.AddonName]</label>
                        <visible>Player.HasMedia + !Skin.HasSetting(hide.furniture.nowplaying.views)</visible>
                    </control>

                    <!-- SUB HEADER TITLE -->

                    <control type="label">
                        <top>55</top>
                        <left>104</left>
                        <width>990</width>
                        <height>36</height>
                        <font>Tiny</font>
                        <textcolor>Dark1</textcolor>
                        <label fallback="19055">$INFO[ListItem.AddonSummary]</label>
                        <aligny>center</aligny>
                        <visible>!Window.IsVisible(script-wikipedia.xml)</visible>
                        <visible>!Player.HasMedia | Skin.HasSetting(hide.furniture.nowplaying.views)</visible>
                    </control>
                    <control type="label">
                        <top>55</top>
                        <left>104</left>
                        <width>270</width>
                        <height>36</height>
                        <font>Tiny</font>
                        <textcolor>Dark1</textcolor>
                        <label fallback="19055">$INFO[ListItem.AddonSummary]</label>
                        <aligny>center</aligny>
                        <visible>!Window.IsVisible(script-wikipedia.xml)</visible>
                        <visible>Player.HasMedia + !Skin.HasSetting(hide.furniture.nowplaying.views)</visible>
                    </control>
                </control>

                <!-- INFORMATION -->

                <control type="group">
                    <include>Animation_Video_Info_Extended_Views_Fade_Out</include>
                    <include>Animation_Dialog_Info_Fade_In_250_Delay_200</include>
                    <include>Animation_Dialog_Info_Fade_Out_150</include>

                    <top>DialogInfo_Top</top>
                    <left>ListSquareX</left>
                    <right>View_List_Side</right>
                    <bottom>224</bottom>

                    <control type="grouplist">
                        <left>30</left>
                        <itemgap>0</itemgap>

                        <include content="Def_Dialog_Square_Info_Line">
                            <param name="label" value="$LOCALIZE[467]" />
                            <param name="value" value="$INFO[ListItem.AddonType]" />
                        </include>
                        <include content="Def_Dialog_Square_Info_Line">
                            <param name="label" value="$LOCALIZE[19114]" />
                            <param name="value" value="$INFO[ListItem.AddonVersion]" />
                        </include>
                        <include content="Def_Dialog_Square_Info_Line">
                            <param name="label" value="$LOCALIZE[21863]" />
                            <param name="value" value="$INFO[ListItem.AddonCreator]" />
                        </include>
                        <include content="Def_Dialog_Square_Info_Line">
                            <param name="label" value="$LOCALIZE[560]" />
                            <param name="value" value="$INFO[ListItem.Property(Addon.ID)]" />
                        </include>
                        <include content="Def_Dialog_Square_Info_Line">
                            <param name="label" value="$LOCALIZE[12014]" />
                            <param name="value" value="$VAR[Label_Addon_Last_Update]" />
                        </include>
                        <include content="Def_Dialog_Square_Info_Line">
                            <param name="label" value="$LOCALIZE[31362]" />
                            <param name="value" value="$INFO[ListItem.AddonOrigin]" />
                        </include>

                        <control type="group">
                            <height>15</height>
                        </control>
                        <control type="textbox">
                            <height>108</height>
                            <font>Tiny</font>
                            <textcolor>Dark2</textcolor>
                            <align>justify</align>
                            <label>$INFO[ListItem.AddonDescription]$INFO[ListItem.AddonNews,[CR][CR][B]$LOCALIZE[24036][/B][CR]]$INFO[Window(Home).Property(ResetScroll)]</label>
                            <visible>!String.IsEqual(Container(50).NumItems,0)</visible>
                        </control>
                        <control type="textbox">
                            <height>366</height>
                            <font>Tiny</font>
                            <textcolor>Dark2</textcolor>
                            <align>justify</align>
                            <label>$INFO[ListItem.AddonDescription]$INFO[ListItem.AddonNews,[CR][CR][B]$LOCALIZE[24036][/B][CR]]$INFO[Window(Home).Property(ResetScroll)]</label>
                            <visible>String.IsEqual(Container(50).NumItems,0)</visible>
                        </control>
                    </control>
                </control>

                <!-- TIPS - FOOTER -->

                <control type="label">
                    <right>83</right>
                    <bottom>100</bottom>
                    <height>50</height>
                    <font>Mini</font>
                    <scroll>false</scroll>
                    <textcolor>Dark3</textcolor>
                    <label>$VAR[Label_Dialog_Info_Footer_Tip_Right]</label>
                    <aligny>center</aligny>
                    <align>right</align>
                    <visible>ControlGroup(9000).HasFocus()</visible>
                    <include>Animation_Common_Fade_In</include>
                    <include>Animation_Common_Fade_Out</include>
                </control>
            </control>

            <!-- EXTENDED VIEW -->

            <control type="group">
                <include>Animation_Extended_Info_Window_Close_Zoom</include>

                <include content="Furniture_DialogInfo_Extended_Header">
                    <param name="visible" value="String.IsEmpty(Window.Property(addoncontent))" />
                    <param name="controlid" value="50" />
                </include>
                <include content="Furniture_DialogInfo_Extended_Footer">
                    <param name="visible" value="String.IsEmpty(Window(Home).Property(addoncontent))" />
                    <param name="controlid" value="50" />
                </include>
                <include content="View_Dialog_Info_Square">
                    <param name="visible" value="String.IsEmpty(Window(Home).Property(addoncontent))" />
                    <param name="controlid" value="50" />
                    <param name="fallbackpicture" value="DefaultAddonImages.png" />
                    <param name="visible.layouts" value="Control.HasFocus(50) | Control.HasFocus(507) | Window.IsVisible(DialogBusy.xml)" />
                </include>
            </control>
        </control>
    </include>
</includes>

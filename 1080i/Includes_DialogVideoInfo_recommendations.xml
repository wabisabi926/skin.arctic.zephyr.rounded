    <!--           CAST              -->
    <!-- =========================== -->

    <!-- CAST - LOCAL -->

    <include name="Recommendation_Cast_Local">
        <include content="Furniture_Header_DialogInfo_Extended">
            <param name="controlid" value="50" />
        </include>
        <include content="Furniture_Footer_DialogInfo_Extended">
            <param name="controlid" value="50" />
        </include>
        <include content="View_Dialog_Info_Cast" condition="!String.IsEmpty(ListItem.DBID) + !String.IsEqual(ListItem.DBType,set) + !$EXP[IsYoutubeItem]">
            <param name="fallbackpicture" value="DefaultActor.png" />
            <param name="visible" value="![Skin.HasSetting(filter.video.cast.on.line) | String.IsEmpty(ListItem.DBID)] + String.IsEmpty(Window(Home).Property(moviecontent)) + ![Window.IsVisible(script-wikipedia.xml) + !Skin.HasSetting(hide.button.video.wiki)]" />
            <param name="visible.layouts" value="[Control.HasFocus(50) | Control.HasFocus(507) | Control.HasFocus(6) | Control.HasFocus(10) | [!String.IsEmpty(Window(Home).Property(view_extended)) + [Window.IsVisible(DialogBusy.xml) | Window.IsVisible(DialogContextMenu.xml) | Window.IsVisible(DialogButtonMenu.xml) | Container(9999).IsUpdating ]]] + !Window.IsVisible(DialogVideoManager.xml) + !Window.IsVisible(DialogSelect.xml) + !Window.IsVisible(FileBrowser.xml)" />
            <param name="animation" value="Animation_cast" />
            <param name="controlid" value="50" />
            <param name="listleft" value="-840" />
        </include>
    </include>

    <!-- CAST - ONLINE -->

    <include name="Recommendation_Cast_Online">
        <include content="Furniture_Header_DialogInfo_Extended">
            <param name="controlid" value="9550" />
        </include>
        <include content="Furniture_Footer_DialogInfo_Extended">
            <param name="controlid" value="9550" />
        </include>
        <include content="View_Dialog_Info_Cast" condition="!String.IsEqual(ListItem.DBType,set) + !$EXP[IsYoutubeItem]">
            <param name="condition.includecontent" value="true" />
            <param name="fallbackpicture" value="pbtmdb.png" />
            <param name="visible" value="[Skin.HasSetting(filter.video.cast.on.line) | String.IsEmpty(ListItem.DBID)] + String.IsEmpty(Window(Home).Property(moviecontent)) + ![Window.IsVisible(script-wikipedia.xml) + !Skin.HasSetting(hide.button.video.wiki)] + !String.IsEqual(ListItem.DBType,set)" />
            <param name="animation" value="Animation_cast" />
            <param name="controlid" value="9550" />
            <param name="ContentToLoad" value="$VAR[Def_List_Cast]" />
            <param name="visible.layouts" value="Control.HasFocus(9550) | Control.HasFocus(95507) | Control.HasFocus(6) | Control.HasFocus(10) | [!String.IsEmpty(Window(Home).Property(view_extended)) + [Window.IsVisible(DialogBusy.xml) | Window.IsVisible(DialogContextMenu.xml) | Window.IsVisible(DialogButtonMenu.xml) | Window.IsVisible(DialogSelect.xml) | Window.IsVisible(FileBrowser.xml) | Container(9999).IsUpdating]]" />
            <param name="onclick1" value="$VAR[Path_Actor_Dialog_Info_TMDb]" />
            <param name="onclick2" value="Skin.Reset(TMDbHelper.ForceWidgetContainer)" />
            <param name="listleft" value="-840" />
            <param name="poster" value="true" />
            <param name="thumb" value="false" />
        </include>
        <include content="Def_Dialog_Info_List_Updating">
            <param name="visible" value="String.IsEmpty(Window(Home).Property(moviecontent)) + !$EXP[IsYoutubeItem] + [Skin.HasSetting(filter.video.cast.on.line) | String.IsEmpty(ListItem.DBID) | String.IsEqual(ListItem.DBType,season)] + !String.IsEqual(ListItem.DBType,set)" />
            <param name="controlid" value="9550" />
            <param name="centerleft" value="430" />
            <param name="label_spinner" value="$LOCALIZE[31575]..." />
        </include>
    </include>


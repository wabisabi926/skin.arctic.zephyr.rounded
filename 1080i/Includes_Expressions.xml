    <expression name="IsTVShowInProgress">
        [Container.Content(tvshows) | String.IsEqual(ListItem.DBType,tvshow) | Container.Content(season) | String.IsEqual(ListItem.DBType,season)] + !Integer.IsGreater(ListItem.Playcount,0) + Integer.IsGreater(ListItem.Property(WatchedEpisodes),0)

<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <!-- AUTOCOMPLETION IS ENABLED ? -->

    <expression name="Is_AutoCompletion_Enabled">[System.HasAddon(plugin.program.autocompletion) + System.AddonIsEnabled(plugin.program.autocompletion) + !Skin.HasSetting(Keyboard.DisableAutoCompletion)]</expression>

    <!-- SHOW VIDEO IN HOME IN WINDOWS FLIX -->

    <expression name="VideoWindowFlixIsActive">!Skin.HasSetting(enable.furniture.home.nowplaying.extended) + Skin.HasSetting(show.home.nowplaying.video.flix) + !Skin.HasSetting(home.hide.nowplaying)  + [Window.IsVisible(Home) + [$EXP[Home_Is_Horizontal_Netflix] | $EXP[Home_Is_Horizontal_Clean] | $EXP[Home_Is_Vertical_Netflix]]] + !Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + !$EXP[TrailerWindowIsActive]</expression>

    <!-- TMDBHELPER IS UPDATING ? -->

    <expression name="Exp_TMDbHelper_IsUpdating">[!String.IsEmpty(Window(Home).Property(TMDBHelper.IsUpdating)) | !String.IsEmpty(Window(Home).Property(TMDBHelper.IsUpdatingRating))]</expression>

    <!-- CLEARLOGO  -->

    <expression name="Exp_Title_Clearlogo_Available">[!String.IsEmpty(Container(99950).ListItem.Art(cropimage)) | !String.IsEmpty(Container(99950).ListItem.Property(base_clearlogo))]</expression>
    <expression name="Exp_Title_Clearlogo_PlayingNow_Available">[!String.IsEmpty(Player.Art(clearlogo)) | !String.IsEmpty(Player.Art(tvshow.clearlogo)) | !String.IsEmpty(Player.Art(artist.clearlogo))]</expression>

    <!-- CONTEXT MENU  -->

    <expression name="Exp_ContextMenu_HasPoster">[!String.IsEmpty(Container(99950).ListItem.Art(poster)) | !String.IsEmpty(Container(99950).ListItem.Property(base_poster))]</expression>

    <!-- SHOW LABEL ITEM MENU  -->

    <expression name="Exp_Show_Label_Item_Menu">$EXP[Home_Is_Vertical] + Skin.HasSetting(homemenu.only.icons) + Skin.HasSetting(home.showicons) + Skin.HasSetting(home.show.label)</expression>

    <!-- HOME LAYOUT TYPE -->

    <expression name="Home_Is_Vertical_Netflix">Skin.HasSetting(home.vertical) + !Skin.HasSetting(homemenu.horizontal.clean) + Skin.HasSetting(homemenu.netflix)</expression>
    <expression name="Home_Is_Horizontal_Netflix">!Skin.HasSetting(home.vertical)+ !Skin.HasSetting(homemenu.horizontal.clean) + Skin.HasSetting(homemenu.netflix) + Skin.HasSetting(home.horizontal) </expression>
    <expression name="Home_Is_Vertical">Skin.HasSetting(home.vertical)</expression>
    <expression name="Home_Is_Horizontal">!Skin.HasSetting(home.vertical) + Skin.HasSetting(home.horizontal)</expression>
    <expression name="Home_Is_Horizontal_Clean">Skin.HasSetting(home.horizontal) + Skin.HasSetting(homemenu.netflix) + Skin.HasSetting(homemenu.horizontal.clean)</expression>

    <!-- WIDGETS ENABLE ? -->

    <expression name="Widget1Enabled">String.IsEqual(Container(300).ListItem.Property(widgetEnable),yes)</expression>
    <expression name="Widget2Enabled">String.IsEqual(Container(300).ListItem.Property(widgetEnable.2),yes)</expression>
    <expression name="Widget3Enabled">String.IsEqual(Container(300).ListItem.Property(widgetEnable.3),yes)</expression>
    <expression name="Widget4Enabled">String.IsEqual(Container(300).ListItem.Property(widgetEnable.4),yes)</expression>
    <expression name="Widget5Enabled">String.IsEqual(Container(300).ListItem.Property(widgetEnable.5),yes)</expression>
    <expression name="Widget6Enabled">String.IsEqual(Container(300).ListItem.Property(widgetEnable.6),yes)</expression>

    <!-- YOUTUBE CONTENT -->

    <expression name="IsYoutube">String.Contains(Container.FolderPath,plugin://plugin.video.youtube)</expression>
    <expression name="IsYoutubeItem">String.Contains(ListItem.FolderPath,plugin://plugin.video.youtube)</expression>
    <expression name="IsYoutube_Comments">String.Contains(Container.FolderPath,plugin://plugin.video.youtube/special/parent_comments) | String.Contains(Container.FolderPath,plugin://plugin.video.youtube/special/child_comments)</expression>

    <!-- PLUGIN YOUTUBE / RADIO_DE - LISTITEM -->

    <expression name="IsPluginItem">String.Contains(ListItem.FolderPath,plugin://plugin.video.youtube) | String.Contains(ListItem.Path,plugin://plugin.audio.radio_de)</expression>

    <!-- PLUGIN TMDb - CONTENT -->

    <expression name="IsTMDbHelper">String.Contains(Container.FolderPath,plugin://plugin.video.themoviedb.helper)</expression>

    <!-- PLUGIN TMDb - LISTITEM -->

    <expression name="IsTMDbHelperItem">String.Contains(ListItem.Path,plugin://plugin.video.themoviedb.helper)</expression>

    <!-- PLUGIN ITUNES - LISTITEM -->

    <expression name="IsItunesItem">String.Contains(ListItem.Path,plugin://plugin.video.itunes)</expression>

    <!-- PLUGIN SHORTLIST -->

    <expression name="IsPluginShortlist">String.Contains(Container.FolderPath,plugin://plugin.program.shortlist)</expression>

    <!-- PLUGIN RADIO_DE - LISTITEM -->

    <expression name="IsPluginRadio_DeItem">String.Contains(ListItem.FolderPath,plugin://plugin.audio.radio_de)</expression>

    <!-- AN PLUGIN ? -->

    <expression name="IsAnPlugin">String.Contains(Container.FolderPath,plugin://)</expression>

    <!-- IS LIBRARY ? -->

    <expression name="IsAnLibrary">String.Contains(Container.FolderPath,library://) | String.Contains(ListItem.FolderPath,library://)</expression>

    <!-- IS SOURCE ? -->

    <expression name="IsAnSource">String.StartsWith(Container.FolderPath,sources://)</expression>

    <!-- LAYOUT CONTENT -->

    <expression name="Is_Person_Info">[String.IsEqual(ListItem.Property(item.type),person) | String.IsEqual(ListItem.Property(tmdb_type),person)]</expression>

    <expression name="Is_Info_Dialogs">[Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml) | Window.IsVisible(DialogAddonInfo.xml) | Window.IsVisible(DialogPVRInfo.xml) | Window.IsVisible(script-tmdbhelper-wikipedia.xml)]
    </expression>

    <expression name="Is_View_Video_Flix">Control.IsVisible(522) | Control.IsVisible(521)</expression>
    <expression name="Is_View_Video_Flix_Wall">Control.IsVisible(5228) | Control.IsVisible(5218) | Control.IsVisible(5048)</expression>

    <expression name="Is_View_Music_Flix">Control.IsVisible(523) | Control.IsVisible(522)</expression>
    <expression name="Is_View_Music_Flix_Wall">Control.IsVisible(5238) | Control.IsVisible(5228)</expression>

    <expression name="Exp_View_Flag_Watched_Album_Song">[[!String.IsEqual(ListItem.DBType,album) + !String.IsEqual(ListItem.DBType,song)] | [[String.IsEqual(ListItem.DBType,album) | String.IsEqual(ListItem.DBType,song)] + Skin.HasSetting(show.markers.watched.music)]]</expression>
    <expression name="Exp_Context_Menu_Has_Poster">[!String.IsEmpty(Container(99950).ListItem.Art(poster)) | !String.IsEmpty(Container(99950).ListItem.Property(base_poster))]</expression>

    <!-- AUTO SLIDE MENU -->

    <expression name="Has_Home_Menu_Auto_Slide_Out_Animation">[Skin.HasSetting(homemenu.slide) + !Skin.HasSetting(hide.only.if.widgetcontainer.gets.focus)]</expression>

    <!-- AUTO FOCUS MAIN MENU IF INACTIVITY -->

    <expression name="Has_Home_Menu_Auto_Focus_Main_If_Inactivity">[!$EXP[TrailerIsReady] + !$EXP[TrailerIsPlaying] + !$EXP[TrailerWaitingForPlayer] + !$EXP[TrailerWindowIsActive] + [System.IdleTime(10) + Skin.HasSetting(homemenu.auto.back.to.main) + !String.IsEmpty(Window(Home).Property(focus.main.menu.timer)) + Window.IsVisible(Home) + !Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + !Window.IsVisible(DialogAddonInfo.xml) + !Window.IsVisible(DialogPVRInfo.xml) + !Window.IsVisible(DialogContextMenu.xml)] + !Window.IsVisible(DialogBusy.xml) + !Window.IsVisible(DialogConfirm.xml)]</expression>

    <!-- AUTO FOCUS MAIN MENU IF INACTIVITY ON SEARCH BAR -->

    <expression name="Has_Home_menu_Auto_Focus_Main_If_SearchBar_Inactivity">[!$EXP[TrailerIsReady] + !$EXP[TrailerIsPlaying] + !$EXP[TrailerWaitingForPlayer] + !$EXP[TrailerWindowIsActive] + [System.IdleTime(5) + !String.IsEmpty(Window(Home).Property(focus_main_menu_timer_from_search_bar)) + Window.IsVisible(Home) + !Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + !Window.IsVisible(DialogAddonInfo.xml) + !Window.IsVisible(DialogPVRInfo.xml) + !Window.IsVisible(DialogContextMenu.xml)] + !Window.IsVisible(DialogBusy.xml) + !Window.IsVisible(DialogConfirm.xml)]</expression>

    <!-- AUTO SLIDE MENU IF NOWPLAYING -->

    <expression name="Has_Now_Playing_Auto_Slide_Out_Animation">[!$EXP[TrailerIsReady] + !$EXP[TrailerIsPlaying] + !$EXP[TrailerWaitingForPlayer] + !$EXP[TrailerWindowIsActive] + Skin.HasSetting(hide.home.menu.with.nowplaying.extended) + !String.IsEmpty(Window(Home).Property(nowplaying.auto.show.timer)) + Skin.HasSetting(enable.furniture.home.nowplaying.extended) + [!Skin.HasSetting(homemenu.slide) | Skin.HasSetting(hide.only.if.widgetcontainer.gets.focus)]]</expression>

    <!-- DISPLAY NOWPLAYING IF WIDGET IS FOCUS -->

    <expression name="Has_Home_Menu_Auto_Slide_Out_Animation_Only_If_Widget_Is_Focused">[Skin.HasSetting(homemenu.slide) + [$EXP[Home_Is_Horizontal] + Skin.HasSetting(homemenu.horizontal.clean)] | [$EXP[Home_Is_Vertical] + Skin.HasSetting(homemenu.slide)] + Skin.HasSetting(hide.only.if.widgetcontainer.gets.focus)]</expression>

    <!-- AUTO SHOW NOWPLAYING HELPER -->

    <expression name="Extended_Now_Playing_Helper_AutoShow">[!$EXP[TrailerIsReady] + !$EXP[TrailerIsPlaying] + !$EXP[TrailerWaitingForPlayer] + !$EXP[TrailerWindowIsActive] + [System.IdleTime(5) + !String.IsEmpty(Window(Home).Property(nowplaying.auto.show.timer)) + Skin.HasSetting(enable.furniture.home.nowplaying.extended) + Window.IsVisible(Home) + [Player.HasMedia | Player.Playing] + Skin.HasSetting(enable.home.auto.show.nowplaying.extended) + !Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogMusicInfo.xml) + !Window.IsVisible(DialogAddonInfo.xml) + !Window.IsVisible(DialogPVRInfo.xml) + !Window.IsVisible(DialogContextMenu.xml)] + !Window.IsVisible(DialogBusy.xml) + !Window.IsVisible(DialogConfirm.xml)]</expression>

    <!-- AUTO CLOSE NOWPLAYING HELPER -->

    <expression name="Extended_Now_Playing_Helper_AutoClose">[!$EXP[TrailerIsReady] + !$EXP[TrailerIsPlaying] + !$EXP[TrailerWaitingForPlayer] + !$EXP[TrailerWindowIsActive] + [[!String.IsEmpty(Window(Home).Property(controlsvisible)) | Control.HasFocus(25) | Control.HasFocus(778)] + Skin.HasSetting(enable.furniture.home.nowplaying.extended) + Window.IsVisible(Home) + !Player.HasMedia + !Player.Playing + !Skin.HasSetting(hide.home.nowplaying.extended.osd.control.button)]]</expression>

    <!-- NOWPLAYING VISIBLE -->

    <expression name="Extended_Now_Playing_Is_Visible">[Skin.HasSetting(enable.furniture.home.nowplaying.extended) + Window.IsVisible(Home) + Player.HasMedia] + [[!ControlGroup(301).HasFocus() + !Control.HasFocus(9808) + !Control.HasFocus(9888) + !Control.HasFocus(9567) + !Control.HasFocus(8808) + !Control.HasFocus(8888) + !Control.HasFocus(4567)] | ControlGroup(777).HasFocus()]</expression>


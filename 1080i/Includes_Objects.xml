    <!-- SPINNER -->

    <include name="Object_Spinner_Busy">
        <param name="label" default="$LOCALIZE[31546]..." />
        <param name="textcolor" default="Dark2" />
        <param name="centerleft" default="54" />
        <param name="centertop" default="54" />
        <param name="show_label_spinner" default="true" />
        <param name="hasspinner" default="true" />
        <param name="hasprogress" default="false" />
        <param name="texture" default="dialog/loading-back.png" />
        <param name="size" default="100" />
        <param name="icon" default="special://skin/extras/icons/kodi.png" />
        <param name="colordiffuse" default="PanelWhite70" />
        <param name="progress" default="Control.GetLabel(32)" />
        <param name="progress_id" default="32" />
        <param name="spinprogress" default="false" />
        <param name="spinspinner" default="true" />
        <param name="visible" default="true" />
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <nested />
                <centerleft>$PARAM[centerleft]</centerleft>
                <centertop>$PARAM[centertop]</centertop>
                <width>$PARAM[size]</width>
                <height>$PARAM[size]</height>

                <control type="image" description="Back">
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture>$PARAM[texture]</texture>
                    <colordiffuse>e7dedede</colordiffuse>
                </control>
                <control type="image" description="Icon">
                    <bordersize>30</bordersize>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture>$PARAM[icon]</texture>
                    <colordiffuse>$PARAM[colordiffuse]</colordiffuse>
                    <!-- <visible>![Container.Scrolling + $EXP[Exp_AlphabetTypes_Only]]</visible> -->
                    <animation effect="fade" start="0" end="100" time="200" delay="1200" reversible="true">Visible</animation>
                    <animation effect="fade" start="100" end="0" time="200" delay="400" reversible="true">Hidden</animation>
                </control>
                <include content="Object_Control" condition="$PARAM[hasspinner]">
                    <param name="control" value="group" />
                    <description>Busy animation</description>
                    <animation effect="rotate" condition="$PARAM[spinspinner]" start="360" end="0" loop="true" time="1000" center="auto">Conditional</animation>
                    <control type="image">
                        <texture colordiffuse="$VAR[Color_Focus]">dialog/loading-spinner.png</texture>
                        <aspectratio>keep</aspectratio>
                    </control>
                    <control type="image">
                        <texture colordiffuse="$VAR[Color_FocusGradient]">dialog/loading-spinner.png</texture>
                        <aspectratio>keep</aspectratio>
                        <animation effect="fade" condition="$PARAM[spinspinner]" start="0" end="100" pulse="true" time="1000">Conditional</animation>
                    </control>
                </include>

                <include content="Object_Control" condition="$PARAM[hasprogress]">
                    <param name="control" value="group" />
                    <description>Busy animation</description>
                    <animation effect="rotate" condition="$PARAM[spinprogress]" start="360" end="0" loop="true" time="2000" center="auto">Conditional</animation>
                    <control type="image">
                        <texture colordiffuse="$VAR[Color_Focus]">$INFO[$PARAM[progress],progress/circle_info/p,.png]</texture>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                    </control>
                    <control type="image">
                        <texture colordiffuse="$VAR[Color_FocusGradient]">$INFO[$PARAM[progress],progress/circle_info/p,.png]</texture>
                        <animation effect="fade" end="66" condition="true">Conditional</animation>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                        <include content="Defs_Progress_Colorfade">
                            <param name="id" value="$PARAM[progress_id]" />
                        </include>
                    </control>
                </include>

                <include content="Object_Control" condition="$PARAM[show_label_spinner]">
                    <param name="control" value="label" />
                    <bottom>-40</bottom>
                    <height>40</height>
                    <width>600</width>
                    <centerleft>50%</centerleft>
                    <align>center</align>
                    <label>$PARAM[label]</label>
                    <font>Tiny</font>
                    <textcolor>$PARAM[textcolor]</textcolor>
                </include>
            </control>
        </definition>
    </include>

    <include name="Object_Spinner_Pause">
        <param name="visible" default="Player.Paused + !Skin.HasSetting(hide.play.pause.info)" />
        <param name="centerleft" default="54" />
        <param name="centertop" default="54" />
        <param name="size" default="100" />
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <centerleft>$PARAM[centerleft]</centerleft>
                <centertop>$PARAM[centertop]</centertop>
                <height>$PARAM[size]</height>
                <width>$PARAM[size]</width>

                <control type="image" description="Back">
                    <left>0</left>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture>dialog/loading-back.png</texture>
                    <animation effect="fade" start="100" end="0" time="500" condition="Player.Playing">Conditional</animation>
                    <visible>Player.Playing</visible>
                </control>
                <control type="image" description="Play">
                    <left>0</left>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture colordiffuse="FFFFFFFF">nowplaying/play.png</texture>
                    <animation effect="fade" start="100" end="0" time="500" condition="Player.Playing">Conditional</animation>
                    <visible>Player.Playing</visible>
                    <include>Animation_Rotate_Play</include>
                </control>
                <control type="image">
                    <left>0</left>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <texture colordiffuse="$VAR[Color_Highlight]">$INFO[Control.GetLabel(933),progress/circle_info/p,.png]</texture>
                    <aspectratio align="center">keep</aspectratio>
                    <animation effect="fade" start="100" end="0" time="500" condition="Player.Playing">Conditional</animation>
                    <visible>Player.Playing</visible>
                </control>

                <control type="image" description="Back">
                    <left>0</left>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture>dialog/loading-back.png</texture>
                    <animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
                </control>
                <control type="image" description="Pause">
                    <left>0</left>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <aspectratio align="center" aligny="center">keep</aspectratio>
                    <texture colordiffuse="FFFFFFFF">nowplaying/pause.png</texture>
                    <animation effect="fade" start="0" end="100" time="150">VisibleChange</animation>
                    <visible>Player.Paused</visible>
                </control>
                <control type="progress" id="933">
                    <texturebg />
                    <lefttexture />
                    <midtexture />
                    <righttexture />
                    <info>Player.Progress</info>
                    <visible>false</visible>
                </control>
                <control type="image">
                    <left>0</left>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <texture colordiffuse="$VAR[Color_Highlight]">$INFO[Control.GetLabel(933),progress/circle_info/p,.png]</texture>
                    <aspectratio align="center">keep</aspectratio>
                    <visible>!String.IsEmpty(Player.Duration)</visible>
                </control>
            </control>
        </definition>
    </include>

    <include name="Object_Spinner_Progress">
        <visible>$PARAM[visible]</visible>

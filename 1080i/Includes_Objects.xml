            <ondown condition="[Window.IsVisible(MyMusicNav.xml) | Window.IsVisible(MyPlaylist.xml) | Window.IsVisible(MyPics.xml)] + Skin.HasSetting(enable.view.flix.scroll.wall.music) + $EXP[View_Music_Flix] + [Container($PARAM[idlayout]).HasNext | Container($PARAM[idlayout]).HasPrevious]">SetFocus(2$PARAM[idlayout]8)</ondown>

            <ondown condition="$EXP[JumpbarIfSortMethode] + Control.IsVisible($PARAM[scrollid]) + [Window.IsVisible(MyMusicNav.xml) | Window.IsVisible(MyPlaylist.xml) | Window.IsVisible(MyPics.xml)] + [[Skin.HasSetting(enable.view.flix.scroll.wall.music) + $EXP[View_Music_Flix_Wall]] | !$EXP[View_Music_Flix_Wall]] + $PARAM[jumpbar]">SetFocus(390001)</ondown>

            <texturesliderbackground border="4" colordiffuse="Dark4">scrollbar/scrollh.png</texturesliderbackground>
            <texturesliderbar border="4" colordiffuse="Dark3">scrollbar/scrollh.png</texturesliderbar>
            <texturesliderbarfocus border="4">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/scrollh_h.png</texturesliderbarfocus>
            <animation effect="fade" start="0" end="100" time="400" condition="Container.Scrolling | Control.HasFocus($PARAM[scrollid])">Conditional</animation>
            <animation effect="fade" start="100" end="0" time="400" condition="!Container.Scrolling + !Control.HasFocus($PARAM[scrollid])">Conditional</animation>
        </definition>
    </include>


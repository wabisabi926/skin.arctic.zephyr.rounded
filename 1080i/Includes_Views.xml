                <!-- SUB TITLE - ALBUMS / SONGS -->

                <control type="label">
                    <aligny>center</aligny>
                    <align>$PARAM[align]</align>
                    <width>$PARAM[width]</width>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_View_Flix_Sub_Title_Music]</label>
                    <visible>Container.Content(albums) | Container.Content(songs) | container.content(artists)</visible>

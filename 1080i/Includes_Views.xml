                    <visible>$EXP[IsAnPlugin]</visible>
                    <visible>Container.Content()</visible>
                </control>

                <!-- SUB TITLE - ADDONS -->

                <control type="label">
                    <aligny>center</aligny>
                    <align>$PARAM[align]</align>
                    <width>$PARAM[width]</width>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$INFO[ListItem.AddonType]$INFO[ListItem.AddonVersion,  •  v ]</label>
                    <visible>Container.Content(addons)</visible>

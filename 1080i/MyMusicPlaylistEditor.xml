<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">50</defaultcontrol>
    <views>50</views>
    <include condition="Skin.HasSetting(enabled.tmdb.helper.blur)">Action_Blur_Onload</include>

    <controls>
        <include condition="!Skin.HasSetting(show.global.visualisation.background.video)">Hidden_Video_Window</include>
        <include>Background_Global</include>
        <include>Furniture_Header</include>
        <include condition="!Skin.HasSetting(show.clock.date.weather.home.only)">Furniture_Footer_Clock_Right</include>
        <include>Furniture_Header_NowPlaying</include>
        <include>Furniture_Header_Clock_Right</include>

        <control type="label" id="12">
            <visible>false</visible>
        </control>
        <control type="label" id="101">
            <visible>false</visible>
        </control>

        <control type="group">
            <include>Animation_Common</include>

            <!-- LEFT PANEL -->

            <control type="group">
                <include content="Def_Dialog_Settings"><param name="width" value="850" /></include>

                <include content="Def_Dialog_Header">
                    <param name="label" value="$LOCALIZE[2]$INFO[Control.GetLabel(12), - ,]" />
                    <param name="icon" value="filebox" />
                </include>

                <include content="Object_Scrollbar_Filemanager">
                    <param name="scrollid" value="1824" />
                    <param name="onleft" value="50" />
                    <param name="onright" value="100" />
                </include>
                <include content="Object_Scrollbar_Filemanager">
                    <param name="scrollid" value="1825" />
                    <param name="onleft" value="100" />
                    <param name="onright" value="9000" />
                    <param name="left" value="1770" />
                </include>

                <control type="list" id="50">
                    <description>Left File List</description>
                    <top>112</top>
                    <left>16</left>
                    <right>16</right>
                    <height>483</height>

                    <include>Def_View_Focus_Dialog_Menu_On_Left</include>

                    <onup>50</onup>
                    <ondown>50</ondown>
                    <onright>1824</onright>

                    <pagecontrol>1824</pagecontrol>

                    <include>Animation_Scrolltime_Views_List</include>

                    <itemlayout height="69" width="818">
                        <control type="label">
                            <left>30</left>
                            <width>715</width>
                            <align>left</align>
                            <textcolor>PanelWhite70</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <right>30</right>
                            <width>150</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>PanelWhite70</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="69" width="818">
                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="12">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/box_h.png</texture>
                            <animation effect="fade" start="100" end="33" condition="!Control.HasFocus(50) + !Control.HasFocus(1824)">Conditional</animation>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <right>30</right>
                            <width>720</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <!-- RIGHT PANEL -->

            <control type="group">
                <include content="Def_Dialog_Settings"><param name="left" value="990" /><param name="width" value="850" /></include>

                <include content="Def_Dialog_Header">
                    <param name="label" value="$LOCALIZE[559]$INFO[Control.GetLabel(101), - ,]" />
                    <param name="icon" value="filebox" />
                </include>

                <control type="list" id="100">
                    <description>Left File List</description>
                    <include>Animation_Scrolltime_Views_List</include>

                    <top>112</top>
                    <left>16</left>
                    <right>16</right>
                    <height>483</height>

                    <onleft>50</onleft>
                    <onright>1825</onright>
                    <!-- <include>Def_View_Focus_Dialog_Menu_On_Right</include> -->
                    <onup>100</onup>
                    <ondown>100</ondown>

                    <pagecontrol>1825</pagecontrol>

                    <itemlayout height="69" width="818">
                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>PanelWhite70</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <right>30</right>
                            <width>150</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>PanelWhite70</textcolor>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="69" width="818">
                        <control type="image">
                            <width>100%</width>
                            <height>66</height>
                            <texture border="12">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/box_h.png</texture>
                            <animation effect="fade" start="100" end="33" condition="!Control.HasFocus(100) + !Control.HasFocus(1825)">Conditional</animation>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <width>720</width>
                            <align>left</align>
                            <textcolor>Selected</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="label">
                            <right>30</right>
                            <width>720</width>
                            <align>right</align>
                            <textcolor>Selected</textcolor>
                            <font>Tiny</font>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </focusedlayout>
                </control>
            </control>
        </control>

        <!-- CONTEXT MENU -->

        <control type="group">
            <include>Animation_Fade_In</include>
            <include>Animation_Fade_Out</include>
            <visible>$EXP[View_Context_Menu_Visible]</visible>
            <include>Background_Overlay</include>
        </control>

        <control type="group">
            <include>Animation_RightSide</include>

            <visible allowhiddenfocus="true">$EXP[View_Context_Menu_Visible]</visible>

            <top>184</top>
            <centerleft>50%</centerleft>
            <height>689</height>
            <width>470</width>

            <!-- CONTEXT BACKGROUND -->

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">409</param>
                <param name="visible">!Player.HasMedia</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">619</param>
                <param name="visible">Player.HasMedia</param>
            </include>

            <!-- ARROWS -->

            <control type="group">
                <visible>Integer.IsGreater(Container(9000).NumItems,0)</visible>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>-24</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="White100" flipy="true">common/arrow_small_down.png</texture>
                </control>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>629</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="White100" flipy="false">common/arrow_small_down.png</texture>
                    <animation effect="slide" end="0,-210" time="0" condition="!Player.HasMedia">Conditional</animation>
                </control>
            </control>

            <include content="Def_Dialog_Header">
                <param name="label" value="33063" />
                <param name="icon" value="files" />
            </include>

            <control type="grouplist" id="9000">
                <top>112</top>
                <pagecontrol>9070</pagecontrol>
                <usecontrolcoords>true</usecontrolcoords>
                <include content="Def_Dialog_Menu_GroupList_scrollbar"><param name="height" value="560" /><param name="scrollid" value="560" /></include>
                <include>Animation_Scrolltime_Views_List</include>

                <!-- NOW PLAYING -->

                <control type="button" id="55555">
                    <include>Def_Dialog_Menu_Button_Title</include>
                    <label>31448</label>
                    <visible>$EXP[Display_Views_Menu_MiniPlayer]</visible>
                </control>

                <include>Def_Dialog_Menu_Button_Playlist</include>

                <!-- MINI PLAYER -->

                <include>Def_Dialog_Menu_MiniPlayer</include>

                <control type="button" id="90200">
                    <include>Def_Dialog_Menu_Button_Title</include>
                    <label>16106</label>
                </control>

                <control type="button" id="6">
                    <label>21478</label>
                    <description>Open</description>
                    <include>Def_Dialog_Menu_Button_Gradient_Select</include>
                </control>
                <control type="button" id="7">
                    <label>190</label>
                    <description>Save</description>
                    <include>Def_Dialog_Menu_Button_Gradient_Select</include>
                </control>
                <control type="button" id="8">
                    <label>192</label>
                    <description>Clear</description>
                    <include>Def_Dialog_Menu_Button_Gradient_Select</include>
                </control>
            </control>

            <!-- SCROLLBAR -->

            <include content="Object_Scrollbar_Dialog_Vertical">
                <param name="scrollid" value="9070" />
                <param name="top" value="112" />
                <param name="onleft" value="9000" />
                <param name="onright" value="9000" />
                <param name="onback" value="9000" />
                <param name="height" value="560" />
                <param name="centerright" value="4" />
            </include>
        </control>
    </controls>
</window>

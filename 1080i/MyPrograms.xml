<?xml version="1.0" encoding="UTF-8"?>
<window id="1">
    <views>50,550,57,500,547,523</views>
    <defaultcontrol always="true">50</defaultcontrol>
    <menucontrol>9000</menucontrol>
    <include condition="Skin.HasSetting(enabled.tmdb.helper.blur)">Action_Blur_Onload</include>

    <onload>RunScript(script.skinvariables,action=buildviews)</onload>

    <controls>
        <include condition="!Skin.HasSetting(show.global.visualisation.background.video)">Hidden_Video_Window</include>
        <include>Background_Global</include>

        <include condition="$EXP[Exp_View_50_Include]">View_50_List_Addons</include>
        <include condition="$EXP[Exp_View_550_Include]">View_550_List_Square_Addons</include>
        <include condition="$EXP[Exp_View_57_Include]">View_57_List_Info_Video</include>
        <include condition="$EXP[Exp_View_500_Include]">View_500_Thumbnails</include>
        <include condition="$EXP[Exp_View_547_Include]">View_547_ThumbnailsSmall</include>
        <include condition="$EXP[Exp_View_523_Include]">View_523_Flix_Square</include>

        <include>Furniture_Header</include>
        <include>Furniture_Header_NowPlaying</include>
        <include>Furniture_Jumpbar_Horizontal</include>
        <include condition="Skin.HasSetting(show.furniture.footer)">Furniture_Footer</include>
        <include>Furniture_Flags</include>
        <include>Furniture_Header_Clock_Right</include>

        <control type="group">
            <include>Animation_Fade_In</include>
            <include>Animation_Fade_Out</include>
            <visible>$EXP[View_Context_Menu_Visible]</visible>
            <include>Background_Overlay</include>
        </control>

        <control type="group">
            <visible allowhiddenfocus="true">$EXP[View_Context_Menu_Visible]</visible>
            <include>Animation_RightSide</include>

            <top>184</top>
            <centerleft>50%</centerleft>
            <height>689</height>
            <width>470</width>

            <!-- CONTEXT BACKGROUND -->

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">409</param>
                <param name="visible">!Player.HasMedia</param>
            </include>

            <include content="Def_Dialog_Background_PowerMenu">
                <param name="height">619</param>
                <param name="visible">Player.HasMedia</param>
            </include>

            <!-- ARROWS -->

            <control type="group">
                <visible>Integer.IsGreater(Container(9000).NumItems,0)</visible>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>-24</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="White100" flipy="true">common/arrow-small.png</texture>
                </control>
                <control type="image">
                    <centerleft>50%</centerleft>
                    <top>629</top>
                    <include>Def_Arrow_Size</include>
                    <texture colordiffuse="White100" flipy="false">common/arrow-small.png</texture>
                    <animation effect="slide" end="0,-210" time="0" condition="!Player.HasMedia">Conditional</animation>
                </control>
            </control>

            <control type="label">
                <include>Def_Dialog_Header_Title</include>
                <label>14018</label>
            </control>
            <include>Def_Dialog_Header_Logo</include>
            <include>Def_Dialog_Header_Line</include>

            <control type="grouplist" id="9000">
                <top>112</top>
                <pagecontrol>9070</pagecontrol>
                <usecontrolcoords>true</usecontrolcoords>
                <include content="Def_View_ContextMenu_GroupList_scrollbar"><param name="height" value="560" /><param name="scrollid" value="9070" /></include>
                <include>Animation_Scrolltime_Views_List</include>

                <!-- NOW PLAYING -->

                <control type="button" id="55555">
                    <include>Def_Context_Menu_Label</include>
                    <label>31448</label>
                    <visible>$EXP[Display_Views_Menu_Mini_Player]</visible>
                </control>

                <include>Def_View_ContextMenu_Button_Playlist</include>

                <!-- MINI PLAYER -->

                <include>Def_View_ContextMenu_Player</include>

                <!-- ALL VIEWS -->

                <control type="button" id="55550">
                    <include>Def_Context_Menu_Label</include>
                    <label>31226</label>
                </control>

                <!-- <control type="button" id="2"> -->
                    <!-- <description>View</description> -->
                    <!-- <include>Def_Button_Gradient_Context</include> -->
                    <!-- <align>left</align> -->
                <!-- </control> -->

                <control type="button" id="9001">
                    <include>Def_Button_Gradient_Context</include>
                    <label>$LOCALIZE[582]:</label>
                    <label2>$INFO[Container.Viewmode]</label2>
                    <onclick>Runscript(script.skinvariables,action=buildviews,contentid=$VAR[Items_ViewMode_Switch],pluginname=$INFO[Container.PluginName])</onclick>
                </control>

                <control type="button" id="3">
                    <description>Sort</description>
                    <include>Def_Button_Gradient_Context</include>
                </control>
                <control type="togglebutton" id="4">
                    <description>Ascending</description>
                    <include>Def_Button_Gradient_Context</include>
                    <label>584</label>
                    <altlabel>585</altlabel>
                </control>

                <!-- THIS VIEW  -->

                <control type="button" id="55551">
                    <include>Def_Context_Menu_Label</include>
                    <label>31051</label>
                    <visible>Control.IsVisible(50)</visible>
                    <visible>Container.Content(addons)</visible>
                </control>

                <!-- list extended -->
                <control type="radiobutton" id="90281">
                    <include>Def_Button_Gradient_Context</include>
                    <label>31192</label>
                    <selected>!Skin.HasSetting(disable.view.50.extended.list.addons)</selected>
                    <onclick>Skin.ToggleSetting(disable.view.50.extended.list.addons)</onclick>
                    <visible>Control.IsVisible(50) | Control.IsVisible(550)</visible>
                </control>
            </control>

            <!-- SCROLLBAR -->

            <include content="Object_Scrollbar_Dialog_Vertical">
                <param name="scrollid" value="9070" />
                <param name="top" value="112" />
                <param name="onleft" value="9000" />
                <param name="onright" value="9000" />
                <param name="onback" value="9000" />
                <param name="height" value="560" />
                <param name="centerright" value="4" />
            </include>
        </control>
    </controls>
</window>

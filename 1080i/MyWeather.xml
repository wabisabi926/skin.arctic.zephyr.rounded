            <include>Def_Hidden_Button</include>
            <onfocus>Weather.LocationNext</onfocus>
            <onfocus>AlarmClock(delay,SetFocus(604),00:00,silent)</onfocus>
            <!-- <include content="Object_OnDirection_Action"><param name="ondirection" value="9100" /></include> -->
        </control>
        <control type="button" id="604">
            <include>Def_Hidden_Button</include>
            <onfocus condition="Weather.IsFetched + !String.IsEmpty(Window(Weather).Property(Updated))">AlarmClock(delay,SetFocus(9100),00:00,silent)</onfocus>
            <onfocus condition="String.IsEmpty(Window(Weather).Property(Updated))">AlarmClock(delay,SetFocus(605),00:00,silent)</onfocus>
            <!-- <include content="Object_OnDirection_Action"><param name="ondirection" value="9100" /></include> -->
        </control>
        <control type="button" id="605">
            <include>Def_Hidden_Button</include>
            <onfocus condition="Weather.IsFetched + !String.IsEmpty(Window(Weather).Property(Updated))">AlarmClock(delay,SetFocus(9100),00:00,silent)</onfocus>
            <onfocus condition="String.IsEmpty(Window(Weather).Property(Updated))">AlarmClock(delay,SetFocus(604),00:00,silent)</onfocus>
            <!-- <include content="Object_OnDirection_Action"><param name="ondirection" value="9100" /></include> -->
        </control>
    </controls>
</window>

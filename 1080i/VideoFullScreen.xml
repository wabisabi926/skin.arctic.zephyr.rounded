<?xml version="1.0" encoding="UTF-8"?>
<window id="2005">

    <onload condition="Skin.HasSetting(show.osd.video.info.at.start)">SetProperty(OSDVideoShow_AT_START_INFO,1,Home)</onload>

    <onunload condition="Skin.HasSetting(home.netflix.autoplay.trailer) + $EXP[TrailerIsPlaying] + String.IsEmpty(Window(Home).Property(TrailerPath))">SetProperty(TrailerPath,$INFO[Window(Home).Property(TrailerPath2)],Home)</onunload>
    <onunload condition="Skin.HasSetting(home.netflix.autoplay.trailer) + $EXP[TrailerIsPlaying]">SetProperty(TrailerIsPlayingFullscreen,1,Home)</onunload>

    <onunload condition="Skin.HasSetting(show.osd.video.info.at.start)">ClearProperty(OSDVideoShow_AT_START_INFO,Home)</onunload>

    <onunload condition="!Player.HasMedia | String.IsEmpty(VideoPlayer.DBID)">alarmclock(ResetValue,ClearProperty(dialogvideoinfo,Home),00:00,silent)</onunload>
    <onunload condition="!Player.HasMedia">alarmclock(ResetValue,ClearProperty(Encoded.VideoPlayer.Title,Home),00:00,silent)</onunload>
    <onunload condition="!Player.HasMedia">alarmclock(ResetValue,ClearProperty(Encoded.VideoPlayer.TvShowTitle,Home),00:00,silent)</onunload>

    <controls>
        <control type="group" id="0">
            <left>0</left>
            <include>Animation_Fade_In</include>
            <visible>Control.IsVisible(10) | Control.IsVisible(11) | Control.IsVisible(12)</visible>
            <control type="image">
                <width>1920</width>
                <height>325</height>
                <texture colordiffuse="OSD_Black" flipy="false">common/white.png</texture>
            </control>
            <control type="grouplist">
                <left>20</left>
                <top>20</top>
                <orientation>vertical</orientation>
                <control type="label" id="10">
                    <description>row 1 label</description>
                    <width>auto</width>
                    <height>75</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>PanelWhite100</textcolor>
                </control>
                <control type="label" id="11">
                    <description>row 2 label</description>
                    <height>75</height>
                    <width>auto</width>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>PanelWhite100</textcolor>
                </control>
                <control type="label" id="12">
                    <description>row 3 label</description>
                    <width>auto</width>
                    <height>75</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>PanelWhite100</textcolor>
                </control>
            </control>
        </control>
    </controls>
</window>

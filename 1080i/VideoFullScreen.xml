<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload condition="!String.IsEmpty(Window(Home).Property(TMDBHelper.WidgetContainer))">SetProperty(TMDB_LastWidgetContainer,$INFO[Window(Home).Property(TMDBHelper.WidgetContainer)],Home)</onload>
    <onload>ClearProperty(TMDbHelper.WidgetContainer,Home)</onload>
    <!-- <onload>Skin.Reset(TMDbHelper.ForceWidgetContainer)</onload> -->

    <onload condition="Skin.HasSetting(show.osd.video.info.at.start) + String.IsEmpty(Window(Home).Property(OSDVideo_Show_AT_START_INFO))">SetProperty(OSDVideo_Show_AT_START_INFO,1,Home)</onload>

    <onunload condition="Skin.HasSetting(home.views.flix.autoplay.trailer) + $EXP[Trailer_Is_Playing] + String.IsEmpty(Window(Home).Property(Last_Trailer_Path))">SetProperty(Last_Trailer_Path,$INFO[Window(Home).Property(Current_Trailer_Path)],Home)</onunload>

    <onunload condition="Skin.HasSetting(home.views.flix.autoplay.trailer) + $EXP[Trailer_Is_Playing]">SetProperty(Trailer_Is_Fullscreen_Playing,1,Home)</onunload>

    <onunload condition="Skin.HasSetting(show.osd.video.info.at.start)">ClearProperty(OSDVideo_Show_AT_START_INFO,Home)</onunload>

    <onunload condition="!Player.HasMedia | String.IsEmpty(VideoPlayer.DBID)">AlarmClock(ResetValue,ClearProperty(OSDVideo_DIALOG_VIDEO_INFO,Home),00:00,silent)</onunload>

    <onunload condition="!String.IsEmpty(Window(home).Property(TMDB_LastWidgetContainer))">SetProperty(TMDbHelper.WidgetContainer,$INFO[Window(home).Property(TMDB_LastWidgetContainer)],Home)</onunload>

    <controls>
        <control type="group" id="0">
            <visible>Control.IsVisible(10) | Control.IsVisible(11) | Control.IsVisible(12)</visible>
            <include>Animation_Common_Fade_In</include>

            <left>0</left>

            <control type="image">
                <width>1920</width>
                <height>325</height>
                <texture colordiffuse="OSD_Black" flipy="false">common/white.png</texture>
            </control>

            <control type="grouplist">
                <top>20</top>
                <left>20</left>

                <orientation>vertical</orientation>

                <control type="label" id="10">
                    <description>row 1 label</description>
                    <width>auto</width>
                    <height>75</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>PanelWhite100</textcolor>
                </control>
                <control type="label" id="11">
                    <description>row 2 label</description>
                    <height>75</height>
                    <width>auto</width>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>PanelWhite100</textcolor>
                </control>
                <control type="label" id="12">
                    <description>row 3 label</description>
                    <width>auto</width>
                    <height>75</height>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>PanelWhite100</textcolor>
                </control>
            </control>
        </control>
    </controls>
</window>

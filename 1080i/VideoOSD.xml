<?xml version="1.0" encoding="UTF-8"?>
<window id="2901">
    <include condition="!Player.PauseEnabled">Def_OSD_FocusStop</include>
    <include condition="Player.PauseEnabled">Def_OSD_FocusPause</include>

    <onload>RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.VideoPlayer.TvShowTitle&amp;&amp;$INFO[VideoPlayer.TvShowTitle]")</onload>
    <onload>RunPlugin("plugin://script.skinvariables/?info=get_encoded_string&amp;unencoded_paths=true&amp;window_id=Home&amp;window_prop=Encoded.VideoPlayer.Title&amp;&amp;$INFO[VideoPlayer.Title]")</onload>

    <onload>ClearProperty(dontautoclose,Home)</onload>
    <onload>ClearProperty(dialogvideoinfo,Home)</onload>
    <onload>ClearProperty(wikipedia,Home)</onload>

    <onunload>ClearProperty(dontautoclose,Home)</onunload>
    <onunload>ClearProperty(osdshowinfo,Home)</onunload>
    <onunload>ClearProperty(OSDVideoDetails,Home)</onunload>
    <onunload>ClearProperty(osdinfoscrollbarfocus,Home)</onunload>

    <onload condition="Skin.HasSetting(osd.open.auto.pause) + Player.HasMedia + Player.HasVideo + !Player.Paused + !String.IsEmpty(VideoPlayer.DBID)">PlayerControl(Play)</onload>
    <onunload condition="Skin.HasSetting(osd.open.auto.pause) + Player.HasMedia + Player.HasVideo + Player.Paused + !Integer.IsEqual(Window(Home).Property(dialogvideoinfo),1) + !Integer.IsEqual(Window(Home).Property(wikipedia),1)">PlayerControl(Play)</onunload>

    <controls>
        <!-- OSD -->
        <control type="group">
            <animation effect="fade" start="100" end="0" time="250" condition="[Window.IsVisible(DialogSlider.xml) | [Skin.HasSetting(enable.osd.video.hide.on.pause) + Player.Paused] + String.IsEmpty(Window(Home).Property(OSDVideoDetails))] + !Player.Seeking + !Player.Forwarding + !Player.Rewinding + !Window.IsVisible(videoosd)">Conditional</animation>
            <include>OSD_Video</include>
        </control>

        <!-- PLOT -->

        <include content="Object_OSD_Plot_Video">
            <param name="visible" value="!String.IsEmpty(Window(Home).Property(OSDVideoDetails)) + !Window.IsVisible(DialogFullScreenInfo.xml)" />
            <param name="onleft" value="SetFocus(556)"/>
            <param name="onright" value="SetFocus(556)"/>
            <param name="onback" value="SetFocus(556)"/>
            <param name="scrollid" value="9805" />
        </include>

        <control type="button" id="556">
            <include>Def_Hidden_Button</include>
            <onfocus condition="!String.IsEmpty(Window(Home).Property(OSDVideoDetails))">ClearProperty(OSDVideoDetails,Home)</onfocus>
            <onfocus>SetFocus(14)</onfocus>
        </control>


    </controls>
</window>

<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_501_Fanart">
        <description>List View (id=501)</description>

        <control type="group">
            <visible>Control.IsVisible(501)</visible>
            <include>Animation_Common_Global</include>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>

            <control type="group">
                <top>View_List_Top</top>
                <left>View_List_Side</left>
                <width>220</width>
                <height>646</height>

                <include content="Def_Art_Full_Background_b24">
                    <param name="colordiffuse" value="White100" />
                </include>

                <control type="group">
                    <control type="fixedlist" id="501">
                        <visible>$EXP[Exp_View_501]</visible>
                        <include>Animation_Scrolltime_Views_List</include>

                        <top>17</top>
                        <bottom>17</bottom>
                        <width>188</width>
                        <left>16</left>

                        <include>Def_View_Focus_Dialog_Menu_On_Right</include>
                        <onleft>1602</onleft>
                        <onup>59</onup>
                        <ondown>59</ondown>

                        <focusposition>1</focusposition>
                        <movement>9</movement>
                        <pagecontrol>1602</pagecontrol>

                        <viewtype label="31005">list</viewtype>

                        <itemlayout width="188" height="54">
                            <include>501_item_layout</include>
                        </itemlayout>
                        <focusedlayout width="188" height="54">
                            <control type="group">
                                <visible>Control.HasFocus(501)</visible>
                                <include>501_item_layout_focus</include>
                            </control>
                            <control type="group">
                                <visible>!Control.HasFocus(501)</visible>
                                <include>501_item_layout</include>
                            </control>
                        </focusedlayout>
                    </control>
                </control>
            </control>

            <!-- INFO -->

            <control type="group">
                <control type="group">
                    <top>View_List_Top</top>
                    <left>320</left>
                    <width>1520</width>
                    <height>646</height>

                    <include content="Def_Art_Full_Background_b24">
                        <param name="colordiffuse" value="White100" />
                    </include>

                    <!-- FANART -->

                    <control type="image">
                        <top>0</top>
                        <right>0</right>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <width>1120</width>
                        <height>646</height>
                        <aspectratio scalediffuse="false">scale</aspectratio>
                        <texture background="true" diffuse="diffuse/fanart_w1122_h640_b24.png">$VAR[Image_Fanart_View_50x]</texture>
                    </control>

                    <!-- CLEARLOGO -->

                    <control type="image">
                        <bottom>30</bottom>
                        <width>500</width>
                        <height>150</height>
                        <right>30</right>

                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio align="right" aligny="bottom">keep</aspectratio>
                        <texture background="true">$VAR[Image_Crop_ClearLogo]</texture>
                        <visible>Skin.HasSetting(show.view.501.507.fanart.clearlogo)</visible>
                    </control>

                    <!-- INFO -->

                    <control type="group">
                        <top>0</top>
                        <left>30</left>
                        <height>646</height>
                        <width>340</width>

                        <control type="label">
                            <top>8</top>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallBold</font>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                            <include condition="Skin.HasSetting(labels.autoscroll)">LabelScroll</include>
                        </control>
                        <control type="label">
                            <top>50</top>
                            <height>64</height>
                            <aligny>center</aligny>
                            <font>Small333</font>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                            <label>$VAR[Label_501_Genre]</label>
                        </control>
                        <control type="textbox">
                            <top>136</top>
                            <bottom>17</bottom>
                            <font>TinyPlot</font>
                            <height>360</height>
                            <textcolor>Dark2</textcolor>
                            <selectedcolor>Dark2</selectedcolor>
                            <label>$VAR[Label_Plot_Box_Video_Music]</label>
                            <align>justify</align>
                            <autoscroll>false</autoscroll>
                        </control>

                        <!-- FLAG STAR RATING -->

                        <control type="group">
                            <visible>!Skin.HasSetting(hide.501.507.flags.numeric.rating)</visible>
                            <visible>!ListItem.IsParentFolder</visible>

                            <control type="group">
                                <top>480</top>
                                <width>450</width>


                                <include content="Def_Flag">
                                    <param name="Star" value="Flagstar1" />
                                </include>
                                <include content="Def_Flag">
                                    <param name="Star" value="Flagstar2" />
                                    <param name="left" value="40" />
                                </include>
                                <include content="Def_Flag">
                                    <param name="Star" value="Flagstar3" />
                                    <param name="left" value="80" />
                                </include>
                                <include content="Def_Flag">
                                    <param name="Star" value="Flagstar4" />
                                    <param name="left" value="120" />
                                </include>
                                <include content="Def_Flag">
                                    <param name="Star" value="Flagstar5" />
                                    <param name="left" value="160" />
                                </include>
                            </control>

                            <!-- RATING / VOTES -->

                            <control type="label">
                                <top>570</top>
                                <width>450</width>
                                <font>Small333</font>
                                <textcolor>Dark2</textcolor>
                                <label>$VAR[Label_Rating_IMDb_Votes_Top250]</label>
                                <selectedcolor>Dark2</selectedcolor>
                            </control>
                        </control>

                        <!-- PROGRESS -->

                        <include content="Def_View_Info_Circle_Progress">
                            <param name="top" value="510" />
                            <param name="left" value="235" />
                        </include>
                    </control>
                </control>

                <!-- WATCHED STATUS -->

                <include content="Layout_Poster_Indicator_Status_Icon" condition="!Skin.HasSetting(hide.markers) + !Skin.HasSetting(furniture.markers.alternative)">
                    <param name="right" value="72" />
                    <param name="top" value="207" />
                </include>
                <include content="Layout_Poster_Indicator_Status_Banner" condition="!Skin.HasSetting(hide.markers) + Skin.HasSetting(furniture.markers.alternative)">
                    <param name="right" value="72" />
                    <param name="top" value="207" />
                </include>
            </control>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1602">
                <include content="Object_Scrollbar_Views_Vertical">
                    <param name="scrollid" value="1602" />
                    <param name="top" value="216" />
                    <param name="height" value="648" />
                    <param name="idlayout" value="501" />
                </include>
            </control>
        </control>
    </include>

    <include name="501_item_layout">
        <control type="label">
            <left>20</left>
            <width>150</width>
            <aligny>center</aligny>
            <height>52</height>
            <font>SmallNavi</font>
            <label>$INFO[ListItem.Label]</label>
            <textcolor>Black70</textcolor>
            <selectedcolor>Black70</selectedcolor>
        </control>
    </include>

    <include name="501_item_layout_focus">

        <!-- ITEM FOCUS GRADIENT -->
        <include>Def_Focus_Item_Gradient</include>

        <control type="label">
            <left>20</left>
            <width>150</width>
            <aligny>center</aligny>
            <height>52</height>
            <font>SmallNavi</font>
            <textcolor>Selected</textcolor>
            <selectedcolor>Selected</selectedcolor>
            <label>$INFO[ListItem.Label]</label>
        </control>
    </include>
</includes>

<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_503_Poster_Square">
        <description>List View (id=503)</description>
        <control type="group">
            <visible>Control.IsVisible(503)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>

            <control type="fixedlist" id="503">
                <visible>$EXP[Exp_View_503]</visible>
                <posy>230</posy>
                <posx>-190</posx>
                <width>2300</width>
                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <ondown>1636</ondown>
                <onleft>503</onleft>
                <onright>503</onright>
                <focusposition>1</focusposition>
                <preloaditems>0</preloaditems>
                <pagecontrol>1636</pagecontrol>
                <orientation>horizontal</orientation>

                <viewtype label="31381">list</viewtype>
                <include>Animation_Scrolltime_Views_List</include>
                <itemlayout width="270">
                    <control type="group">
                        <animation effect="Conditional" condition="true">
                            <effect type="zoom" end="60" time="0" center="213,452"/>
                        </animation>
                        <control type="image">
                            <top>412</top>
                            <width>PosterW</width>
                            <height>48</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>diffuse/shadowspot.png</texture>
                        </control>
                        <control type="group">
                            <height>448</height>
                            <left>-8</left>
                            <top>1</top>
                            <width>448</width>
                            <include content="Layout_Widget_Square">
                                <param name="id" value="503"/>
                                <param name="height" value="448"/>
                                <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                                <param name="top" value="430"/>
                                <param name="distance" value="10"/>
                                <param name="height_reflection" value="448"/>
                            </include>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="300">
                    <control type="group">
                        <posy>120</posy>
                        <animation condition="Container(503).OnNext | Container(503).OnPrevious" effect="zoom" start="60" end="100" delay="0" time="350" tween="sine" easing="out" center="213,276">Focus</animation>
                        <animation condition="Container(503).OnNext | Container(503).OnPrevious" effect="zoom" start="100" end="60" delay="0" time="250" tween="sine" easing="out" center="213,276">UnFocus</animation>
                        <control type="image">
                            <centertop>PosterW</centertop>
                            <width>PosterW</width>
                            <height>48</height>
                            <aspectratio>stretch</aspectratio>
                            <texture>diffuse/shadowspot.png</texture>
                        </control>
                        <control type="group">
                            <height>448</height>
                            <left>-8</left>
                            <top>-8</top>
                            <width>448</width>
                            <include content="Layout_Widget_Square">
                                <param name="id" value="503"/>
                                <param name="height" value="448"/>
                                <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                                <param name="top" value="430"/>
                                <param name="distance" value="10"/>
                                <param name="height_reflection" value="448"/>
                            </include>
                        </control>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1636">
                <include content="Object_Scrollbar_Horizontal">
                    <param name="scrollid" value="1636"/>
                    <param name="bottom" value="266"/>
                </include>
            </control>

             <control type="list" id="50381">
                <include>Def_Hidden_ListControl</include>
                <content>$INFO[Container($PARAM[id]).ListItem.DBID,musicdb://artists/,/]</content>
            </control>

            <control type="grouplist">
                <left>540</left>
                <right>SidePad</right>
                <top>700</top>
                <orientation>vertical</orientation>
                <visible>![Container(503).OnNext | Container(503).OnPrevious]</visible>
                <animation effect="fade" start="0" end="100" delay="450" time="250" reversible="false">Visible</animation>
                <control type="label">
                    <font>SmallBold</font>
                    <label>$INFO[ListItem.Album]</label>
                    <textcolor>Dark1</textcolor>
                    <height>35</height>
                    <aligny>top</aligny>
                    <visible>!Container.Content(songs)</visible>
                </control>
                <control type="label">
                    <font>SmallBold</font>
                    <label>$INFO[ListItem.Title]</label>
                    <textcolor>Dark1</textcolor>
                    <height>35</height>
                    <aligny>top</aligny>
                    <visible>Container.Content(songs)</visible>
                </control>
                <control type="label">
                    <font>Tiny</font>
                    <label>$INFO[ListItem.Artist]</label>
                    <textcolor>Dark1</textcolor>
                    <height>42</height>
                    <aligny>top</aligny>
                </control>
            </control>
        </control>
    </include>
</includes>

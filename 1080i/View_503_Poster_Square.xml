<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_503_Poster_Square">
        <description>List View (id=503)</description>
        <control type="group">
            <visible>Control.IsVisible(503)</visible>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>

            <control type="fixedlist" id="503">
                <visible>$EXP[Exp_View_503]</visible>
                <include>Animation_Scrolltime_Views_List</include>

                <top>200</top>
                <left>-220</left>
                <width>2300</width>

                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
                <ondown>1636</ondown>
                <onleft>503</onleft>
                <onright>503</onright>

                <focusposition>1</focusposition>
                <preloaditems>0</preloaditems>
                <pagecontrol>1636</pagecontrol>
                <orientation>horizontal</orientation>

                <viewtype label="31319">list</viewtype>

                <itemlayout width="270">
                    <control type="group">
                        <animation effect="Conditional" condition="true">
                            <effect type="zoom" end="60" time="0" center="213,452" />
                        </animation>
                        <control type="group">
                            <left>-8</left>
                            <top>1</top>
                            <width>448</width>
                            <height>448</height>
                            <include content="Def_Art_Poster">
                                <param name="top" value="41" />
                                <param name="left" value="41" />
                                <param name="width" value="PosterW" />
                                <param name="height" value="PosterW" />
                                <param name="colordiffuse" value="White100" />
                                <param name="texture" value="$VAR[Image_Poster]" />
                                <param name="texture_diffuse" value="square_w428_h428" />
                                <param name="aspectratio" value="keep" />
                            </include>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="300">
                    <control type="group">
                        <top>120</top>
                        <animation condition="Container(503).OnNext | Container(503).OnPrevious" effect="zoom" start="60" end="100" delay="0" time="350" tween="sine" easing="out" center="213,276">Focus</animation>
                        <animation condition="Container(503).OnNext | Container(503).OnPrevious" effect="zoom" start="100" end="60" delay="0" time="250" tween="sine" easing="out" center="213,276">UnFocus</animation>
                        <control type="group">
                            <left>-8</left>
                            <top>-8</top>
                            <width>448</width>
                            <height>448</height>
                            <include content="Def_Art_Poster">
                                <param name="top" value="41" />
                                <param name="left" value="41" />
                                <param name="width" value="PosterW" />
                                <param name="height" value="PosterW" />
                                <param name="colordiffuse" value="White100" />
                                <param name="texture" value="$VAR[Image_Poster]" />
                                <param name="texture_diffuse" value="square_w428_h428" />
                                <param name="aspectratio" value="keep" />
                            </include>
                        </control>
                    </control>
                </focusedlayout>
            </control>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1636">
                <include content="Object_Scrollbar_Views_Horizontal">
                    <param name="scrollid" value="1636" />
                    <param name="bottom" value="266" />
                </include>
            </control>

            <include content="Def_Hidden_List_Artist_Album_Count"><param name="id" value="503" /></include>

            <control type="grouplist">
                <visible>![Container(503).OnNext | Container(503).OnPrevious]</visible>
                <animation effect="fade" start="0" end="100" delay="450" time="250" reversible="false">Visible</animation>

                <top>700</top>
                <left>540</left>
                <right>View_SidePad</right>

                <orientation>vertical</orientation>

                <control type="label">
                    <font>SmallBold</font>
                    <label>$INFO[ListItem.Album]</label>
                    <textcolor>Dark1</textcolor>
                    <height>35</height>
                    <aligny>top</aligny>
                    <visible>!Container.Content(songs)</visible>
                </control>
                <control type="label">
                    <font>SmallBold</font>
                    <label>$INFO[ListItem.Title]</label>
                    <textcolor>Dark1</textcolor>
                    <height>35</height>
                    <aligny>top</aligny>
                    <visible>Container.Content(songs)</visible>
                </control>
                <control type="label">
                    <font>Tiny</font>
                    <label>$INFO[ListItem.Artist]</label>
                    <textcolor>Dark1</textcolor>
                    <height>42</height>
                    <aligny>top</aligny>
                </control>
            </control>
        </control>
    </include>
</includes>

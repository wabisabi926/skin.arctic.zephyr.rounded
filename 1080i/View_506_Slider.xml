<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_506_Slider">
        <control type="group">
            <visible>Control.IsVisible(506)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>

            <control type="group">
                <top>PosterPad</top>
                <left>SidePad</left>
                <right>SidePad</right>
                <height>640</height>

                <control type="image">
                    <left>-9</left>
                    <top>-9</top>
                    <right>-9</right>
                    <bottom>-9</bottom>
                    <texture border="18" background="true" infill="false">common/$VAR[shadow18]</texture>
                    <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                </control>
                <control type="image">
                    <texture border="12" colordiffuse="Panel">common/box.png</texture>
                </control>

                <control type="wraplist" id="506">
                    <visible>$EXP[Exp_View_506]</visible>
                    <top>0</top>
                    <left>0</left>
                    <width>1760</width>
                    <right>0</right>
                    <top>0</top>
                    <bottom>0</bottom>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <ondown>1641</ondown>
                    <focusposition>0</focusposition>
                    <onleft>51</onleft>
                    <onright>51</onright>
                    <preloaditems>0</preloaditems>
                    <pagecontrol>1641</pagecontrol>
                    <orientation>horizontal</orientation>

                    <viewtype label="Slider">list</viewtype>
                    <include>Animation_Scrolltime_Views_List</include>
                    <itemlayout height="640" width="1760">
                        <control type="image">
                            <align>center</align>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb-pics.png">$VAR[Image_Fanart]</texture>
                        </control>
                    </itemlayout>
                    <focusedlayout height="640" width="1760">
                        <!-- <control type="image"> -->
                            <!-- <aspectratio scalediffuse="false">scale</aspectratio> -->
                            <!-- <animation effect="fade" start="100" end="10" time="0" condition="true">Conditional</animation> -->
                            <!-- <texture colordiffuse="Panel" diffuse="diffuse/wall-fanart-pics.png">$VAR[Image_Fanart]</texture> -->
                        <!-- </control> -->
                        <control type="image">
                            <texture border="12" colordiffuse="Panel">common/box.png</texture>
                        </control>
                        <control type="image">
                            <align>center</align>
                            <aspectratio scalediffuse="true">keep</aspectratio>
                            <texture background="true" diffuse="diffuse/lovefilmthumb-pics.png">$VAR[Image_Fanart]</texture>
                        </control>
                    </focusedlayout>
                </control>
            </control>

            <control type="scrollbar" id="1641">
                <include content="Object_Scrollbar_Horizontal">
                    <param name="scrollid" value="1641"/>
                </include>
            </control>
        </control>
    </include>
</includes>

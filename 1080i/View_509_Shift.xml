<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_509_Shift">
        <description>List View (id=509)</description>
        <control type="group">
            <visible>Control.IsVisible(509)</visible>
            <include>Animation_Common_Global</include>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>

            <!-- CLEARLOGO -->

            <control type="image" description="clearlogo">
                <animation effect="slide" start="0,0" end="-735,0" time="200" condition="Skin.HasSetting(509NoCenter)">Conditional</animation>
                <visible>$EXP[Title_Clearlogo_Available] + Skin.HasSetting(show.view.509.title.clearlogo)</visible>
                <top>220</top>
                <height>ClearLogoTitleMaxHeight</height>
                <width>ClearLogoTitleMaxWidth</width>
                <centerleft>50%</centerleft>
                <aspectratio scalediffuse="true" align="center">keep</aspectratio>
                <texture background="true">$VAR[Image_Crop_ClearLogo]</texture>
                <fadetime>ClearArtFadetime</fadetime>
            </control>

            <!-- MAIN TILE  -->

            <control type="label">
                <visible>!Skin.HasSetting(show.view.509.title.clearlogo) | [!$EXP[Title_Clearlogo_Available] + Skin.HasSetting(show.view.509.title.clearlogo)]</visible>
                <top>255</top>
                <include condition="!Skin.HasSetting(509NoCenter)">Def_Views_509_514_Center_Info</include>
                <left>View_List_Side</left>
                <description>Header Label</description>
                <textcolor>Dark1</textcolor>
                <font>LargeNew</font>
                <label fallback="19055">$INFO[ListItem.Title]</label>
            </control>

            <control type="panel" id="509">
                <visible>$EXP[Exp_View_509]</visible>
                <include>Animation_Scrolltime_Views_List</include>

                <top>350</top>
                <left>View_Poster_Side</left>
                <width>1780</width>
                <height>395</height>

                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
                <ondown>1677</ondown>

                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
                <pagecontrol>1677</pagecontrol>

                <viewtype label="31013">list</viewtype>

                <!-- LAYOUT POSTER -->

                <itemlayout height="395" width="222" condition="!Skin.HasSetting(509fanart)">
                    <control type="group">
                        <height>325</height>
                        <include content="Layout_Widget_Poster">
                            <param name="texture_diffuse" value="poster_w202_h305" />
                            <param name="id" value="509" />
                        </include>
                    </control>
                </itemlayout>
                <focusedlayout height="395" width="222" condition="!Skin.HasSetting(509fanart)">
                    <control type="group">
                        <height>325</height>
                        <include content="Layout_Widget_Poster_Focus">
                            <param name="texture_diffuse" value="poster_w202_h305" />
                            <param name="id" value="509" />
                        </include>
                    </control>
                </focusedlayout>

                <!-- LAYOUT FANART -->

                <itemlayout height="332" width="592.33" condition="Skin.HasSetting(509fanart) + !Skin.HasSetting(509fanartclearart)">
                    <control type="group">
                        <height>325</height>
                        <include content="Layout_Widget_Landscape">
                            <param name="texture_diffuse" value="fanart_w570_h305" />
                            <param name="height" value="325" />
                            <param name="image_height" value="325" />
                            <param name="id" value="509" />
                        </include>
                    </control>
                </itemlayout>
                <focusedlayout height="332" width="592.33" condition="Skin.HasSetting(509fanart) + !Skin.HasSetting(509fanartclearart)">
                    <control type="group">
                        <height>325</height>
                        <include content="Layout_Widget_Landscape_Focus">
                            <param name="texture_diffuse" value="fanart_w570_h305" />
                            <param name="height" value="325" />
                            <param name="image_height" value="325" />
                            <param name="id" value="509" />
                            <param name="glow_left" value="11" />
                            <param name="glow_right" value="11" />
                        </include>
                    </control>
                </focusedlayout>
            </control>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1677">
                <include content="Object_Scrollbar_Views_Horizontal">
                    <param name="scrollid" value="1677" />
                    <param name="bottom" value="391" />
                </include>
            </control>

            <include content="Def_Label_View_Flix_Sub_Title">
                <param name="visible" value="!ListItem.IsParentFolder + Skin.HasSetting(509NoCenter)" />
                <param name="top" value="702" />
                <param name="height" value="36" />
                <param name="left" value="View_List_Side" />
            </include>

            <include content="Def_Label_View_Flix_Sub_Title">
                <param name="visible" value="!ListItem.IsParentFolder + !Skin.HasSetting(509NoCenter)" />
                <param name="top" value="702" />
                <param name="height" value="36" />

                <param name="left" value="180" />
                <param name="align" value="center" />
                <param name="width" value="1550" />
            </include>

            <control type="textbox">
                <top>767</top>
                <bottom>7</bottom>

                <include condition="!Skin.HasSetting(509NoCenter)">Def_Views_509_514_Center_Info</include>
                <left>View_List_Side</left>

                <right>View_List_Side</right>
                <font>Tiny</font>
                <height>110</height>
                <textcolor>Dark2</textcolor>
                <selectedcolor>Dark2</selectedcolor>
                <label>$VAR[Label_Plot_Box_Video_Music]</label>
            </control>
        </control>
    </include>
</includes>

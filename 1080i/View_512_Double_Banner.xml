    <include name="View_512_Double_Banner">
        <description>List View (id=512)</description>
        <control type="group">
            <visible>Control.IsVisible(512)</visible>
            <include>Animation_Common</include>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>

            <include>View_Slide_For_JumpBar</include>

            <control type="group">
                <animation effect="slide" start="0,0" end="0,-20" time="200" condition="Skin.HasSetting(ShowClearart511)">Conditional</animation>

                <top>-50</top>
                <left>0</left>
                <width>1920</width>

                <control type="image" description="clearlogo">
                    <visible>Skin.HasSetting(ShowClearart511) + $EXP[Title_Clearlogo_Available]</visible>
                    <top>255</top>
                    <height>ClearLogoTitleMaxHeight</height>
                    <width>ClearLogoTitleMaxWidth</width>
                    <centerleft>50%</centerleft>
                    <aspectratio scalediffuse="true" align="center">keep</aspectratio>
                    <texture background="true">$VAR[Image_Crop_ClearLogo]</texture>
                    <fadetime>ClearArtFadetime</fadetime>
                </control>
                <control type="label">
                    <visible>!Skin.HasSetting(ShowClearart511) | [Skin.HasSetting(ShowClearart511) + !$EXP[Title_Clearlogo_Available]]</visible>
                    <top>260</top>
                    <align>center</align>
                    <description>Header Label</description>
                    <textcolor>Dark1</textcolor>
                    <font>LargeNew</font>
                    <label fallback="19055">$INFO[ListItem.Title]</label>
                </control>
            </control>
            <control type="group">
                <animation effect="slide" start="0,0" end="-1096,0" time="200" condition="Skin.HasSetting(flip512rightleft)">Conditional</animation>

                <top>301</top>
                <right>104</right>
                <width>638</width>
                <height>545</height>

                <control type="group">
                    <animation effect="slide" start="0,0" end="0,153" time="200" condition="Skin.HasSetting(Flip512)">Conditional</animation>
                    <animation effect="slide" start="0,0" end="0,4" time="200" condition="Skin.HasSetting(enable.view.5x.51x.extended.list) + Skin.HasSetting(Flip512) + Skin.HasSetting(ListView511)">Conditional</animation>

                    <top>14</top>
                    <width>662</width>
                    <height>381</height>

                    <include content="Def_Art_Poster_Background">
                        <param name="colordiffuse" value="Fallback" />
                    </include>

                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio aligny="center" align="center" scalediffuse="false">scale</aspectratio>
                        <texture diffuse="diffuse/fanart_w662_h381.png" background="true">$VAR[Image_Fanart_View_50x]</texture>
                    </control>
                </control>
                <control type="group">
                    <animation effect="slide" start="0,0" end="0,-413" time="200" condition="Skin.HasSetting(Flip512)">Conditional</animation>

                    <top>427</top>
                    <width>662</width>
                    <height>125</height>

                    <include content="Def_Art_Poster_Background">
                        <param name="colordiffuse" value="Fallback" />
                    </include>

                    <control type="image">
                        <width>100%</width>
                        <height>100%</height>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio aligny="center" align="center" scalediffuse="false">scale</aspectratio>
                        <texture diffuse="diffuse/banner_w662_h125.png" background="true">$VAR[Image_Banner]</texture>
                    </control>
                </control>
            </control>

            <include condition="Skin.HasSetting(ListView511)">ListView511Banner</include>
            <include condition="!Skin.HasSetting(ListView511)">DoubleView511Banner</include>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1691">
                <include content="Object_Scrollbar_Views_Vertical">
                    <param name="scrollid" value="1691" />
                    <param name="top" value="315" />
                    <param name="height" value="534" />
                    <param name="idlayout" value="512" />
                </include>
            </control>
        </control>
    </include>
</includes>

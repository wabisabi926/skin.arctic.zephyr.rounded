<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_513_Shifted">
        <description>List View (id=513)</description>
        <control type="group">
            <visible>Control.IsVisible(513)</visible>
            <include>Animation_Common</include>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>

            <include>View_Slide_For_JumpBar</include>

            <control type="panel" id="513">
                <visible>$EXP[Exp_View_513]</visible>
                <include>Animation_Scrolltime_Views_List</include>

                <top>200</top>
                <right>View_SidePad</right>
                <left>70</left>
                <height>675</height>

                <include>Def_Focus_Context_Menu_On_Right</include>

                <onleft>1689</onleft>

                <preloaditems>2</preloaditems>
                <pagecontrol>1689</pagecontrol>
                <orientation>vertical</orientation>

                <viewtype label="31072">list</viewtype>

                <itemlayout width="1760" height="225">
                    <include content="Def_Art_Full_Background_b24">
                        <param name="pad_shadow" value="1" />
                        <param name="pad_image" value="10" />
                        <param name="colordiffuse" value="White100" />
                    </include>

                    <control type="group">
                        <left>10</left>
                        <top>10</top>
                        <width>370</width>
                        <height>205</height>
                        <control type="image">
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture background="true" diffuse="diffuse/fanart_w370_h205_b24.png">$VAR[Image_Fanart]</texture>
                        </control>
                        <control type="image">
                            <right>10</right>
                            <bottom>10</bottom>
                            <width>200</width>
                            <height>60</height>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture background="true">$VAR[Image_ClearLogo]</texture>
                            <visible>$EXP[View_Clearlogo_On_Fanart]</visible>
                            <visible>!String.IsEqual(ListItem.DBType,genre) + !String.EndsWith(Container.FolderPath,Genres)</visible>
                        </control>
                    </control>

                    <control type="label">
                        <top>12</top>
                        <left>410</left>
                        <description>Header Label</description>
                        <textcolor>Dark1</textcolor>
                        <selectedcolor>Dark1</selectedcolor>
                        <font>SmallBold</font>
                        <width>1350</width>
                        <label fallback="19055">$VAR[Label_Main_Title_Fanart_56_57]</label>
                    </control>
                    <control type="textbox">
                        <top>76</top>
                        <left>410</left>
                        <font>Tiny</font>
                        <height>76</height>
                        <textcolor>Dark2</textcolor>
                        <selectedcolor>Dark2</selectedcolor>
                        <label>$VAR[Label_Plot_Box_Video_Music]</label>
                        <width>1310</width>
                    </control>
                    <control type="label">
                        <right>50</right>
                        <bottom>30</bottom>
                        <height>38</height>
                        <align>right</align>
                        <font>InfoNetflix</font>
                        <textcolor>PanelWhite70</textcolor>
                        <selectedcolor>PanelWhite70</selectedcolor>
                        <width>1350</width>
                        <label>$VAR[Label_View_Flix_Sub_Title]</label>
                        <visible>!ListItem.IsParentFolder</visible>
                    </control>
                </itemlayout>
                <focusedlayout width="1760" height="225">
                    <include content="Def_Art_Full_Background_b24">
                        <param name="pad_shadow" value="1" />
                        <param name="pad_image" value="10" />
                        <param name="colordiffuse" value="White100" />
                    </include>

                    <include content="Def_Image_Background_Only_b24">
                        <param name="pad_image" value="10" />
                        <param name="colordiffuse_background" value="PanelWhite70" />
                    </include>

                    <control type="group">
                        <left>10</left>
                        <top>10</top>
                        <width>370</width>
                        <height>205</height>
                        <control type="image">
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture background="true" diffuse="diffuse/fanart_w370_h205_b24.png">$VAR[Image_Fanart]</texture>
                        </control>
                        <control type="image">
                            <right>10</right>
                            <bottom>10</bottom>
                            <width>200</width>
                            <height>60</height>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture background="true">$VAR[Image_ClearLogo]</texture>
                            <visible>$EXP[View_Clearlogo_On_Fanart]</visible>
                            <visible>!String.IsEqual(ListItem.DBType,genre) + !String.EndsWith(Container.FolderPath,Genres)</visible>
                        </control>
                    </control>

                    <control type="label">
                        <top>12</top>
                        <left>410</left>
                        <description>Header Label</description>
                        <textcolor>Light1</textcolor>
                        <selectedcolor>Light1</selectedcolor>
                        <font>SmallBold</font>
                        <width>1350</width>
                        <label fallback="19055">$VAR[Label_Main_Title_Fanart_56_57]</label>
                    </control>
                    <control type="textbox">
                        <top>76</top>
                        <left>410</left>
                        <font>Tiny</font>
                        <height>76</height>
                        <textcolor>Light2</textcolor>
                        <selectedcolor>Light2</selectedcolor>
                        <label>$VAR[Label_Plot_Box_Video_Music]</label>
                        <width>1310</width>
                    </control>
                    <control type="label">
                        <right>50</right>
                        <bottom>30</bottom>
                        <height>38</height>
                        <align>right</align>
                        <font>InfoNetflix</font>
                        <textcolor>Light2</textcolor>
                        <selectedcolor>Light2</selectedcolor>
                        <width>1350</width>
                        <label>$VAR[Label_View_Flix_Sub_Title]</label>
                        <visible>!ListItem.IsParentFolder</visible>
                    </control>
                </focusedlayout>
            </control>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1689">
                <include content="Object_Scrollbar_Views_Vertical">
                    <param name="scrollid" value="1689" />
                    <param name="idlayout" value="513" />
                </include>
            </control>

            <!-- ARROWS -->

            <control type="image">
                <visible>Control.HasFocus(513) + !Container(513).OnPrevious</visible>
                <include>Animation_Delay_Fade_In_200</include>
                <top>176</top>
                <left>258</left>
                <include>Def_Arrow_Size</include>
                <texture colordiffuse="Dark1" flipy="true">common/arrow_small_down.png</texture>
            </control>
            <control type="image">
                <visible>Control.HasFocus(513) + !Container(513).OnNext</visible>
                <include>Animation_Delay_Fade_In_200</include>
                <top>891</top>
                <left>258</left>
                <include>Def_Arrow_Size</include>
                <texture colordiffuse="Dark1" flipy="false">common/arrow_small_down.png</texture>
            </control>
        </control>
    </include>
</includes>

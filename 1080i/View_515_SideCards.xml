<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_515_SideCards">
        <description>List View (id=515)</description>
        <control type="group">
            <visible>Control.IsVisible(515)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>
            <include>View_Slide_For_JumpBar</include>

            <control type="group">
                <control type="panel" id="515">
                    <visible>$EXP[Exp_View_515]</visible>

                    <top>206</top>
                    <height>670</height>
                    <left>70</left>
                    <right>70</right>
                    <onleft>515</onleft>
                    <onright>515</onright>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <ondown>1671</ondown>
                    <orientation>horizontal</orientation>
                    <pagecontrol>1671</pagecontrol>
                    <preloaditems>2</preloaditems>

                    <viewtype label="31288">list</viewtype>
                    <include>Animation_Scrolltime_Views_List</include>
                    <itemlayout width="445" height="660">
                        <control type="image">
                            <left>1</left>
                            <top>1</top>
                            <right>1</right>
                            <bottom>1</bottom>
                            <texture border="18" background="true" infill="false">common/$VAR[shadow18]</texture>
                            <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <right>10</right>
                            <bottom>10</bottom>
                            <texture colordiffuse="White100" border="12">common/box.png</texture>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>425</width>
                            <height>238</height>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture background="true" diffuse="diffuse/cards_top.png">$VAR[Image_Fanart]</texture>
                        </control>
                        <control type="image">
                            <width>200</width>
                            <right>10</right>
                            <top>50</top>
                            <bottom>420</bottom>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture background="true">$VAR[Image_Home_ClearLogo]</texture>
                            <visible>Skin.HasSetting(dont.use.landscape.tvshows) + Skin.HasSetting(use.clearlogo.on.fanart.tvshows)</visible>
                            <visible>!String.IsEqual(ListItem.DBType,genre) + !String.EndsWith(Container.FolderPath,Genres)</visible>
                        </control>
                        <include condition="!Skin.HasSetting(hide.markers)">Layout_Indicator_Status</include>
                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <top>270</top>
                            <height>50</height>
                            <align>left</align>
                            <font>SmallBold</font>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="textbox">
                            <left>40</left>
                            <right>40</right>
                            <top>340</top>
                            <height>220</height>
                            <align>left</align>
                            <font>Tiny</font>
                            <autoscroll>false</autoscroll>
                            <textcolor>Dark2</textcolor>
                            <selectedcolor>Dark2</selectedcolor>
                            <label>$INFO[ListItem.Plot]</label>
                        </control>
                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <bottom>35</bottom>
                            <aligny>center</aligny>
                            <height>38</height>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>Dark2</textcolor>
                            <selectedcolor>Dark2</selectedcolor>
                            <visible>!ListItem.IsParentFolder</visible>
                            <label fallback="19055">$VAR[Label_Year,,  •  ]$VAR[LabelDuration,,  •  ]$VAR[RatingLabel]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="445" height="660">
                        <control type="image">
                            <left>1</left>
                            <top>1</top>
                            <right>1</right>
                            <bottom>1</bottom>
                            <texture border="18" background="true" infill="false">common/$VAR[shadow18]</texture>
                            <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <right>10</right>
                            <bottom>10</bottom>
                            <texture colordiffuse="PanelWhite70" border="12">common/box.png</texture>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>425</width>
                            <height>238</height>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture background="true" diffuse="diffuse/cards_top.png">$VAR[Image_Fanart]</texture>
                        </control>
                        <control type="image">
                            <width>200</width>
                            <right>10</right>
                            <top>50</top>
                            <bottom>420</bottom>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture background="true">$VAR[Image_Home_ClearLogo]</texture>
                            <visible>Skin.HasSetting(dont.use.landscape.tvshows) + Skin.HasSetting(use.clearlogo.on.fanart.tvshows)</visible>
                            <visible>!String.IsEqual(ListItem.DBType,genre) + !String.EndsWith(Container.FolderPath,Genres)</visible>
                        </control>
                        <include condition="!Skin.HasSetting(hide.markers)">Layout_Indicator_Status</include>
                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <top>270</top>
                            <height>50</height>
                            <align>left</align>
                            <font>SmallBold</font>
                            <textcolor>Light1</textcolor>
                            <selectedcolor>Light1</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="textbox">
                            <left>40</left>
                            <right>40</right>
                            <top>340</top>
                            <height>220</height>
                            <align>left</align>
                            <font>Tiny</font>
                            <textcolor>Light2</textcolor>
                            <selectedcolor>Light2</selectedcolor>
                            <label>$INFO[ListItem.Plot]</label>
                        </control>
                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <bottom>35</bottom>
                            <aligny>center</aligny>
                            <height>38</height>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>Light2</textcolor>
                            <selectedcolor>Light2</selectedcolor>
                            <visible>!ListItem.IsParentFolder</visible>
                            <label fallback="19055">$VAR[Label_Year,,  •  ]$VAR[LabelDuration,,  •  ]$VAR[RatingLabel]</label>
                        </control>
                    </focusedlayout>
                </control>
                <control type="scrollbar" id="1671">
                    <include content="Object_Scrollbar_Horizontal">
                        <param name="scrollid" value="1671"/>
                        <param name="bottom" value="204"/>
                    </include>
                </control>
            </control>
        </control>
    </include>
</includes>

<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_515_SideCards">
        <description>List View (id=515)</description>
        <control type="group">
            <visible>Control.IsVisible(515)</visible>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common_Global</include>

            <control type="group">
                <control type="panel" id="515">
                    <visible>$EXP[Exp_View_515]</visible>
                    <include>Animation_Scrolltime_Views_List</include>

                    <top>View_Poster_Top</top>
                    <left>View_Poster_Side</left>
                    <width>1780</width>
                    <height>View_Poster_height</height>

                    <onleft>515</onleft>
                    <onright>515</onright>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
                    <ondown>1671</ondown>

                    <orientation>horizontal</orientation>
                    <pagecontrol>1671</pagecontrol>
                    <preloaditems>2</preloaditems>

                    <viewtype label="31245">list</viewtype>

                    <itemlayout width="445" height="660">
                        <include content="Def_Art_Full_Background_b24">
                            <param name="pad_shadow" value="1" />
                            <param name="pad_image" value="10" />
                            <param name="colordiffuse" value="White100" />
                        </include>

                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>425</width>
                            <height>238</height>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture background="true" diffuse="diffuse/fanart_w425_h238_b24.png">$VAR[Image_Fanart]</texture>
                        </control>
                        <control type="image">
                            <width>200</width>
                            <right>10</right>
                            <top>50</top>
                            <bottom>420</bottom>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture background="true">$VAR[Image_ClearLogo]</texture>
                            <visible>$EXP[View_Clearlogo_On_Fanart]</visible>
                            <visible>!String.IsEqual(ListItem.DBType,genre) + !String.EndsWith(Container.FolderPath,Genres)</visible>
                        </control>

                        <!-- WATCHED STATUS -->

                        <include condition="!Skin.HasSetting(hide.markers) + !Skin.HasSetting(furniture.markers.alternative)">Layout_Poster_Indicator_Status_Icon</include>
                        <include condition="!Skin.HasSetting(hide.markers) + Skin.HasSetting(furniture.markers.alternative)">Layout_Poster_Indicator_Status_Banner</include>


                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <top>270</top>
                            <height>50</height>
                            <align>left</align>
                            <font>SmallBold</font>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="textbox">
                            <left>40</left>
                            <right>40</right>
                            <top>340</top>
                            <height>220</height>
                            <align>left</align>
                            <font>Tiny</font>
                            <autoscroll>false</autoscroll>
                            <textcolor>Dark2</textcolor>
                            <selectedcolor>Dark2</selectedcolor>
                            <label>$VAR[Label_Plot_Box_Video_Music]</label>
                        </control>
                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <bottom>35</bottom>
                            <aligny>center</aligny>
                            <height>38</height>
                            <align>right</align>
                            <font>InfoNetflix</font>
                            <textcolor>Dark2</textcolor>
                            <selectedcolor>Dark2</selectedcolor>
                            <visible>!ListItem.IsParentFolder</visible>
                            <label>$VAR[Label_58_515_Footer_Info]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout width="445" height="660">

                        <include content="Def_Art_Full_Background_b24">
                            <param name="pad_shadow" value="1" />
                            <param name="pad_image" value="10" />
                            <param name="colordiffuse" value="White100" />
                        </include>

                        <include content="Def_Image_Background_Only_b24">
                            <param name="pad_image" value="10" />
                            <param name="colordiffuse_background" value="PanelWhite70" />
                        </include>

                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <width>425</width>
                            <height>238</height>
                            <aspectratio scalediffuse="false">scale</aspectratio>
                            <texture background="true" diffuse="diffuse/fanart_w425_h238_b24.png">$VAR[Image_Fanart]</texture>
                        </control>
                        <control type="image">
                            <width>200</width>
                            <right>10</right>
                            <top>50</top>
                            <bottom>420</bottom>
                            <aspectratio align="right" aligny="bottom">keep</aspectratio>
                            <texture background="true">$VAR[Image_ClearLogo]</texture>
                            <visible>$EXP[View_Clearlogo_On_Fanart]</visible>
                            <visible>!String.IsEqual(ListItem.DBType,genre) + !String.EndsWith(Container.FolderPath,Genres)</visible>
                        </control>

                        <!-- WATCHED STATUS -->

                        <include condition="!Skin.HasSetting(hide.markers) + !Skin.HasSetting(furniture.markers.alternative)">Layout_Poster_Indicator_Status_Icon</include>
                        <include condition="!Skin.HasSetting(hide.markers) + Skin.HasSetting(furniture.markers.alternative)">Layout_Poster_Indicator_Status_Banner</include>

                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <top>270</top>
                            <height>50</height>
                            <align>left</align>
                            <font>SmallBold</font>
                            <textcolor>Light1</textcolor>
                            <selectedcolor>Light1</selectedcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                        <control type="textbox">
                            <left>40</left>
                            <right>40</right>
                            <top>340</top>
                            <height>220</height>
                            <align>left</align>
                            <font>Tiny</font>
                            <textcolor>Light2</textcolor>
                            <selectedcolor>Light2</selectedcolor>
                            <label>$VAR[Label_Plot_Box_Video_Music]</label>
                        </control>
                        <control type="label">
                            <left>40</left>
                            <right>40</right>
                            <bottom>35</bottom>
                            <aligny>center</aligny>
                            <height>38</height>
                            <align>right</align>
                            <font>InfoNetflix</font>
                            <textcolor>Light2</textcolor>
                            <selectedcolor>Light2</selectedcolor>
                            <visible>!ListItem.IsParentFolder</visible>
                            <label>$VAR[Label_58_515_Footer_Info]</label>
                        </control>
                    </focusedlayout>
                </control>

                <!-- SCROLLBAR -->

                <control type="scrollbar" id="1671">
                    <include content="Object_Scrollbar_Views_Horizontal">
                        <param name="scrollid" value="1671" />
                        <param name="bottom" value="204" />
                    </include>
                </control>

                <include content="Hidden_List_Artist_Album_Count" condition="!Skin.HasSetting(disable.all.hidden.list)"><param name="id" value="515" /></include>
            </control>
        </control>
    </include>
</includes>

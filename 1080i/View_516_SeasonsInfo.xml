<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_516_SeasonsInfo">
        <description>List View (id=516)</description>
        <control type="group">
            <visible>Control.IsVisible(516)</visible>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common_Global</include>

            <control type="group">

                <!-- LIST SEASONS -->

                <control type="panel" id="516">
                    <visible>$EXP[Exp_View_516]</visible>
                    <include>Animation_Scrolltime_Views_List</include>

                    <top>206</top>
                    <left>70</left>
                    <width>1120</width>
                    <height>355</height>

                    <onleft>516</onleft>
                    <onright>516</onright>
                    <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                    <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
                    <ondown>5161</ondown>

                    <preloaditems>2</preloaditems>
                    <pagecontrol>1604</pagecontrol>
                    <orientation>horizontal</orientation>

                    <viewtype label="31246">list</viewtype>

                    <itemlayout height="355" width="224">
                        <control type="group">
                            <height>325</height>
                            <include content="Layout_Widget_Poster">
                                <param name="texture_diffuse" value="poster_w202_h305" />
                                <param name="id" value="516" />
                            </include>
                        </control>
                        <control type="label">
                            <top>305</top>
                            <width>220</width>
                            <align>center</align>
                            <font>Mini</font>
                            <textcolor>Dark1</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </itemlayout>
                    <focusedlayout height="355" width="224">
                        <control type="group">
                            <height>325</height>
                            <include content="Layout_Widget_Poster_Focus">
                                <param name="texture_diffuse" value="poster_w202_h305" />
                                <param name="id" value="516" />
                            </include>
                        </control>
                        <control type="label">
                            <top>305</top>
                            <width>220</width>
                            <align>center</align>
                            <font>Mini</font>
                            <textcolor>Dark1</textcolor>
                            <label>$INFO[ListItem.Label]</label>
                        </control>
                    </focusedlayout>
                </control>

                <!-- LIST EPISODES -->

                <control type="list" id="5161">
                    <visible>Control.IsVisible(516)</visible>
                    <visible>!String.Contains(Control.GetLabel(516),..)</visible>
                    <include>Animation_Scrolltime_Views_List</include>
                    <animation effect="slide" start="0,0" end="0,-13" time="0" condition="Skin.HasSetting(enable.view.5x.51x.extended.list)">Conditional</animation>

                    <top>596</top>
                    <height>275</height>
                    <left>View_SidePad</left>
                    <width>1100</width>

                    <onright>516</onright>
                    <onleft>1663</onleft>
                    <onup>5161</onup>
                    <ondown>5161</ondown>
                    <onback>516</onback>

                    <pagecontrol>1663</pagecontrol>

                    <!-- <focusposition>1</focusposition> -->

                    <!-- <include content="Def_Movement" condition="!Skin.HasSetting(enable.view.5x.51x.extended.list)"> -->
                        <!-- <param name="movement" value="2" /> -->
                    <!-- </include> -->
                    <!-- <include content="Def_Movement" condition="Skin.HasSetting(enable.view.5x.51x.extended.list)"> -->
                        <!-- <param name="movement" value="1" /> -->
                    <!-- </include> -->

                    <itemlayout condition="!Skin.HasSetting(enable.view.5x.51x.extended.list)" height="64">
                        <include>layout_list_item_video</include>
                    </itemlayout>

                    <focusedlayout condition="!Skin.HasSetting(enable.view.5x.51x.extended.list)" height="64">
                        <control type="group">
                            <visible>Control.HasFocus(5161) | Control.HasFocus(1663)</visible>
                            <include content="layout_list_focus_video"><param name="list_id" value="5161" /></include>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus(5161) + !Control.HasFocus(1663)</visible>
                            <include>layout_list_item_video</include>
                        </control>
                    </focusedlayout>

                    <itemlayout condition="Skin.HasSetting(enable.view.5x.51x.extended.list)" height="91.4">
                        <include>layout_list_item_video_info</include>
                    </itemlayout>

                    <focusedlayout condition="Skin.HasSetting(enable.view.5x.51x.extended.list)" height="91.4">
                        <control type="group">
                            <visible>Control.HasFocus(5161) | Control.HasFocus(1663)</visible>
                            <include content="layout_list_focus_video_info"><param name="list_id" value="5161" /></include>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus(5161) + !Control.HasFocus(1663)</visible>
                            <include>layout_list_item_video_info</include>
                        </control>
                    </focusedlayout>

                    <content target="videos" sortby="episode" sortorder="ascending">$INFO[Container(516).ListItem.FolderPath]</content>
                </control>

                <!-- SCROLLBAR -->

                <control type="scrollbar" id="1663">
                    <include content="Object_Scrollbar_Views_Vertical">
                        <param name="scrollid" value="1663" />
                        <param name="jumpbar" value="false" />
                        <param name="idlayout" value="5161" />
                        <param name="top" value="587" />
                        <param name="height" value="268" />
                    </include>
                </control>
            </control>

            <!-- INFO -->

            <include content="524_Fanart">
                <param name="top" value="216" />
                <param name="left" value="1215" />
                <param name="texture" value="$VAR[Image_Thumb_View_516]" />
                <param name="visible_clearlogo" value="false" />
            </include>

            <include content="57_List_Info"><param name="left" value="1215" /></include>

            <!-- MEDIA FLAG - EPISODE -->

            <include content="Furniture_DialogInfo_Extended_Video_Flags" condition="!Skin.HasSetting(hide.furniture.flags)"><param name="controlid" value="5161" /></include>
        </control>
    </include>
</includes>

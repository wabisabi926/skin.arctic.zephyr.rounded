<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_519_Shift_Horizontal">
        <description>List View (id=509)</description>
        <control type="group">
            <visible>Control.IsVisible(519)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>
            <include>View_Slide_For_JumpBar</include>

            <control type="label">
                <top>520</top>
                <left>SidePad</left>
                <description>Header Label</description>
                <textcolor>Dark1</textcolor>
                <font>LargeNew</font>
                <label fallback="19055">$INFO[ListItem.Title]</label>
            </control>
            <control type="panel" id="519">
                <visible>$EXP[Exp_View_519]</visible>

                <top>180</top>
                <left>70</left>
                <width>1778</width>
                <height>395</height>
                <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
                <ondown>1734</ondown>
                <orientation>horizontal</orientation>
                <preloaditems>2</preloaditems>
                <pagecontrol>1734</pagecontrol>

                <viewtype label="31326">list</viewtype>
                <include>Animation_Scrolltime_Views_List</include>
                <itemlayout height="395" width="222">
                    <control type="group">
                        <height>325</height>
                        <include content="Layout_Widget_Poster">
                            <param name="id" value="55"/>
                            <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                        </include>
                    </control>
                </itemlayout>
                <focusedlayout height="395" width="222">
                    <control type="group">
                        <height>325</height>
                        <include content="Layout_Widget_Poster_Focus">
                            <param name="id" value="519"/>
                            <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                        </include>
                    </control>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1734">
                <include content="Object_Scrollbar_Horizontal">
                    <param name="scrollid" value="1734"/>
                    <param name="bottom" value="560"/>
                </include>
            </control>
            <control type="grouplist">
                <left>SidePad</left>
                <top>600</top>
                <width>1270</width>
                <orientation>vertical</orientation>
                <top>683</top>
                <itemgap>3</itemgap>
                <control type="label">
                    <font>InfoNetflix</font>
                    <textcolor>Dark2</textcolor>
                    <label>$VAR[509_Row_1]</label>
                </control>
                <control type="textbox">
                    <font>Tiny</font>
                    <height min="0" max="180">auto</height>
                    <textcolor>Dark2</textcolor>
                    <selectedcolor>Dark2</selectedcolor>
                    <label>$INFO[ListItem.Plot]</label>
                </control>
            </control>
            <control type="image" description="clearlogo">
                <fadetime>ClearArtFadetime</fadetime>
                <top>635</top>
                <right>SidePad</right>
                <width>400</width>
                <aspectratio scalediffuse="true" align="right" aligny="top">keep</aspectratio>
                <texture background="true">$INFO[ListItem.Art(clearart)]</texture>
            </control>
            <control type="image" description="Shadow">
                <width>400</width>
                <right>SidePad</right>
                <height>1</height>
                <bottom>220</bottom>
                <texture flipy="true" colordiffuse="Box_Home_Row">common/sch2.png</texture>
                <visible>!String.IsEmpty(ListItem.Art(clearart))</visible>
            </control>
        </control>
    </include>
</includes>

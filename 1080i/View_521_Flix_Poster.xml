<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="521_Layout">
        <visible>$EXP[Exp_View_521]</visible>
        <include>Animation_Scrolltime_Widgets_List</include>

        <include>Def_On_Info</include>

        <top>568</top>
        <left>72</left>
        <height>365</height>
        <Width>1848</Width>

        <include content="Def_Movement" condition="!Skin.HasSetting(521.poster.control.list)">
            <param name="movement" value="7" />
        </include>

        <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
        <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
        <ondown>1611</ondown>

        <onunfocus condition="Skin.HasSetting(home.views.flix.autoplay.trailer)">ClearProperty(ListItem_Trailer_Path,Home)</onunfocus>
        <onfocus condition="Skin.HasSetting(home.views.flix.autoplay.trailer)">ClearProperty(Trailer_Is_Fullscreen_Playing,Home)</onfocus>

        <orientation>horizontal</orientation>
        <preloaditems>2</preloaditems>
        <pagecontrol>1611</pagecontrol>
        <focusposition>0</focusposition>

        <viewtype label="31366">list</viewtype>

        <itemlayout height="325" width="222">
            <include content="Layout_Widget_Poster">
                <param name="texture_diffuse" value="poster_w202_h305" />
                <param name="id" value="521" />
            </include>
        </itemlayout>
        <focusedlayout height="325" width="222">
            <include content="Layout_Widget_Poster_Focus">
                <param name="texture_diffuse" value="poster_w202_h305" />
                <param name="id" value="521" />
            </include>
            <include condition="Skin.HasSetting(home.views.flix.autoplay.trailer)">Button_Auto_Trailer_Control</include>
        </focusedlayout>
    </include>

    <include name="521Fixed">
        <control type="fixedlist" id="521">
            <include>521_Layout</include>
        </control>
    </include>

    <include name="521List">
        <control type="list" id="521">
            <include>521_Layout</include>
        </control>
    </include>

    <include name="View_521_Flix_Poster">
        <description>List View (id=521)</description>
        <control type="group">
            <visible>Control.IsVisible(521)</visible>

            <include>Animation_Common_Global</include>

            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" tween="cubic" easing="out" delay="0" time="300" />
            </animation>

            <include condition="$EXP[Show_Weather_All_Views]">Furniture_Footer_Clock_Right</include>

            <include content="Def_View_Flix_Minimal_Content"><param name="visible" value="Control.HasFocus(521) | Control.HasFocus(1611)" /></include>

            <include condition="!Skin.HasSetting(521.poster.control.list)">521Fixed</include>
            <include condition="Skin.HasSetting(521.poster.control.list)">521List</include>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1611">
                <include content="Object_Scrollbar_Views_Horizontal">
                    <param name="scrollid" value="1611" />
                    <param name="jumpbar" value="true" />
                    <param name="bottom" value="165" />
                    <param name="idlayout" value="521" />
                </include>
            </control>
        </control>

        <!-- MODE WALL -->

        <control type="group">
            <visible>Control.IsVisible(5218)</visible>

            <include>Animation_Common_Global</include>

            <include condition="$EXP[Show_Weather_All_Views]">Furniture_Footer_Clock_Right</include>

            <include content="Layout_Viewtype_Wall_Switch">
                <param name="id" value="5218" />
                <param name="include" value="Layout_Video_Wall_Poster" />
                <param name="viewtype_label" value="$LOCALIZE[31366]" />
                <param name="onbackid" value="521" />
                <visible>!Window.IsVisible(MyPlaylist.xml)</visible>
            </include>
        </control>
        <include content="Layout_Viewtype_Wall_Furniture">
            <param name="id" value="5218" />
            <param name="onbackid" value="521" />
        </include>
    </include>
</includes>

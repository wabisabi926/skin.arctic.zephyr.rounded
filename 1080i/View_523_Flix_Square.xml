<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="523_Layout">
        <visible>$EXP[Exp_View_523]</visible>

        <include content="Def_Top" condition="!Skin.HasSetting(home.widgets.show.reflections)">
            <param name="top" value="568" />
        </include>
        <include content="Def_Top" condition="Skin.HasSetting(home.widgets.show.reflections)">
            <param name="top" value="556" />
        </include>

        <include content="Def_Movement" condition="!Skin.HasSetting(523.square.control.list) + String.IsEmpty(Skin.String(523.square.size))">
            <param name="movement" value="4" />
        </include>
        <include content="Def_Movement" condition="!Skin.HasSetting(523.square.control.list) + String.IsEqual(Skin.String(523.square.size),1)">
            <param name="movement" value="5" />
        </include>
        <include content="Def_Movement" condition="!Skin.HasSetting(523.square.control.list) + String.IsEqual(Skin.String(523.square.size),2)">
            <param name="movement" value="7" />
        </include>

        <height>365</height>
        <Width>1848</Width>
        <left>72</left>

        <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
        <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
        <ondown>1644</ondown>
        <orientation>horizontal</orientation>

        <preloaditems>2</preloaditems>
        <pagecontrol>1644</pagecontrol>
        <focusposition>0</focusposition>

        <include content="Def_Autoscroll" condition="String.IsEqual(Skin.String(523Autoscroll),1)">
            <param name="time" value="2000" />
        </include>

        <include content="Def_Autoscroll" condition="String.IsEqual(Skin.String(523Autoscroll),2)">
            <param name="time" value="500" />
        </include>

        <viewtype label="31375">list</viewtype>
        <include>Animation_Scrolltime_Widgets_List</include>

        <!-- Big Square -->
        <itemlayout condition="String.IsEmpty(Skin.String(523.square.size))" height="325" width="325">
            <include content="Layout_Widget_Square">
                <param name="id" value="523"/>
                <param name="distance" value="10"/>
                <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                <param name="aspectratio" value="scale"/>
            </include>
        </itemlayout>
        <focusedlayout condition="String.IsEmpty(Skin.String(523.square.size))" height="325" width="325">
            <include content="Layout_Widget_Square_Focus">
                <param name="id" value="523"/>
                <param name="distance" value="10"/>
                <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                <param name="aspectratio" value="scale"/>
            </include>
        </focusedlayout>

        <!-- Middle Square -->
        <itemlayout condition="String.IsEqual(Skin.String(523.square.size),1)" height="337" width="280">
            <control type="group">
                <include content="Layout_Widget_Square">
                    <param name="id" value="523"/>
                    <param name="height" value="280"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="255"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                </include>
            </control>
            <control type="label">
                <left>15</left>
                <right>30</right>
                <bottom>12</bottom>
                <height>50</height>
                <align>center</align>
                <font>InfoNetflix</font>
                <label>$VAR[label_widget_view_523]</label>
                <textcolor>PanelWhite70</textcolor>
                <selectedcolor>PanelWhite70</selectedcolor>
            </control>
        </itemlayout>
        <focusedlayout condition="String.IsEqual(Skin.String(523.square.size),1)" height="337" width="280">
            <control type="group">
                <include content="Layout_Widget_Square_Focus">
                    <param name="id" value="523"/>
                    <param name="height" value="280"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="255"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                    <param name="glow_height" value="280" />
                    <param name="glow_top" value="0" />
                </include>
            </control>
            <control type="label">
                <left>15</left>
                <right>30</right>
                <bottom>12</bottom>
                <height>50</height>
                <align>center</align>
                <font>InfoNetflix</font>
                <label>$VAR[label_widget_view_523]</label>
                <textcolor>PanelWhite70</textcolor>
                <selectedcolor>PanelWhite70</selectedcolor>
            </control>
        </focusedlayout>

        <!-- Small Square -->
        <itemlayout condition="String.IsEqual(Skin.String(523.square.size),2)" height="337" width="222">
            <control type="group">
                <include content="Layout_Widget_Square">
                    <param name="id" value="523"/>
                    <param name="height" value="222"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="200"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                </include>
            </control>
            <control type="textbox">
                <top>222</top>
                <left>20</left>
                <right>20</right>
                <height>106</height>
                <textcolor>Dark1</textcolor>
                <font>Tiny</font>
                <align>center</align>
                <autoscroll>false</autoscroll>
                <label>$VAR[label_widget_view_523]</label>
            </control>
        </itemlayout>
        <focusedlayout condition="String.IsEqual(Skin.String(523.square.size),2)" height="337" width="222">
            <control type="group">
                <include content="Layout_Widget_Square_Focus">
                    <param name="id" value="523"/>
                    <param name="height" value="222"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="200"/>
                    <param name="glow_height" value="225"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                    <param name="glow_top" value="-1"/>
                    <param name="glow_left" value="-1"/>
                </include>
            </control>
            <control type="textbox">
                <top>222</top>
                <left>20</left>
                <right>20</right>
                <height>106</height>
                <textcolor>Dark1</textcolor>
                <font>Tiny</font>
                <align>center</align>
                <autoscroll>false</autoscroll>
                <label>$VAR[label_widget_view_523]</label>
            </control>
        </focusedlayout>
    </include>

    <include name="523Fixed">
        <control type="fixedlist" id="523">
            <include>523_Layout</include>
        </control>
    </include>

    <include name="523List">
        <control type="list" id="523">
            <include>523_Layout</include>
        </control>
    </include>

    <include name="View_523_Flix_Square">
        <description>List View (id=523)</description>
        <control type="group">
            <visible>Control.IsVisible(523)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only)">Furniture_Footer_Clock_Right</include>
            <!-- <include>Animation_Common</include> -->
            <include>Animation_FadeIn_Slide_View_Flix</include>
            <include>View_Slide_For_JumpBar</include>

            <include>View_Flix_Minimal_Content</include>

            <control type="scrollbar" id="1644">
                <include content="Object_Scrollbar_Views_Horizontal">
                    <param name="scrollid" value="1644"/>
                    <param name="jumpbar" value="true"/>
                    <param name="bottom" value="166"/>
                    <param name="idlayout" value="523"/>
                </include>
            </control>

            <include content="Def_Hidden_List_Artist_Album_Count"><param name="id" value="523" /></include>

            <include condition="!Skin.HasSetting(523.square.control.list)">523Fixed</include>
            <include condition="Skin.HasSetting(523.square.control.list)">523List</include>
        </control>

        <!-- MODE WALL -->

        <control type="group">
            <visible>Control.IsVisible(5238)</visible>
            <include>Animation_FadeIn_Slide_Wall</include>
             <include content="Layout_Viewtype_Wall_Switch" condition="!String.IsEqual(Skin.String(523.square.size),2)">
                <param name="id" value="5238" />
                <param name="include" value="Layout_Music_Wall_Square" />
                <param name="viewtype-label" value="$LOCALIZE[31436] $LOCALIZE[2]" />
                <param name="onbackid" value="523" />
                <visible>!Window.IsVisible(MyPlaylist.xml)</visible>
                <!-- <visible>!String.IsEqual(Container.Property(Param.Info),details)</visible> -->
            </include>
            <include content="Layout_Viewtype_Wall_Switch" condition="String.IsEqual(Skin.String(523.square.size),2)">
                <param name="id" value="5238" />
                <param name="include" value="Layout_Music_Wall_Square_Small" />
                <param name="viewtype-label" value="$LOCALIZE[31436] $LOCALIZE[2]" />
                <param name="onbackid" value="523" />
                <visible>!Window.IsVisible(MyPlaylist.xml)</visible>
                <!-- <visible>!String.IsEqual(Container.Property(Param.Info),details)</visible> -->
            </include>
        </control>

        <include content="Layout_Viewtype_Wall_Furniture">
            <param name="id" value="5238" />
            <param name="onbackid" value="523" />
        </include>

    </include>
</includes>

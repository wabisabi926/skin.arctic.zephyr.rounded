<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="523Content">
        <visible>$EXP[Exp_View_523]</visible>

        <include content="Def_Top" condition="!Skin.HasSetting(home.widgets.show.reflections)">
            <param name="top" value="568" />
        </include>
        <include content="Def_Top" condition="Skin.HasSetting(home.widgets.show.reflections)">
            <param name="top" value="556" />
        </include>

        <include content="Def_Movement" condition="!Skin.HasSetting(523.square.control.list) + String.IsEmpty(Skin.String(523.square.size))">
            <param name="movement" value="4" />
        </include>
        <include content="Def_Movement" condition="!Skin.HasSetting(523.square.control.list) + String.IsEqual(Skin.String(523.square.size),1)">
            <param name="movement" value="5" />
        </include>
        <include content="Def_Movement" condition="!Skin.HasSetting(523.square.control.list) + String.IsEqual(Skin.String(523.square.size),2)">
            <param name="movement" value="7" />
        </include>

        <height>365</height>
        <Width>1848</Width>
        <left>72</left>

        <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
        <ondown>1644</ondown>
        <orientation>horizontal</orientation>

        <preloaditems>2</preloaditems>
        <pagecontrol>1644</pagecontrol>
        <focusposition>0</focusposition>

        <include content="Def_Autoscroll" condition="String.IsEqual(Skin.String(523Autoscroll),1)">
            <param name="time" value="2000" />
        </include>

        <include content="Def_Autoscroll" condition="String.IsEqual(Skin.String(523Autoscroll),2)">
            <param name="time" value="500" />
        </include>

        <viewtype label="31375">list</viewtype>
        <include>Animation_Scrolltime_Views_List</include>

        <!-- Big Square -->
        <itemlayout condition="String.IsEmpty(Skin.String(523.square.size))" height="325" width="325">
            <include content="Layout_Widget_Square">
                <param name="id" value="523"/>
                <param name="distance" value="10"/>
                <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                <param name="aspectratio" value="scale"/>
            </include>
        </itemlayout>
        <focusedlayout condition="String.IsEmpty(Skin.String(523.square.size))" height="325" width="325">
            <include content="Layout_Widget_Square_Focus">
                <param name="id" value="523"/>
                <param name="distance" value="10"/>
                <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                <param name="aspectratio" value="scale"/>
            </include>
        </focusedlayout>

        <!-- Middle Square -->
        <itemlayout condition="String.IsEqual(Skin.String(523.square.size),1)" height="337" width="280">
            <control type="group">
                <include content="Layout_Widget_Square">
                    <param name="id" value="523"/>
                    <param name="height" value="280"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="255"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                </include>
            </control>
            <control type="label">
                <left>15</left>
                <right>30</right>
                <bottom>12</bottom>
                <height>50</height>
                <align>center</align>
                <font>InfoNetflix</font>
                <label>$INFO[ListItem.Label]</label>
                <textcolor>PanelWhite70</textcolor>
                <selectedcolor>PanelWhite70</selectedcolor>
            </control>
        </itemlayout>
        <focusedlayout condition="String.IsEqual(Skin.String(523.square.size),1)" height="337" width="280">
            <control type="group">
                <include content="Layout_Widget_Square_Focus">
                    <param name="id" value="523"/>
                    <param name="height" value="280"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="255"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                    <param name="glow_height" value="280" />
                    <param name="glow_top" value="0" />
                </include>
            </control>
            <control type="label">
                <left>15</left>
                <right>30</right>
                <bottom>12</bottom>
                <height>50</height>
                <align>center</align>
                <font>InfoNetflix</font>
                <label>$INFO[ListItem.Label]</label>
                <textcolor>PanelWhite70</textcolor>
                <selectedcolor>PanelWhite70</selectedcolor>
            </control>
        </focusedlayout>

        <!-- Small Square -->
        <itemlayout condition="String.IsEqual(Skin.String(523.square.size),2)" height="337" width="222">
            <control type="group">
                <include content="Layout_Widget_Square">
                    <param name="id" value="523"/>
                    <param name="height" value="222"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="200"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                </include>
            </control>
            <control type="textbox">
                <top>222</top>
                <left>20</left>
                <right>20</right>
                <height>106</height>
                <textcolor>Dark1</textcolor>
                <font>Tiny</font>
                <align>center</align>
                <autoscroll>false</autoscroll>
                <label>$INFO[ListItem.Label]</label>
            </control>
        </itemlayout>
        <focusedlayout condition="String.IsEqual(Skin.String(523.square.size),2)" height="337" width="222">
            <control type="group">
                <include content="Layout_Widget_Square_Focus">
                    <param name="id" value="523"/>
                    <param name="height" value="222"/>
                    <param name="distance" value="10"/>
                    <param name="top" value="200"/>
                    <param name="glow_height" value="225"/>
                    <param name="reflections" value="Skin.HasSetting(show.reflections)"/>
                    <param name="aspectratio" value="scale"/>
                    <param name="glow_top" value="-1"/>
                    <param name="glow_left" value="-1"/>
                </include>
            </control>
            <control type="textbox">
                <top>222</top>
                <left>20</left>
                <right>20</right>
                <height>106</height>
                <textcolor>Dark1</textcolor>
                <font>Tiny</font>
                <align>center</align>
                <autoscroll>false</autoscroll>
                <label>$INFO[ListItem.Label]</label>
            </control>
        </focusedlayout>
    </include>

    <include name="523Fixed">
        <control type="fixedlist" id="523">
            <include>523Content</include>
        </control>
    </include>

    <include name="523List">
        <control type="list" id="523">
            <include>523Content</include>
        </control>
    </include>

    <include name="View_523_Minimal_V2_Music">
        <description>List View (id=523)</description>
        <control type="group">
            <visible>Control.IsVisible(523)</visible>

            <include condition="!Skin.HasSetting(furniture.weather.home.only)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>
            <include>View_Slide_For_JumpBar</include>
            <include>View_523_Minimal_V2_Content_Music</include>

            <control type="scrollbar" id="1644">
                <include content="Object_Scrollbar_Horizontal">
                    <param name="scrollid" value="1644"/>
                    <param name="jumpbar" value="true"/>
                    <param name="bottom" value="166"/>
                    <param name="idlayout" value="523"/>
                </include>
            </control>
            <control type="list" id="52381">
                <include>Def_Hidden_ListControl</include>
                <content>$INFO[Container(523).ListItem.DBID,musicdb://artists/,/]</content>
            </control>
            <include condition="!Skin.HasSetting(523.square.control.list)">523Fixed</include>
            <include condition="Skin.HasSetting(523.square.control.list)">523List</include>
        </control>

        <control type="group">
            <visible>Control.IsVisible(5238)</visible>
            <include>Animation_Common</include>
            <include>Animation_FadeIn_Slide</include>
             <include content="Layout_Viewtype_Wall_Switch" condition="!String.IsEqual(Skin.String(523.square.size),2)">
                <param name="id" value="5238" />
                <param name="include" value="Layout_Music_Wall_Square" />
                <param name="viewtype-label" value="$LOCALIZE[31436] $LOCALIZE[2]" />
                <param name="onbackid" value="523" />
                <visible>!Window.IsVisible(MyPlaylist.xml)</visible>
                <!-- <visible>!String.IsEqual(Container.Property(Param.Info),details)</visible> -->
            </include>
            <include content="Layout_Viewtype_Wall_Switch" condition="String.IsEqual(Skin.String(523.square.size),2)">
                <param name="id" value="5238" />
                <param name="include" value="Layout_Music_Wall_Square_Small" />
                <param name="viewtype-label" value="$LOCALIZE[31436] $LOCALIZE[2]" />
                <param name="onbackid" value="523" />
                <visible>!Window.IsVisible(MyPlaylist.xml)</visible>
                <!-- <visible>!String.IsEqual(Container.Property(Param.Info),details)</visible> -->
            </include>
        </control>

        <include content="Layout_Viewtype_Wall_Furniture">
            <param name="id" value="5238" />
            <param name="onbackid" value="523" />
        </include>

    </include>

    <include name="View_523_Minimal_V2_Content_Music">
        <control type="group">
            <left>SidePad</left>
            <include content="Def_Top" condition="!Skin.HasSetting(home.widgets.show.reflections)">
                <param name="top" value="195" />
            </include>
            <include content="Def_Top" condition="Skin.HasSetting(home.widgets.show.reflections)">
                <param name="top" value="191" />
            </include>
            <width>NetflixPlotWidth</width>

            <!-- CLERALOGO DISABLE -->

            <control type="grouplist">
                <visible>!Skin.HasSetting(show.view.netflix.title.clearlogo.music)</visible>
                <top>0</top>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>

                <!-- MAIN TITLE - TEXT -->

                <control type="label">
                    <height>40</height>
                    <textcolor>Dark1</textcolor>
                    <font>LargeNew</font>
                    <label fallback="19055">$INFO[ListItem.Label]</label>
                    <include condition="Skin.HasSetting(labels.autoscroll)">LabelScroll</include>
                </control>

                <control type="textbox">
                    <height>15</height>
                </control>

                <!-- SUB TITLE - FILES -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$LOCALIZE[19076] $INFO[Container(44025).NumItems,  •  , $LOCALIZE[31083]]</label>
                    <visible>Container.Content(files) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) + !$EXP[IsAnPlugin]]</visible>
                </control>

                <!-- SUB TITLE - ALL OTHERS -->

                <control type="label">
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_Music_Sub_Title]</label>
                    <visible>![Container.Content(files) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) + !$EXP[IsAnPlugin]]]</visible>
                </control>

                <!-- PLOT -->

                <control type="textbox">
                    <font>Tiny</font>
                    <height min="36" max="140">auto</height>
                    <textcolor>Dark2</textcolor>
                    <selectedcolor>Dark2</selectedcolor>
                    <label>$VAR[Label_Plot_Box_Music]</label>
                </control>
            </control>

            <!-- CLERALOGO ENABLE - CLEARLOGO NOT AVAILABLE -->

            <control type="grouplist">
                <visible>Skin.HasSetting(show.view.netflix.title.clearlogo.music) + !$EXP[Exp_Title_Clearlogo_Available]</visible>
                <top>0</top>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>

                <!-- MAIN TITLE - TEXT -->

                <control type="label">
                    <height>ClearLogoTitleMaxHeight</height>
                    <textcolor>Dark1</textcolor>
                    <font>LargeNew</font>
                    <label fallback="19055">$INFO[ListItem.Label]</label>
                    <include condition="Skin.HasSetting(labels.autoscroll)">LabelScroll</include>
                </control>

                <!-- SUB TITLE - FILES -->

                <control type="label">
                    <aligny>center</aligny>
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$LOCALIZE[19076] $INFO[Container(44025).NumItems,  •  , $LOCALIZE[31083]]</label>
                    <visible>Container.Content(files) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) + !$EXP[IsAnPlugin]]</visible>
                </control>

                <!-- SUB TITLE - ALL OTHERS -->

                <control type="label">
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_Music_Sub_Title]</label>
                    <visible>![Container.Content(files) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) + !$EXP[IsAnPlugin]]]</visible>
                </control>

                <!-- PLOT -->

                <control type="textbox">
                    <font>Tiny</font>
                    <height min="36" max="140">auto</height>
                    <textcolor>Dark2</textcolor>
                    <selectedcolor>Dark2</selectedcolor>
                    <label>$VAR[Label_Plot_Box_Music]</label>
                </control>
            </control>

            <!-- CLERALOGO ENABLE - CLEARLOGO AVAILABLE -->

            <control type="grouplist">
                <visible>Skin.HasSetting(show.view.netflix.title.clearlogo.music) + $EXP[Exp_Title_Clearlogo_Available]</visible>
                <top>0</top>
                <orientation>vertical</orientation>
                <itemgap>0</itemgap>
                <control type="image" description="clearlogo">
                    <height>ClearLogoTitleMaxHeight</height>
                    <width>ClearLogoTitleMaxWidth</width>
                    <aspectratio scalediffuse="true" align="left">keep</aspectratio>
                    <texture background="true">$VAR[Image_Crop_ClearLogo]</texture>
                    <animation effect="fade" start="0" end="100" time="200" delay="0" reversible="true">Visible</animation>
                    <animation effect="fade" start="100" end="0" delay="400" time="200" reversible="true">Hidden</animation>
                </control>
                <control type="label">
                    <font>InfoNetflix</font>
                    <textcolor>PanelWhite70</textcolor>
                    <selectedcolor>PanelWhite70</selectedcolor>
                    <label>$VAR[Label_Music_Sub_Title]</label>
                </control>
                <control type="textbox">
                    <font>Tiny</font>
                    <height min="36" max="140">auto</height>
                    <textcolor>Dark2</textcolor>
                    <selectedcolor>Dark2</selectedcolor>
                    <label>$VAR[Label_Plot_Box_Music]</label>
                    <visible>[!String.IsEmpty(ListItem.Property(Artist_Description)) | !String.IsEmpty(ListItem.Property(Album_Description))] + !String.IsEqual(ListItem.DBType,song)</visible>
                </control>
            </control>
        </control>
    </include>
</includes>

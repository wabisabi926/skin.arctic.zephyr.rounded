    <include name="524_Fanart">
        <param name="top" value="$PARAM[top]" default="532" />
        <param name="left" value="$PARAM[left]" default="View_SidePad" />
        <param name="height" value="$PARAM[height]" default="350" />
        <param name="width" value="$PARAM[width]" default="625" />
        <param name="pad_image" value="$PARAM[pad_image]" default="0" />
        <param name="visible" value="$PARAM[visible]" default="true" />
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>

                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <height>$PARAM[height]</height>

                <control type="group">
                    <include>Def_Art_Poster_Background</include>

                    <!-- FANART  -->

                    <include content="Def_Image_Art_Default">
                        <param name="condition_fadetime" value="true" />
                        <param name="aspectratio" value="scale" />
                        <param name="texture" value="$VAR[Image_Fanart]" />
                        <param name="texture_diffuse" value="fanart_w645_h370" />
                    </include>

                    <!-- CLEARLOGO -->

                    <control type="image">
                        <height>100</height>
                        <width>240</width>
                        <right>40</right>
                        <bottom>30</bottom>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio align="right" aligny="bottom">keep</aspectratio>
                        <texture background="true">$VAR[Image_ClearLogo]</texture>
                        <visible>$EXP[View_Clearlogo_On_Fanart]</visible>
                    </control>
                </control>
            </control>
        </definition>
    </include>


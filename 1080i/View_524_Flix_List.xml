    <include name="View_524_Fanart">
        <param name="height" value="$PARAM[height]" default="370"/>
        <param name="width" value="$PARAM[width]" default="645"/>
        <param name="visible" value="$PARAM[visible]" default="true"/>
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>

                <top>$PARAM[top]</top>
                <left>$PARAM[left]</left>
                <width>$PARAM[width]</width>
                <height>$PARAM[height]</height>

                <control type="group">
                    <control type="image">
                        <left>1</left>
                        <top>1</top>
                        <right>1</right>
                        <bottom>1</bottom>
                        <texture border="18" infill="false">common/$VAR[shadow18]</texture>
                        <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                    </control>
                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>10</bottom>
                        <texture colordiffuse="Fallback" border="12" background="true">common/box.png</texture>
                    </control>

                    <!-- FANART  -->

                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>10</bottom>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                        <texture diffuse="diffuse/fanart_645x370_v57.png" background="true">$VAR[Image_Fanart]</texture>

                        <visible>Container.Content(addons) | Container.Content(movies) | Container.Content(videos) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | $EXP[IsAnPlugin] | Container.Content(countries) | Container.Content(genres) | Container.Content(years) | Container.Content(tags) | Container.Content(studios) | Container.Content(directors) | Container.Content(actors) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(files) | Container.Content(favourites) | String.IsEqual(ListItem.Property(item.type),person)</visible>

                        <visible>!String.StartsWith(ListItem.Icon,Default) | [String.StartsWith(ListItem.Icon,Default) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(countries) + !String.IsEmpty(Skin.String(country.logos.path))] | [Container.Content(genres) + !String.IsEmpty(Skin.String(genre.icons.path))] | [Container.Content(studios) + !String.IsEmpty(Skin.String(studio.logos.path))]]]</visible>
                        <!-- <visible>!$EXP[IsYoutubeItem]</visible> -->
                        <visible>!ListItem.IsParentFolder</visible>
                    </control>

                    <!-- ICON BLACK -->

                    <control type="image">
                        <left>10</left>
                        <top>10</top>
                        <right>10</right>
                        <bottom>10</bottom>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                        <texture diffuse="diffuse/fanart_645x370_v57.png" background="true" colordiffuse="Dark1">$VAR[Image_Fanart]</texture>
                        <visible>String.StartsWith(ListItem.Icon,Default)</visible>
                        <visible>$EXP[IsGameMode] | Container.Content(musicvideos) | Container.Content(files) | [Container.Content(studios) + String.IsEmpty(Skin.String(studio.logos.path))] | [Container.Content(countries) + String.IsEmpty(Skin.String(country.logos.path))] | [Container.Content(genres) + String.IsEmpty(Skin.String(genre.icons.path))] | Container.Content(directors) | Container.Content(actors) | Container.Content(tags) | Container.Content(years) | Container.Content(favourites) | Container.Content(videoversions) | Container.Content(addons) | [Container.Content() + String.StartsWith(Container.FolderPath,addons://)] | $EXP[IsAnLibrary] | $EXP[IsAnSource] | String.StartsWith(Container.FolderPath,musicdb://sources) | String.StartsWith(Container.FolderPath,special://musicplaylists) | String.StartsWith(Container.FolderPath,musicdb://years) | String.StartsWith(Container.FolderPath,musicdb://genres) | [Container.Content(files) + $EXP[IsPluginShortlist]] | ListItem.IsParentFolder | Container.Content(playlists) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content() | Container.Content(videos)]</visible>
                    </control>

                    <!-- CLEARLOGO -->

                    <control type="image">
                        <height>100</height>
                        <width>240</width>
                        <right>40</right>
                        <bottom>30</bottom>
                        <fadetime>PosterFanartFadetime</fadetime>
                        <aspectratio align="right" aligny="bottom">keep</aspectratio>
                        <texture background="true">$VAR[Image_ClearLogo]</texture>
                        <visible>[Skin.HasSetting(dont.use.landscape.tvshows) + Skin.HasSetting(use.clearlogo.on.fanart.tvshows) + String.IsEqual(ListItem.DBType,tvshow)] |
                        [!Skin.HasSetting(dont.use.landscape.tvshows) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEqual(ListItem.DBType,tvshow)] |
                        [Skin.HasSetting(dont.use.landscape.seasons) + Skin.HasSetting(use.clearlogo.on.fanart.seasons) + String.IsEqual(ListItem.DBType,season)] |
                        [!Skin.HasSetting(dont.use.landscape.seasons) + String.IsEmpty(ListItem.Art(tvshow.landscape)) + String.IsEqual(ListItem.DBType,season)] |
                        [Skin.HasSetting(dont.use.landscape.movies) + Skin.HasSetting(use.clearlogo.on.fanart.movies) + String.IsEqual(ListItem.DBType,movie)] |
                        [!Skin.HasSetting(dont.use.landscape.movies) + String.IsEmpty(ListItem.Art(landscape)) + String.IsEqual(ListItem.DBType,movie)] |
                        [Skin.HasSetting(use.clearlogo.on.fanart.artists) + [String.IsEqual(ListItem.DBType,artist) | String.IsEqual(ListItem.DBType,album) | String.IsEqual(ListItem.DBType,song)]]</visible>
                    </control>
                </control>
            </control>
        </definition>
    </include>


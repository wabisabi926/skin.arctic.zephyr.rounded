<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_52_BigList_Pane">
        <description>List View (id=52)</description>
        <control type="group">
            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>
            <visible>Control.IsVisible(52)</visible>
            <include>View_Slide_For_JumpBar</include>

            <control type="panel" id="52">
                <visible>$EXP[Exp_View_52]</visible>

                <include>Def_On_Info</include>

                <top>PosterPad</top>
                <left>SidePad</left>
                <width>1770</width>
                <height>646</height>
                <include>Def_Focus_Context_Menu_On_Right</include>
                <onleft>1625</onleft>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1625</pagecontrol>
                <orientation>vertical</orientation>

                <viewtype label="31316">list</viewtype>
                <include>Animation_Scrolltime_Views_List</include>

                <itemlayout height="130" width="442,2">
                    <include>View_52_BigList_ItemLayout</include>
                </itemlayout>
                <focusedlayout height="130" width="442,2">
                    <include>View_52_BigList_FocusLayout</include>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1625">
                <include content="Object_Scrollbar_Views_Vertical">
                    <param name="scrollid" value="1625"/>
                    <param name="idlayout" value="52"/>
                </include>
            </control>
        </control>
    </include>

    <include name="View_52_BigList_ItemLayout">
        <control type="group">
            <top>4</top>
            <right>9</right>
            <height>110</height>
            <width>424</width>

            <include>Def_Image_Background</include>

            <!-- Icon color -->
            <control type="image">
                <left>6</left>
                <top>6</top>
                <width>98</width>
                <height>98</height>
                <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                <texture diffuse="diffuse/icon_w80_h80.png" background="true">$VAR[Image_Poster]</texture>
                <visible>$EXP[View_Artwork_Condition]</visible>
                <visible>$EXP[View_Artwork_Specific]</visible>
                <visible>!ListItem.IsParentFolder</visible>
            </control>

            <!-- Icon black -->

            <control type="image">
                <left>6</left>
                <top>6</top>
                <width>98</width>
                <height>98</height>
                <texture border="12" colordiffuse="Dark4">common/box.png</texture>
                <visible>$EXP[View_Icon_Black]</visible>
            </control>
            <control type="image">
                <left>6</left>
                <top>6</top>
                <width>98</width>
                <height>98</height>
                <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                <texture colordiffuse="Dark1">$VAR[Image_Poster]</texture>
                <visible>$EXP[View_Icon_Black]</visible>
            </control>

            <!-- Label -->
            <control type="textbox">
                <left>138</left>
                <top>5</top>
                <right>110</right>
                <height>100</height>
                <align>left</align>
                <aligny>center</aligny>
                <font>InfoNetflix</font>
                <textcolor>Dark1</textcolor>
                <selectedcolor>Dark1</selectedcolor>
                <label>$INFO[ListItem.Label]</label>
                <animation effect="slide" start="0,0" end="-17,0" time="0" condition="true">Conditional</animation>
                <visible>!ListItem.IsParentFolder</visible>
            </control>

            <!-- Label -->
            <!-- <control type="label"> -->
                <!-- <left>138</left> -->
                <!-- <top>5</top> -->
                <!-- <right>20</right> -->
                <!-- <height>100</height> -->

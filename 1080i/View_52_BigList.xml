<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_52_BigList_Pane">
        <description>List View (id=52)</description>
        <control type="group">
            <include condition="!Skin.HasSetting(furniture.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>
            <visible>Control.IsVisible(52)</visible>
            <include>View_Slide_For_JumpBar</include>
            <control type="panel" id="52">
                <visible>$EXP[Exp_View_52]</visible>

                <include>Def_On_Info</include>

                <top>PosterPad</top>
                <left>SidePad</left>
                <width>1770</width>
                <height>646</height>
                <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                <onleft condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onleft>
                <onright>1625</onright>
                <ondown>52</ondown>
                <onup>52</onup>
                <preloaditems>2</preloaditems>
                <pagecontrol>1625</pagecontrol>
                <orientation>vertical</orientation>

                <viewtype label="31376">list</viewtype>
                <include>Animation_Scrolltime_Views_List</include>
                <itemlayout height="130" width="442,2">
                    <control type="image">
                        <left>0</left>
                        <top>-5</top>
                        <right>0</right>
                        <height>128</height>
                        <texture border="18" background="true" infill="false">common/$VAR[shadow18]</texture>
                        <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                    </control>
                    <control type="image">
                        <left>9</left>
                        <top>4</top>
                        <right>9</right>
                        <height>110</height>
                        <texture border="12" colordiffuse="White70">common/box.png</texture>
                        <!-- <animation effect="fade" start="100" end="70" condition="true">Conditional</animation> -->
                    </control>

                    <include>View_52_BigList_ItemLayout</include>
                </itemlayout>
                <focusedlayout height="130" width="442,2">
                    <include>View_52_BigList_FocusLayout</include>
                </focusedlayout>
            </control>
            <control type="scrollbar" id="1625">
                <include content="Object_Scrollbar_Views_Vertical">
                    <param name="scrollid" value="1625"/>
                    <param name="idlayout" value="52"/>
                </include>
            </control>
        </control>
    </include>

    <include name="View_52_BigList_ItemLayout">

        <!-- Icon color -->
        <control type="image">
            <left>23</left>
            <top>17</top>
            <width>84</width>
            <height>84</height>
            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
            <texture diffuse="diffuse/listicon80.png" background="true">$VAR[Image_Poster]</texture>
            <visible>$EXP[View_Artwork_Condition]</visible>
            <visible>$EXP[View_Artwork_Specific]</visible>
            <visible>!ListItem.IsParentFolder</visible>
        </control>

        <!-- Icon black -->

        <control type="image">
            <left>23</left>
            <top>17</top>
            <width>84</width>
            <height>84</height>
            <texture border="12" colordiffuse="Dark4">common/box.png</texture>
            <visible>$EXP[View_Icon_Black]</visible>
        </control>
        <control type="image">
            <left>23</left>
            <top>17</top>
            <width>84</width>
            <height>84</height>
            <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
            <texture colordiffuse="Dark1">$VAR[Image_Poster]</texture>
            <visible>$EXP[View_Icon_Black]</visible>
        </control>

        <!-- Label -->
        <control type="textbox">
            <left>138</left>
            <top>5</top>
            <right>110</right>
            <height>100</height>
            <align>left</align>
            <aligny>center</aligny>
            <font>InfoNetflix</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$INFO[ListItem.Label]</label>
            <animation effect="slide" start="0,0" end="-17,0" time="0" condition="true">Conditional</animation>
            <visible>!ListItem.IsParentFolder</visible>
        </control>


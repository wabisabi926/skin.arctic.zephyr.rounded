<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="53Content">
        <visible>$EXP[Exp_View_53]</visible>
        <include>Animation_Scrolltime_Views_List</include>

        <top>96</top>
        <left>-190</left>
        <width>2300</width>
        <height>1080</height>

        <onup condition="!Skin.HasSetting(global.kioskmode)">9000</onup>
        <onup condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onup>
        <ondown>1633</ondown>
        <onleft>53</onleft>
        <onright>53</onright>

        <focusposition>1</focusposition>
        <preloaditems>0</preloaditems>
        <pagecontrol>1633</pagecontrol>
        <orientation>horizontal</orientation>

        <viewtype label="31313">list</viewtype>

        <itemlayout width="270">
            <control type="group">
                <top>170</top>
                <left>80</left>
                <width>270</width>
                <height>396</height>
                <include content="Layout_Widget_Poster">
                    <param name="texture_diffuse" value="poster_w273_h404" />
                    <param name="id" value="55" />
                    <param name="height" value="396" />
                    <param name="top" value="368" />
                </include>
            </control>
        </itemlayout>
        <focusedlayout width="300">
            <control type="group">
                <animation condition="Container(53).OnNext | Container(53).OnPrevious" effect="zoom" start="60" end="100" delay="0" time="350" tween="sine" easing="out" center="213,276">Focus</animation>
                <animation condition="Container(53).OnNext | Container(53).OnPrevious" effect="zoom" start="100" end="60" delay="0" time="250" tween="sine" easing="out" center="213,282">UnFocus</animation>

                <!-- ART POSTER -->

                <control type="group">
                    <top>120</top>
                    <left>0</left>
                    <width>PosterW</width>
                    <height>PosterH</height>

                    <include>Def_Art_Full_Background_b24</include>

                    <include content="Def_Art_Icon_Image">
                        <param name="texture" value="$VAR[Image_Poster]" />
                        <param name="texture_diffuse" value="poster_w428_h640_b24" />
                        <param name="aspectratio" value="scale" />
                        <param name="fallback" value="DefaultMovies" />
                    </include>
                </control>

                <control type="group">
                    <visible>Skin.HasSetting(enable.view.video.rating.num)</visible>
                    <left>0</left>
                    <bottom>305</bottom>
                    <include>Def_Layout_Poster_rating_Info</include>
                </control>

                <include content="Layout_Indicator_Status" condition="!Skin.HasSetting(hide.markers)">
                    <param name="right" value="-138" />
                    <param name="top" value="110" />
                </include>
            </control>
        </focusedlayout>
    </include>

    <include name="53Wrap">
        <include>View_Slide_For_JumpBar</include>
        <control type="wraplist" id="53">
            <include>53Content</include>
        </control>
    </include>

    <include name="53Fixed">
        <include>View_Slide_For_JumpBar</include>
        <control type="fixedlist" id="53">
            <include>53Content</include>
        </control>
    </include>

    <include name="View_53_Poster">
        <description>List View (id=53)</description>
        <control type="group">
            <include>Animation_Common</include>
            <visible>Control.IsVisible(53)</visible>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>

            <include condition="!Skin.HasSetting(disable.wrap.view.53)">53Wrap</include>
            <include condition="Skin.HasSetting(disable.wrap.view.53)">53Fixed</include>

            <!-- SCROLLBAR -->

            <control type="scrollbar" id="1633">
                <include content="Object_Scrollbar_Views_Horizontal">
                    <param name="scrollid" value="1633" />
                </include>
            </control>

            <!-- INFORMATION -->

            <include content="57_List_Info">
                <param name="top" value="660" />
                <param name="left" value="540" />
                <param name="width" value="1300" />
                <param name="plot_height" value="70" />
                <param name="animation_condition" value="true" />
                <param name="visible" value="![Container(53).OnNext | Container(53).OnPrevious]" />
            </include>
        </control>
    </include>
</includes>

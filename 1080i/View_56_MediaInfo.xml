<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="View_56_List_MediaInfo">
        <description>List View (id=56)</description>
        <control type="group">
            <visible>Control.IsVisible(56)</visible>

            <include condition="!Skin.HasSetting(show.clock.date.weather.home.only) + !Skin.HasSetting(show.furniture.footer)">Furniture_Footer_Clock_Right</include>
            <include>Animation_Common</include>
            <include>View_Slide_For_JumpBar</include>

            <control type="group">
                <control type="panel" id="56">
                    <visible>$EXP[Exp_View_56]</visible>

                    <include>Def_On_Info</include>

                    <top>PosterPad</top>
                    <height>PosterH</height>
                    <right>732</right>
                    <width>648</width>
                    <onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
                    <onleft condition="!Skin.HasSetting(global.kioskmode) + [Player.HasMedia | Player.Playing]">AlarmClock(GoToButtonFullScreen,SetFocus(6157),00:00,silent)</onleft>
                    <onright>1609</onright>
                    <onup>56</onup>
                    <ondown>56</ondown>
                    <pagecontrol>1609</pagecontrol>

                    <viewtype label="544">list</viewtype>
                    <include>Animation_Scrolltime_Views_List</include>
                    <itemlayout condition="!Skin.HasSetting(enable.view.5x.51x.extended.list)" width="648" height="64">
                        <include>layout_list_item_56</include>
                    </itemlayout>
                    <focusedlayout condition="!Skin.HasSetting(enable.view.5x.51x.extended.list)" width="648" height="64">
                        <include>layout_list_focus_56</include>
                    </focusedlayout>
                    <itemlayout condition="Skin.HasSetting(enable.view.5x.51x.extended.list) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]" width="648" height="91.4">
                        <include>layout_list_item_56_info</include>
                    </itemlayout>
                    <focusedlayout condition="Skin.HasSetting(enable.view.5x.51x.extended.list) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes)]" width="648" height="91.4">
                        <include>layout_list_focus_56_info</include>
                    </focusedlayout>
                </control>

                <!-- SCROLLBAR -->
                <control type="scrollbar" id="1609">
                    <include content="Object_Scrollbar_Views_Vertical">
                        <param name="scrollid" value="1609"/>
                        <param name="idlayout" value="56"/>
                        <param name="centerright" value="720"/>
                    </include>
                </control>
            </control>

            <include>View_50_SidePoster</include>

            <include content="524_Fanart">
                <param name="left" value="1205"/>
                <param name="top" value="206"/>
            </include>

            <include content="57_List_Info"><param name="left" value="1215"/></include>
        </control>
    </include>

    <!-- LAYOUT -->

    <include name="layout_list_item_56">

        <!-- Label -->
        <control type="label">
            <left>25</left>
            <width max="560">auto</width>
            <aligny>center</aligny>
            <height>64</height>
            <font>InfoNetflix</font>
            <label>$INFO[ListItem.Label]</label>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
        </control>

        <!-- Watched status -->
        <control type="label">
            <align>right</align>
            <aligny>center</aligny>
            <width>64</width>
            <centerright>55</centerright>
            <height>68</height>
            <font>SymbolList</font>
            <label>$VAR[Label_List_Watched]</label>
            <visible>!ListItem.IsParentFolder</visible>
            <visible>!String.IsEmpty(ListItem.DBType)</visible>
        </control>

        <!-- Rating -->
        <control type="label">
            <right>70</right>
            <width>500</width>
            <aligny>center</aligny>
            <height>64</height>
            <align>right</align>
            <font>SmallNavi</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$VAR[Label2VarInfo]</label>
            <animation effect="slide" start="0" end="34" time="0" condition="Skin.HasSetting(hide.markers)">Conditional</animation>
            <visible>!Skin.HasSetting(hide.ratings)</visible>
        </control>
    </include>


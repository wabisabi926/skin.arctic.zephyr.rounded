    <include name="layout_list_item_56">

        <!-- Is Playing -->

        <include>Def_View_List_Item_IsPlaying</include>

        <!-- Label -->

        <control type="label">
            <left>25</left>
            <width max="560">auto</width>
            <aligny>center</aligny>
            <height>64</height>
            <font>InfoNetflix</font>
            <label>$INFO[ListItem.Label]</label>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
        </control>

        <!-- Watched status -->

        <control type="label">
            <align>right</align>
            <aligny>center</aligny>
            <width>64</width>
            <centerright>55</centerright>
            <height>68</height>
            <font>SymbolList</font>
            <label>$VAR[Label_List_Watched]</label>
            <visible>!ListItem.IsParentFolder</visible>
            <visible>!String.IsEmpty(ListItem.DBType)</visible>
        </control>

        <!-- Rating -->

        <control type="label">
            <right>70</right>
            <width>500</width>
            <aligny>center</aligny>
            <height>64</height>
            <align>right</align>
            <font>SmallNavi</font>
            <textcolor>Dark1</textcolor>
            <selectedcolor>Dark1</selectedcolor>
            <label>$VAR[Label_56_Info]</label>
            <animation effect="slide" start="0" end="34" time="0" condition="Skin.HasSetting(hide.markers)">Conditional</animation>
            <visible>!Skin.HasSetting(hide.video.ratings)</visible>
        </control>

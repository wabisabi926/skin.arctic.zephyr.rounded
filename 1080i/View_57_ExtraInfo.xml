    <include name="Fanart_Info">
        <param name="top" value="$PARAM[top]" default="206"/>
        <param name="width_condition" value="$PARAM[width_condition]" default="Skin.HasSetting(furniture.progress.circle)"/>
        <param name="visible" value="$PARAM[visible]" default="true"/>
        <param name="visible_progress" value="$PARAM[visible_progress]" default="true"/>
        <param name="infobox_height" value="$PARAM[infobox_height]" default="290"/>
        <definition>
            <control type="group">
                <left>$PARAM[posx]</left>
                <width>645</width>
                <top>$PARAM[top]</top>
                <height>660</height>
                <visible>$EXP[Exp_View_57] | $EXP[Exp_View_56] | $EXP[Exp_View_505] | $EXP[Exp_View_516] | $EXP[Exp_View_526]</visible>
                <control type="group">
                    <height>370</height>
                    <visible>[!Skin.HasSetting(57list.low) + Control.IsVisible(57)] | !Control.IsVisible(57)</visible>
                    <visible>[!Skin.HasSetting(56media.low) + Control.IsVisible(56)] | !Control.IsVisible(56)</visible>

                    <!-- FANART -->

                    <control type="group">
                        <visible>$PARAM[visible]</visible>
                        <control type="image">
                            <left>1</left>
                            <top>1</top>
                            <right>1</right>
                            <bottom>1</bottom>
                            <texture border="18" infill="false">common/$VAR[shadow18]</texture>
                            <visible>!Skin.HasSetting(global.hide.shadows)</visible>
                        </control>
                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <right>10</right>
                            <bottom>10</bottom>
                            <texture colordiffuse="Fallback" border="12" background="true">common/diffuse_box.png</texture>
                        </control>

                        <!-- FANART  -->

                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <right>10</right>
                            <bottom>10</bottom>
                            <fadetime>PosterFanartFadetime</fadetime>
                            <aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
                            <texture diffuse="diffuse/fanart_645x370_v57.png" background="true">$VAR[Image_Fanart]</texture>
                            <visible>Container.Content(addons) | Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | $EXP[IsAnPlugin] | Container.Content(countries) | Container.Content(genres) | Container.Content(years) | Container.Content(tags) | Container.Content(studios) | Container.Content(directors) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content(files) | Container.Content(favourites) | String.IsEqual(ListItem.Property(item.type),person)</visible>

                            <visible>!String.StartsWith(ListItem.Icon,Default) | [String.StartsWith(ListItem.Icon,Default) + [Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | [Container.Content(countries) + !String.IsEmpty(Skin.String(country.logos.path))] | [Container.Content(genres) + !String.IsEmpty(Skin.String(genre.icons.path))] | [Container.Content(studios) + !String.IsEmpty(Skin.String(studio.logos.path))]]]</visible>
                            <visible>!$EXP[IsYoutube]</visible>
                            <visible>!ListItem.IsParentFolder</visible>
                        </control>

                        <!-- ICON BLACK -->

                        <control type="image">
                            <left>10</left>
                            <top>10</top>
                            <right>10</right>
                            <bottom>10</bottom>
                            <fadetime>PosterFanartFadetime</fadetime>
                            <aspectratio align="center" aligny="center" scalediffuse="false">keep</aspectratio>
                            <texture diffuse="diffuse/fanart_645x370_v57.png" background="true" colordiffuse="Dark1">$VAR[Image_Fanart]</texture>
                            <visible>String.StartsWith(ListItem.Icon,Default)</visible>
                            <visible>$EXP[InGameMode] | Container.Content(musicvideos) | Container.Content(files) | [Container.Content(studios) + String.IsEmpty(Skin.String(studio.logos.path))] | [Container.Content(countries) + String.IsEmpty(Skin.String(country.logos.path))] | [Container.Content(genres) + String.IsEmpty(Skin.String(genre.icons.path))] | Container.Content(directors) | Container.Content(tags) | Container.Content(years) | Container.Content(favourites) | Container.Content(videoversions) | Container.Content(addons) | [Container.Content() + String.StartsWith(Container.FolderPath,addons://)] | $EXP[IsAnLibrary] | $EXP[IsAnSource] | String.StartsWith(Container.FolderPath,musicdb://sources) | String.StartsWith(Container.FolderPath,special://musicplaylists) | String.StartsWith(Container.FolderPath,musicdb://years) | String.StartsWith(Container.FolderPath,musicdb://genres) | [Container.Content(files) + $EXP[IsPluginShortlist]] | ListItem.IsParentFolder | Container.Content(playlists) | [Container.Content(movies) + String.IsEmpty(ListItem.DBType) | Container.Content(artists) | Container.Content(albums) | Container.Content(songs) | Container.Content()]</visible>
                        </control>

                        <!-- CLEARLOGO -->

                        <control type="image">
                            <height>100</height>
                            <width>240</width>
                            <right>40</right>
                            <bottom>30</bottom>
                            <fadetime>PosterFanartFadetime</fadetime>

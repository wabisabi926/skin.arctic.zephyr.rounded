                    <param name="visible" value="[!$EXP[IsAnPlugin] | $EXP[IsTMDbHelper]]" />
                    <param name="top" value="124" />
                    <param name="align" value="justify" />
                    <param name="height" value="$PARAM[plot_height]" />
                </include>

                <!-- PROGRESS -->

                <include content="Def_View_Info_Circle_Progress">
                    <param name="top" value="-8" />
                </include>

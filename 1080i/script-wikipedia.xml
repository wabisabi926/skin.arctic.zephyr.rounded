<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">9902</defaultcontrol>
    <onload>SetProperty(TMDbHelper.ServicePause,1)</onload>
    <onunload>ClearProperty(dontslide,Home)</onunload>
    <onunload condition="Integer.IsEqual(Window(Home).Property(wikipedia),1)">SetProperty(wikipedia,2,Home)</onunload>

    <controls>
        <include>Def_Dialog_Info_Overlay_Wiki</include>
        <control type="group">
            <include>Animation_ZoomIn</include>
            <include>Animation_FadeOut</include>

            <!-- <animation type="Conditional" reversible="true" condition="Window.IsVisible(FileBrowser.xml) | Window.IsVisible(DialogProgress.xml) | Window.IsVisible(DialogYesNo.xml) | Window.IsVisible(DialogOK.xml) | Window.IsVisible(DialogSelect.xml) | Window.IsVisible(DialogContextMenu.xml) | Window.IsVisible(DialogButtonMenu.xml)"> -->
                <!-- <effect type="zoom" end="95" start="100" time="200" center="auto" tween="quadratic" easing="in"/> -->
            <!-- </animation> -->

            <animation effect="slide" start="0" end="-490" time="300" delay="0" center="auto" tween="sine" easing="out" condition="Control.HasFocus(1500)">Conditional</animation>

            <!-- HEADER -->

            <control type="group">
                <top>80</top>
                <left>80</left>
                <animation effect="slide" start="0" end="490" time="300" delay="0" center="auto" tween="sine" easing="out" condition="Control.HasFocus(1500)">Conditional</animation>

                <!-- <include content="Def_Left" condition="!Window.IsVisible(DialogMusicInfo.xml)"> -->
                    <!-- <param name="left" value="570" /> -->
                <!-- </include> -->
                <!-- <include content="Def_Left" condition="Window.IsVisible(DialogMusicInfo.xml)"> -->
                    <!-- <param name="left" value="785" /> -->
                <!-- </include> -->

                <!-- ICON -->

                <control type="image">
                    <top>0</top>
                    <width>80</width>
                    <height>80</height>
                    <texture colordiffuse="Panel">common/circle2.png</texture>
                </control>
                <control type="image">
                    <top>-4</top>
                    <left>-4</left>
                    <width>88</width>
                    <height>88</height>
                    <texture colordiffuse="PanelWhite100" border="12">special://skin/extras/icons/world.png</texture>
                </control>

                <!-- MAIN TITLE - IF SEARCH -->

                <control type="label">
                    <left>104</left>
                    <top>0</top>
                    <height>42</height>
                    <width>auto</width>
                    <font>LargeNew</font>
                    <label>$LOCALIZE[31575]</label>
                    <textcolor>Dark1</textcolor>
                    <aligny>center</aligny>
                    <visible>!Window.IsVisible(VideoFullScreen.xml)</visible>
                </control>

                <!-- MAIN TITLE - VIDEO PLAYER -->

                <control type="label">
                    <left>104</left>
                    <top>0</top>
                    <height>42</height>
                    <width>auto</width>
                    <font>LargeNew</font>
                    <label>$VAR[Label_OSD_Title_Big]</label>
                    <textcolor>Dark1</textcolor>
                    <aligny>center</aligny>
                    <visible>Window.IsVisible(VideoFullScreen.xml)</visible>
                </control>

                <!-- SUB TITLE - WIKIPEDIA - ACTUAL ARTICLE -->

                <control type="label" id="9901">
                    <left>104</left>
                    <top>40</top>
                    <height>42</height>
                    <width>auto</width>
                    <font>SmallNavi</font>
                    <!-- <textcolor>Dark1</textcolor> -->
                    <textcolor>$VAR[Color_Highlight]</textcolor>
                    <aligny>center</aligny>
                </control>
            </control>

            <!-- LEFT MENU -->

            <control type="group">
                <left>SidePad</left>
                <top>234</top>
                <right>SidePad</right>
                <height>890</height>
                <control type="list" id="9902">
                    <height>640</height>
                    <!-- <include content="Def_Width" condition="Window.IsVisible(DialogMusicInfo.xml)"> -->
                        <!-- <param name="width" value="PosterH" /> -->
                    <!-- </include> -->
                    <width>428</width>
                    <onright>1500</onright>
                    <onup>9902</onup>
                    <ondown>9902</ondown>
                    <focusposition>2</focusposition>
                    <onfocus>SetProperty(title,$INFO[Control.GetLabel(9901)],Home)</onfocus>
                    <viewtype label="535">list</viewtype>
                    <include>Animation_Scrolltime_Views_List</include>
                    <itemlayout width="428" height="64">
                        <control type="label">
                            <posx>30</posx>
                            <width>370</width>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallNavi</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                        </control>
                    </itemlayout>
                    <focusedlayout width="428" height="64">
                        <control type="image">
                            <width>428</width>
                            <height>64</height>
                            <texture>special://profile/addon_data/script.texturemaker/ArcticZephirRounded/main_h.png</texture>
                            <animation effect="fade" start="100" end="33" condition="!Control.HasFocus(9902)">Conditional</animation>
                        </control>
                        <control type="label">
                            <posx>30</posx>
                            <width>370</width>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallNavi</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Selected</textcolor>
                            <selectedcolor>Selected</selectedcolor>
                        </control>
                    </focusedlayout>
                </control>

                <!-- SCROLLBAR -->

                <include content="Object_Scrollbar_Dialog">
                    <param name="centerright" value="-80"/>
                    <param name="scrollid" value="1500"/>
                    <param name="onleft" value="9902"/>
                    <param name="onright" value="9902"/>
                    <param name="height" value="614"/>
                    <param name="posy" value="0"/>
                </include>

                <!-- RIGHT GROUP -->

                <control type="group">
                    <!-- <include content="Def_Left" condition="Window.IsVisible(DialogMusicInfo.xml)"><param name="left" value="705" /></include> -->
                    <left>490</left>
                    <height>614</height>
                    <control type="group">

                        <!-- TEXT OF THE SECTION FOCUSED IN 9902 -->

                        <control type="textbox" id="9903">
                            <top>-4</top>
                            <height>640</height>
                            <align>left</align>
                            <textcolor>Dark2</textcolor>
                            <font>Medium</font>
                            <pagecontrol>1500</pagecontrol>
                            <right>0</right>
                        </control>

                        <!-- IMAGE ON RIGHT -->

                        <control type="group">
                            <right>-490</right>
                            <width>320</width>
                            <visible>!String.IsEmpty(Window.Property(Image))</visible>
                            <control type="image">
                                <width>320</width>
                                <aspectratio align="center" aligny="top">keep</aspectratio>
                                <texture background="true">$INFO[Window.Property(Image)]</texture>
                            </control>
                            <control type="textbox">
                                <align>center</align>
                                <height>120</height>
                                <bottom>0</bottom>
                                <textcolor>Dark3</textcolor>
                                <font>Small20</font>
                                <label>$INFO[Window.Property(ImageText)]</label>
                            </control>
                        </control>
                    </control>
                </control>
            </control>

            <!-- CONTROL BUTTONS -->

            <control type="group">
                <animation effect="slide" start="0" end="490" time="300" delay="0" center="auto" tween="sine" easing="out" condition="Control.HasFocus(1500)">Conditional</animation>
                <bottom>160</bottom>
                <!-- Creative commons attribution label -->
                <control type="textbox" id="9904">
                    <right>80</right>
                    <!-- <align>center</align> -->
                    <align>right</align>
                    <textcolor>Dark3</textcolor>
                    <font>Mini</font>
                    <bottom>-90</bottom>
                    <height>80</height>
                    <aligny>center</aligny>
                </control>

                <!-- Creative commons licence logo -->
                <control type="image" id="9905">
                    <right>600</right>
                    <align>right</align>
                    <width>130</width>
                    <height>22</height>
                    <bottom>-28</bottom>
                    <aspectratio align="right">keep</aspectratio>
                    <visible>false</visible>
                </control>
            </control>
        </control>
        <include condition="!Window.IsVisible(DialogVideoInfo.xml)">Furniture_Header_NowPlaying</include>
    </controls>
</window>

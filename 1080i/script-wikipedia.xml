<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">9902</defaultcontrol>

    <onload>SetProperty(TMDbHelper.ServicePause,1)</onload>

    <onunload>ClearProperty(dontslide,Home)</onunload>
    <onunload condition="Integer.IsEqual(Window(Home).Property(wikipedia),1)">ClearProperty(wikipedia,Home)</onunload>
    <onunload condition="Skin.HasSetting(osd.open.auto.pause) + Player.HasMedia + Player.HasVideo + Player.Paused + ![Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml)]">PlayerControl(Play)</onunload>

    <controls>
        <include>Def_Dialog_Info_Overlay_Wiki</include>

        <control type="group">
            <include>Animation_Dialog_Fade_In_Zoom</include>
            <include>Animation_Common_Fade_Out</include>

            <animation effect="slide" start="0" end="-490" time="300" delay="0" center="auto" tween="sine" easing="out" condition="Control.HasFocus(1500)">Conditional</animation>

            <!-- HEADER -->

            <control type="group">
                <visible>!Window.IsVisible(DialogBusy.xml)</visible>
                <animation effect="slide" start="0" end="490" time="300" delay="0" center="auto" tween="sine" easing="out" condition="Control.HasFocus(1500)">Conditional</animation>

                <top>40</top>
                <left>40</left>

                <!-- ICON -->

                <control type="image">
                    <width>160</width>
                    <height>160</height>
                    <texture colordiffuse="White70">$VAR[Image_Header_Background]</texture>
                    <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
                </control>
                <control type="image">
                    <top>36</top>
                    <left>36</left>
                    <width>88</width>
                    <height>88</height>
                    <texture colordiffuse="PanelWhite100" border="12">special://skin/extras/icons/world.png</texture>
                </control>

                <!-- MAIN TITLE - IF SEARCH -->

                <control type="label">
                    <top>40</top>
                    <left>144</left>
                    <height>42</height>
                    <width>auto</width>
                    <font>LargeNew</font>
                    <label>$LOCALIZE[31477]</label>
                    <textcolor>Dark1</textcolor>
                    <aligny>center</aligny>
                    <visible>!Window.IsVisible(VideoFullScreen.xml)</visible>
                </control>

                <!-- MAIN TITLE - VIDEO PLAYER -->

                <control type="label">
                    <top>40</top>
                    <left>144</left>
                    <height>42</height>
                    <width>auto</width>
                    <font>LargeNew</font>
                    <label>$VAR[Label_OSD_Title_Big]</label>
                    <textcolor>Dark1</textcolor>
                    <aligny>center</aligny>
                    <visible>Window.IsVisible(VideoFullScreen.xml)</visible>
                </control>

                <!-- SUB TITLE - WIKIPEDIA - ACTUAL ARTICLE -->

                <control type="label" id="9901">
                    <top>80</top>
                    <left>144</left>
                    <height>42</height>
                    <width>auto</width>
                    <font>SmallNavi</font>
                    <textcolor>$VAR[Color_Wikipedia_Format_Link]</textcolor>
                    <aligny>center</aligny>
                </control>
            </control>

            <control type="group">
                <top>View_List_Top</top>
                <left>View_List_Side</left>
                <width>426</width>
                <height>672</height>

                <include content="Def_Art_Full_Background_b24">
                    <param name="colordiffuse" value="White70" />
                </include>
            </control>

            <!-- LEFT MENU -->

            <control type="group">
                <top>234</top>
                <left>View_List_Side</left>
                <width>428</width>
                <height>PosterH</height>

                <control type="panel" id="9902">
                    <include>Animation_Scrolltime_Views_List</include>

                    <onup>9902</onup>
                    <ondown>9902</ondown>
                    <onleft>1505</onleft>
                    <onright>1500</onright>

                    <pagecontrol>1505</pagecontrol>

                    <onfocus>SetProperty(title,$INFO[Control.GetLabel(9901)],Home)</onfocus>

                    <itemlayout width="428" height="64">
                        <control type="label">
                            <left>30</left>
                            <width>370</width>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallNavi</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Dark1</textcolor>
                            <selectedcolor>Dark1</selectedcolor>
                        </control>
                    </itemlayout>
                    <focusedlayout width="428" height="64">
                        <control type="image">
                            <left>16</left>
                            <right>16</right>
                            <texture border="12">special://profile/addon_data/script.texturemaker/ArcticZephirRounded/box_h.png</texture>
                            <animation effect="fade" start="100" end="33" condition="!Control.HasFocus(9902)">Conditional</animation>
                            <include condition="true">Animation_View_List_Focus_Scroll</include>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <width>370</width>
                            <aligny>center</aligny>
                            <height>64</height>
                            <font>SmallNavi</font>
                            <label>$INFO[ListItem.Label]</label>
                            <textcolor>Selected</textcolor>
                            <selectedcolor>Selected</selectedcolor>
                        </control>
                    </focusedlayout>
                </control>

                <!-- SCROLLBAR -->

                <include content="Object_Scrollbar_Dialog_Vertical">
                    <param name="animation_fade_hide" value="false" />
                    <param name="scrollid" value="1505" />
                    <param name="onleft" value="9902" />
                    <param name="onright" value="9902" />
                    <param name="centerright" value="440" />
                    <param name="height" value="PosterH" />
                    <param name="top" value="0" />
                </include>
            </control>

            <!-- RIGHT GROUP -->

            <control type="group">
                <top>234</top>
                <left>570</left>
                <width>1270</width>
                <height>PosterH</height>

                <control type="group">

                    <!-- TEXT OF THE SECTION FOCUSED IN 9902 -->

                    <control type="textbox" id="9903">
                        <include>Animation_Scrolltime_Views_List</include>
                        <top>-4</top>
                        <height>PosterH</height>
                        <align>left</align>
                        <textcolor>Dark2</textcolor>
                        <font>Medium</font>
                        <pagecontrol>1500</pagecontrol>
                        <right>0</right>
                    </control>

                    <!-- IMAGE ON RIGHT -->

                    <control type="group">
                        <right>-490</right>
                        <width>320</width>
                        <visible>!String.IsEmpty(Window.Property(Image))</visible>
                        <control type="image">
                            <width>320</width>
                            <aspectratio align="center" aligny="top">keep</aspectratio>
                            <texture background="true">$INFO[Window.Property(Image)]</texture>
                        </control>
                        <control type="textbox">
                            <align>center</align>
                            <height>120</height>
                            <bottom>0</bottom>
                            <textcolor>Dark3</textcolor>
                            <font>Small20</font>
                            <label>$INFO[Window.Property(ImageText)]</label>
                        </control>
                    </control>
                </control>

                <!-- SCROLLBAR -->

                <include content="Object_Scrollbar_Dialog_Vertical">
                    <param name="scrollid" value="1500" />
                    <param name="onleft" value="9902" />
                    <param name="onright" value="9902" />
                    <param name="onback" value="9902" />
                    <param name="centerright" value="-80" />
                    <param name="height" value="PosterH" />
                    <param name="top" value="0" />
                </include>
            </control>

            <!-- ARROWS -->

            <include content="Object_Arrows_Textbox_Navigation">
                <param name="top" value="140" />
                <param name="bottom" value="910" />
                <param name="left" value="1205" />
                <param name="idtextbox" value="9903" />
            </include>

            <!-- CONTROL BUTTONS -->

            <control type="group">
                <animation effect="slide" start="0" end="490" time="300" delay="0" center="auto" tween="sine" easing="out" condition="Control.HasFocus(1500)">Conditional</animation>
                <bottom>160</bottom>

                <!-- CREATIVE COMMONS ATTRIBUTION LABEL -->

                <control type="textbox" id="9904">
                    <right>80</right>
                    <align>right</align>
                    <textcolor>Dark3</textcolor>
                    <font>Mini</font>
                    <bottom>-90</bottom>
                    <height>80</height>
                    <aligny>center</aligny>
                </control>

                <!-- CREATIVE COMMONS LICENCE LOGO -->

                <control type="image" id="9905">
                    <right>600</right>
                    <align>right</align>
                    <width>130</width>
                    <height>22</height>
                    <bottom>-28</bottom>
                    <aspectratio align="right">keep</aspectratio>
                    <visible>false</visible>
                </control>
            </control>
        </control>

        <include condition="!Window.IsVisible(DialogVideoInfo.xml)">Furniture_Header_NowPlaying</include>
    </controls>
</window>

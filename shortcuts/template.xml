<?xml version="1.0" encoding="UTF-8"?>
<template>
    <!-- WIDGET ITEMS FOR DAILY WEATHER -->

    <other include="WeatherDailyInfoContent">
        <controls>
            <include>Def_Weather_Daily_Items</include>
        </controls>
    </other>

    <!-- WIDGET ITEMS FOR HOURLY WEATHER -->

    <other include="WeatherHourlyInfoContent">
        <controls>
            <include>Def_Weather_Hourly_Items</include>
        </controls>
    </other>

    <!-- WIDGET ITEMS FOR SYSTEM INFO -->

    <other include="SystemInfoContent">
        <controls>
            <include>Def_System_Info_Items</include>
        </controls>
    </other>

    <!-- WIDGET ITEMS FOR SETTINGS -->

    <other include="SettingsInfoContent">
        <controls>
            <include>Def_Settings_Info_Items</include>
        </controls>
    </other>

    <!-- WIDGETS -->

    <submenu include="widgets" container="301" level="1">
        <property name="mainmenuid" tag="mainmenuid" />
        <property name="submenuVisibility" tag="property" attribute="name|submenuVisibility"/>

        <controls>
            <control type="grouplist" id="$PYTHON[int(mainmenuid) * 1000 + 400]">

                <include>Animation_Common</include>

                <include>Animation_NowPlaying_Widget_Fade</include>
                <include>Animation_Scrolltime_Widgets_Container</include>

                <usecontrolcoords>true</usecontrolcoords>

                <itemgap>0</itemgap>

                <orientation>vertical</orientation>

                <!-- HOME HORIZONTAL -->

                <onup condition="$EXP[Home_Is_Horizontal] + !Skin.HasSetting(disable.widgets.onup.go.back.to.last.item)">SetFocus(8888)</onup>
                <onup condition="$EXP[Home_Is_Horizontal] + !Skin.HasSetting(disable.widgets.onup.go.back.to.main.menu) + Skin.HasSetting(disable.widgets.onup.go.back.to.last.item) + !Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">300</onup>
                <onup condition="$EXP[Home_Is_Horizontal] + !Skin.HasSetting(disable.widgets.onup.go.back.to.main.menu) + Skin.HasSetting(disable.widgets.onup.go.back.to.last.item) + Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">SetFocus(4567)</onup>
                <onup condition="$EXP[Home_Is_Horizontal] + Skin.HasSetting(disable.widgets.onup.go.back.to.main.menu) + Skin.HasSetting(disable.widgets.onup.go.back.to.last.item) + Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">SetFocus(301,0)</onup>

                <ondown condition="$EXP[Home_Is_Horizontal] + Skin.HasSetting(enable.widgets.ondown.go.back.to.first.item)">SetFocus(8808)</ondown>
                <ondown condition="$EXP[Home_Is_Horizontal] + !Skin.HasSetting(enable.widgets.ondown.go.back.to.first.item) + Skin.HasSetting(disable.widgets.ondown.go.back.to.position.0) + !Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">300</ondown>
                <ondown condition="$EXP[Home_Is_Horizontal] + !Skin.HasSetting(enable.widgets.ondown.go.back.to.first.item) + [!Skin.HasSetting(disable.widgets.ondown.go.back.to.position.0) | Skin.HasSetting(enable_widgets_to_position_0_onback_menu)]">SetFocus(4567)</ondown>

                <!-- HOME VERTICAL WIDGETS -->

                <onup condition="$EXP[Home_Is_Vertical] + Skin.HasSetting(enable.widgets.onup.go.back.to.last.widget)">9888</onup>
                <onup condition="$EXP[Home_Is_Vertical] + !Skin.HasSetting(enable.widgets.onup.go.back.to.last.widget) + !Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">300</onup>
                <onup condition="$EXP[Home_Is_Vertical] + !Skin.HasSetting(enable.widgets.onup.go.back.to.last.widget) + Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">SetFocus(9567)</onup>

                <ondown condition="$EXP[Home_Is_Vertical] + Skin.HasSetting(enable.widgets.onup.go.back.to.last.widget)">9808</ondown>
                <ondown condition="$EXP[Home_Is_Vertical] + !Skin.HasSetting(enable.widgets.onup.go.back.to.last.widget) + !Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">300</ondown>
                <ondown condition="$EXP[Home_Is_Vertical] + !Skin.HasSetting(enable.widgets.onup.go.back.to.last.widget) + Skin.HasSetting(enable_widgets_to_position_0_onback_menu)">SetFocus(9567)</ondown>

                <!-- LIST WIDGETS ROW -->

                <skinshortcuts insert="widgets">items</skinshortcuts>
            </control>
        </controls>

        <items insert="widgets">

            <!-- IDS -->

            <property name="id" tag="mainmenuid" />

            <!--- WIDGET CONTENT -->

            <property name="widgetTarget" tag="property" attribute="name|widgetTarget"/>
            <property name="widgetTarget">$VAR[Def_Widget_Target]</property>

            <property name="widgetSortby" tag="property" attribute="name|widgetSortby"/>
            <property name="widgetSortorder" tag="property" attribute="name|widgetSortorder"/>
            <property name="browse">never</property>

            <property name="widgetlimit" tag="property" attribute="name|widget" value="epg">5</property>
            <property name="widgetlimit">$VAR[Value_Widget_Limit]</property>

            <property name="widgetPath" tag="property" attribute="name|list" />
            <property name="widgetPath">$VAR[Def_Widget_Content]</property>

            <!--- WIDGET LAYOUT -->

            <property name="isnormallayout" tag="property" attribute="name|widget" value="epg">false</property>
            <property name="isnormallayout" tag="property" attribute="name|widgetTarget" value="weather">false</property>
            <property name="isnormallayout" tag="property" attribute="name|widgetTarget" value="system">false</property>
            <property name="isnormallayout" tag="property" attribute="name|widgetTarget" value="settings">false</property>
            <property name="isnormallayout" tag="property" attribute="name|widget" value="mysubmenu">false</property>
            <property name="isnormallayout">true</property>

            <property name="issettingslayout" tag="property" attribute="name|widgetTarget" value="settings">true</property>
            <property name="issettingslayout">false</property>

            <property name="issystemlayout" tag="property" attribute="name|widgetTarget" value="system">true</property>
            <property name="issystemlayout">false</property>

            <property name="issubmenulayout" tag="property" attribute="name|widget" value="mysubmenu">true</property>
            <property name="issubmenulayout">false</property>

            <property name="isweatherlayout" tag="property" attribute="name|widgetTarget" value="weather">true</property>
            <property name="isweatherlayout">false</property>

            <property name="ispvrlayout" tag="property" attribute="name|widget" value="epg">true</property>
            <property name="ispvrlayout">false</property>

            <!--- HEIGHT -->

            <property name="layoutheight" tag="property" attribute="name|widgetaspect" value="SquareMediumSubmenu">175</property>
            <property name="layoutheight" tag="property" attribute="name|widgetaspect" value="SquareSmallSubmenu">125</property>
            <property name="layoutheight" tag="property" attribute="name|widget" value="mysubmenu">325</property>
            <property name="layoutheight" tag="property" attribute="name|widgetFullscreen" value="yes">710</property>
            <property name="layoutheight">325</property>

            <!--- LAYOUT FULLSCREEN ? -->

            <property name="isfullscreenwidget" tag="property" attribute="name|widgetFullscreen" value="yes">true</property>
            <property name="isfullscreenwidget">false</property>

            <!--- LABEL VISIBLE ? -->

            <property name="labelisvisible" tag="property" attribute="name|widget" value="mysubmenu">false</property>
            <property name="labelisvisible" tag="property" attribute="name|widgetTarget" value="weather">false</property>
            <property name="labelisvisible" tag="property" attribute="name|widgetTarget" value="system">false</property>
            <property name="labelisvisible">true</property>

            <!-- LABEL -->

            <property name="widgetName" tag="label" />
            <property name="widgetName">$LOCALIZE[31087]</property>

            <!-- ITEM MORE -->

            <property name="morevisible" tag="property" attribute="name|widgetTarget" value="system">false</property>
            <property name="morevisible" tag="property" attribute="name|widgetTarget" value="weather">false</property>
            <property name="morevisible" tag="property" attribute="name|widgetTarget" value="pvr">false</property>
            <property name="morevisible" tag="property" attribute="name|widgetTarget" value="tvguide">false</property>
            <property name="morevisible" tag="property" attribute="name|widget" value="mysubmenu">false</property>
            <property name="morevisible">true</property>

            <property name="widgetauto" tag="property" attribute="name|widgetAuto" value="$NUMBER[5000]">5000</property>
            <property name="widgetauto" tag="property" attribute="name|widgetAuto" value="$NUMBER[7000]">7000</property>
            <property name="widgetauto" tag="property" attribute="name|widgetAuto" value="$NUMBER[10000]">10000</property>
            <property name="widgetauto" tag="property" attribute="name|widgetAuto" value="$NUMBER[15000]">15000</property>
            <property name="widgetauto" tag="property" attribute="name|widgetAuto" value="$NUMBER[20000]">20000</property>
            <property name="widgetauto" tag="property" attribute="name|widgetAuto" value="$NUMBER[25000]">25000</property>

            <property name="widgetlisttype" tag="property" attribute="name|widgetListType"/>
            <property name="widgetlisttype">fixedlist</property>

            <property name="widgetclearlogothumb" tag="property" attribute="name|widgetClearLogoThumb" value="no">false</property>
            <property name="widgetclearlogothumb">true</property>

            <property name="aspectratio" tag="property" attribute="name|widgetAspectRatio"/>
            <property name="aspectratio">keep</property>

            <property name="distance" tag="property" attribute="name|widgetEdgeDistance" value="yes">30</property>
            <property name="distance">10</property>

            <property name="orientation" tag="property" attribute="name|widget" value="epg">vertical</property>
            <property name="orientation">horizontal</property>

            <!-- MOVEMENT -->

            <property name="widgetmovementcheck" tag="property" attribute="name|widgetTarget" value="settings">4</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetTarget" value="system">4</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="Square">4</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="SquareSmall">7</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="Banner">1</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="Thumbnail">2</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="Fanart">2</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="ThumbnailSmall">3</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="ThumbnailPosterSmall">5</property>
            <property name="widgetmovementcheck" tag="property" attribute="name|widgetaspect" value="FanartSmall">5</property>
            <property name="widgetmovementcheck">7</property>

            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetTarget" value="settings">3</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetTarget" value="system">3</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="Square">3</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="SquareSmall">6</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="Banner">1</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="Thumbnail">1</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="Fanart">1</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="ThumbnailSmall">2</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="ThumbnailPosterSmall">4</property>
            <property name="widgetmovementcheck2" tag="property" attribute="name|widgetaspect" value="FanartSmall">4</property>
            <property name="widgetmovementcheck2">6</property>

            <!-- STYLE -->

            <property name="widgetStyle" tag="property" attribute="name|widgetTarget" value="settings">Square</property>
            <property name="widgetStyle" tag="property" attribute="name|widgetTarget" value="system">Square</property>
            <property name="widgetStyle" tag="property" attribute="name|widgetaspect" value="SquareSmall">SqSmallTb</property>
            <property name="widgetStyle" tag="property" attribute="name|widgetaspect" value="ThumbnailPosterSmall">ThumbPoSmall</property>
            <property name="widgetStyle" tag="property" attribute="name|widgetaspect" value="ThumbnailSmall">ThumbSmall</property>
            <property name="widgetStyle" tag="property" attribute="name|widgetaspect" value="FanartSmall">FanSmall</property>
            <property name="widgetStyle" tag="property" attribute="name|widgetaspect" />
            <property name="widgetStyle">Poster</property>

            <!-- STYLE SUB MENU -->

            <property name="widgetaspectsubcheck" tag="property" attribute="name|widgetaspect" value="SquareSmallSubmenu">SqSmall</property>
            <property name="widgetaspectsubcheck" tag="property" attribute="name|widgetaspect" value="SquareMediumSubmenu">SqMedium</property>
            <property name="widgetaspectsubcheck">Square</property>

            <controls>

                <!-- WIDGET - LABEL - TITLE -->

                <control type="group"  id="$PYTHON[int(mainmenuid) * 1000 + 900 + int(id)]">

                    <visible>String.IsEqual(Container(300).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility])</visible>
                    <visible>[Integer.IsGreater(Container($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]).NumItems,0) | Container($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]).IsUpdating]</visible>

                    <include content="Animation_Widget_Direction" condition="!Skin.HasSetting(set.skin.config.perf) + $EXP[Home_Is_Vertical]">
                        <param name="visible" value="[String.IsEqual(Container(300).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility])]" />
                    </include>

                    <control type="grouplist"  id="$PYTHON[int(mainmenuid) * 1000 + 800 + int(id)]">
                        <include content="Widget_Title_Label" condition="!Skin.HasSetting(hide.widget.title)">
                            <param name="focusid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                            <param name="idshort" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                            <param name="animation_condition" value="!Control.HasFocus($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)])" />
                            <param name="submenuVisibility">$SKINSHORTCUTS[submenuVisibility]</param>
                            <param name="isfullscreenwidget">$SKINSHORTCUTS[isfullscreenwidget]</param>
                            <param name="widget_label" value="$SKINSHORTCUTS[widgetName]" />
                            <param name="busy_visible" value="Integer.IsEqual(Container($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]).NumItems,0) | Container($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]).IsUpdating" />
                        </include>
                    </control>
                </control>

                <!-- WIDGET - INFO SUB -->

                <control type="group" id="$PYTHON[int(mainmenuid) * 1000 + 700 + int(id)]">

                    <visible>String.IsEqual(Container(300).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility])</visible>
                    <visible>[Integer.IsGreater(Container($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]).NumItems,0) | Container($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]).IsUpdating]</visible>
                    <visible>[$SKINSHORTCUTS[isfullscreenwidget] | Skin.HasSetting(homemenu.netflix)]</visible>

                    <include content="Animation_FadeOut_Home_Fullscreen_Widget">
                        <param name="condition" value="!Control.HasFocus($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)])"/>
                    </include>

                    <include content="Animation_Widget_Direction" condition="!Skin.HasSetting(set.skin.config.perf) + $EXP[Home_Is_Vertical]">
                        <param name="visible" value="[String.IsEqual(Container(300).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility])]" />
                    </include>

                    <control type="grouplist">
                        <include content="Home_Widgets_Info_Sub" condition="$SKINSHORTCUTS[isnormallayout] | $SKINSHORTCUTS[ispvrlayout]">
                            <param name="id" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                            <param name="labelisvisible" value="$SKINSHORTCUTS[labelisvisible]"/>
                            <param name="submenuVisibility">$SKINSHORTCUTS[submenuVisibility]</param>
                            <param name="isfullscreenwidget">$SKINSHORTCUTS[isfullscreenwidget]</param>
                        </include>
                    </control>

                    <control type="grouplist">
                        <include condition="$SKINSHORTCUTS[isweatherlayout]">Home_Widget_Weather_Info_Sub</include>
                    </control>

                    <control type="grouplist">
                        <include content="Home_Widget_System_Info_Sub" condition="$SKINSHORTCUTS[issystemlayout] | $SKINSHORTCUTS[issettingslayout]">
                            <param name="issettingslayout" value="$SKINSHORTCUTS[issettingslayout]"/>
                            <param name="id" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        </include>
                    </control>

                    <control type="grouplist">
                        <include content="Home_Widget_ClearArt" condition="$SKINSHORTCUTS[isnormallayout]">
                            <param name="id" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        </include>
                    </control>
                </control>

                <!-- WIDGETS LIST ITEM -->

                <control type="$SKINSHORTCUTS[widgetlisttype]" id="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]">

                    <include content="Animation_Widget_Direction" condition="!Skin.HasSetting(set.skin.config.perf)">
                        <param name="visible" value="[String.IsEqual(Container(300).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility])]" />
                    </include>

                    <include content="Def_Multi_Widget_Container">
                        <param name="id" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        <param name="height" value="$SKINSHORTCUTS[layoutheight]"/>
                        <param name="idshort" value="$PYTHON[int(mainmenuid) * 100 + 60]"/>
                        <param name="backid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + 1]"/>
                        <param name="AutoTime" value="$SKINSHORTCUTS[widgetauto]"/>
                        <param name="orientation" value="$SKINSHORTCUTS[orientation]"/>
                        <param name="movement">$SKINSHORTCUTS[widgetmovementcheck]</param>
                        <param name="movement2">$SKINSHORTCUTS[widgetmovementcheck2]</param>
                        <param name="AutoScrollCondition" value="!Control.HasFocus($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]) + !String.IsEmpty(Container(300).ListItem.Property(widgetAuto)) + !String.IsEqual(Container(300).ListItem.Property(widgetListType),list) + System.IdleTime(1)"/>
                        <param name="animation_condition" value="!Control.HasFocus($PYTHON[int(mainmenuid) * 1000 + 600 + int(id)])" />
                        <param name="visible" value="String.IsEqual(Container(300).ListItem.Property(submenuVisibility),$SKINSHORTCUTS[submenuVisibility])" />
                        <param name="submenuVisibility">$SKINSHORTCUTS[submenuVisibility]</param>
                        <param name="isfullscreenwidget">$SKINSHORTCUTS[isfullscreenwidget]</param>
                    </include>

                    <!-- ITEM LAYOUTS -->

                    <include content="Def_Normal_Layout_Item" condition="$SKINSHORTCUTS[isnormallayout]">
                        <param name="shortcutsclearlogo" value="$SKINSHORTCUTS[widgetclearlogothumb]"/>
                        <param name="aspectratio" value="$SKINSHORTCUTS[aspectratio]"/>
                        <param name="distance" value="$SKINSHORTCUTS[distance]"/>
                        <param name="Banner" value="$PYTHON['true' if widgetStyle in 'Banner' else 'false']"/>
                        <param name="Thumbnail" value="$PYTHON['true' if widgetStyle in 'Thumbnail' else 'false']"/>
                        <param name="Fanart" value="$PYTHON['true' if widgetStyle in 'Fanart' else 'false']"/>
                        <param name="FanartSmall" value="$PYTHON['true' if widgetStyle in 'FanSmall' else 'false']"/>
                        <param name="ThumbnailSmall" value="$PYTHON['true' if widgetStyle in 'ThumbSmall' else 'false']"/>
                        <param name="ThumbnailPosterSmall" value="$PYTHON['true' if widgetStyle in 'ThumbPoSmall' else 'false']"/>
                        <param name="Square" value="$PYTHON['true' if widgetStyle in 'Square' else 'false']"/>
                        <param name="SquareSmall" value="$PYTHON['true' if widgetStyle in 'SqSmallTb' else 'false']"/>
                    </include>

                    <include condition="$SKINSHORTCUTS[ispvrlayout]">Def_Pvr_Layout_Item</include>

                    <include content="Def_Weather_Layout_Item" condition="$SKINSHORTCUTS[isweatherlayout]">
                        <param name="Fanart" value="$PYTHON['true' if widgetStyle in 'Fanart' else 'false']"/>
                        <param name="Square" value="$PYTHON['true' if widgetStyle in 'Square' else 'false']"/>
                    </include>

                    <include condition="$SKINSHORTCUTS[issystemlayout]">Def_System_Layout_Item</include>

                    <include condition="$SKINSHORTCUTS[issettingslayout]">Def_System_Layout_Item</include>

                    <include content="Def_SubMenu_Layout_Item" condition="$SKINSHORTCUTS[issubmenulayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        <param name="shortcutsclearlogo" value="$SKINSHORTCUTS[widgetclearlogothumb]"/>
                        <param name="aspectratio" value="$SKINSHORTCUTS[aspectratio]"/>
                        <param name="distance" value="$SKINSHORTCUTS[distance]"/>
                        <param name="SquareMediumSubmenu" value="$PYTHON['true' if widgetaspectsubcheck in 'SqMedium' else 'false']"/>
                        <param name="SquareSmallSubmenu" value="$PYTHON['true' if widgetaspectsubcheck in 'SqSmall' else 'false']"/>
                    </include>

                    <!-- FOCUS LAYOUTS -->

                    <include content="Def_Normal_Layout_Item_Focus" condition="$SKINSHORTCUTS[isnormallayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        <param name="shortcutsclearlogo" value="$SKINSHORTCUTS[widgetclearlogothumb]"/>
                        <param name="aspectratio" value="$SKINSHORTCUTS[aspectratio]"/>
                        <param name="distance" value="$SKINSHORTCUTS[distance]"/>
                        <param name="Banner" value="$PYTHON['true' if widgetStyle in 'Banner' else 'false']"/>
                        <param name="Thumbnail" value="$PYTHON['true' if widgetStyle in 'Thumbnail' else 'false']"/>
                        <param name="Fanart" value="$PYTHON['true' if widgetStyle in 'Fanart' else 'false']"/>
                        <param name="FanartSmall" value="$PYTHON['true' if widgetStyle in 'FanSmall' else 'false']"/>
                        <param name="ThumbnailSmall" value="$PYTHON['true' if widgetStyle in 'ThumbSmall' else 'false']"/>
                        <param name="ThumbnailPosterSmall" value="$PYTHON['true' if widgetStyle in 'ThumbPoSmall' else 'false']"/>
                        <param name="Square" value="$PYTHON['true' if widgetStyle in 'Square' else 'false']"/>
                        <param name="SquareSmall" value="$PYTHON['true' if widgetStyle in 'SqSmallTb' else 'false']"/>
                    </include>

                    <include content="Def_Pvr_Layout_Item_Focus" condition="$SKINSHORTCUTS[ispvrlayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                    </include>

                    <include content="Def_Weather_Layout_Item_Focus" condition="$SKINSHORTCUTS[isweatherlayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        <param name="Fanart" value="$PYTHON['true' if widgetStyle in 'Fanart' else 'false']"/>
                        <param name="Square" value="$PYTHON['true' if widgetStyle in 'Square' else 'false']"/>
                    </include>

                    <include content="Def_System_Layout_Item_Focus" condition="$SKINSHORTCUTS[issystemlayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                    </include>

                    <include content="Def_System_Layout_Item_Focus" condition="$SKINSHORTCUTS[issettingslayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                    </include>

                    <include content="Def_SubMenu_Layout_Item_Focus" condition="$SKINSHORTCUTS[issubmenulayout]">
                        <param name="shortcutsid" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]"/>
                        <param name="shortcutsclearlogo" value="$SKINSHORTCUTS[widgetclearlogothumb]"/>
                        <param name="aspectratio" value="$SKINSHORTCUTS[aspectratio]"/>
                        <param name="distance" value="$SKINSHORTCUTS[distance]"/>
                        <param name="SquareMediumSubmenu" value="$PYTHON['true' if widgetaspectsubcheck in 'SqMedium' else 'false']"/>
                        <param name="SquareSmallSubmenu" value="$PYTHON['true' if widgetaspectsubcheck in 'SqSmall' else 'false']"/>
                    </include>

                    <!-- CONTENT -->

                    <content limit="$SKINSHORTCUTS[widgetlimit]" target="$SKINSHORTCUTS[widgetTarget]" sortby="$SKINSHORTCUTS[widgetSortby]" sortorder="$SKINSHORTCUTS[widgetSortorder]" browse="$SKINSHORTCUTS[browse]">$SKINSHORTCUTS[widgetPath]</content>

                    <!-- MORE CONTENT -->

                    <include content="morecontent" condition="Skin.HasSetting(enable.morewidget) + $SKINSHORTCUTS[morevisible]">
                        <param name="id" value="$PYTHON[int(mainmenuid) * 1000 + 600 + int(id)]" />
                        <param name="target" value="$SKINSHORTCUTS[widgetTarget]" />
